<% content_for :title, "Supervisor Dashboard - MOVICUOTAS" %>

<div class="min-h-screen bg-gray-50">
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%# === HEADER === %>
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-[#125282]">Dashboard de Supervisor</h1>
    <p class="text-gray-500 mt-1">Resumen de cobranza, pagos y dispositivos</p>
  </div>

  <%# === CTA BUTTONS === %>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
    <%= link_to new_admin_payment_path, class: "flex items-center gap-4 bg-green-50 border border-green-200 rounded-xl p-5 shadow-sm hover:shadow-lg hover:bg-green-100 transition-all duration-200 group" do %>
      <div class="bg-green-600 p-3.5 rounded-xl shadow-md group-hover:scale-105 transition-transform">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"/>
        </svg>
      </div>
      <div>
        <p class="font-bold text-green-800 text-lg">Registrar Pago</p>
        <p class="text-sm text-green-600">Ingresar un nuevo pago de cliente</p>
      </div>
    <% end %>

    <%= link_to admin_payments_path(status: "pending"), class: "flex items-center gap-4 bg-amber-50 border border-amber-200 rounded-xl p-5 shadow-sm hover:shadow-lg hover:bg-amber-100 transition-all duration-200 group" do %>
      <div class="relative bg-amber-500 p-3.5 rounded-xl shadow-md group-hover:scale-105 transition-transform">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
        </svg>
        <% if @dashboard_data[:pending_verifications] > 0 %>
          <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full shadow"><%= @dashboard_data[:pending_verifications] %></span>
        <% end %>
      </div>
      <div>
        <p class="font-bold text-amber-800 text-lg">Verificar Comprobantes</p>
        <p class="text-sm text-amber-700">
          <% if @dashboard_data[:pending_verifications] > 0 %>
            <span class="font-semibold"><%= @dashboard_data[:pending_verifications] %> pendientes</span> de verificacion
          <% else %>
            No hay comprobantes pendientes
          <% end %>
        </p>
      </div>
    <% end %>

    <% pending_down_payments = Loan.down_payment_pending_verification.count %>
    <%= link_to admin_down_payments_path, class: "flex items-center gap-4 bg-violet-50 border border-violet-200 rounded-xl p-5 shadow-sm hover:shadow-lg hover:bg-violet-100 transition-all duration-200 group" do %>
      <div class="relative bg-violet-600 p-3.5 rounded-xl shadow-md group-hover:scale-105 transition-transform">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z"/>
        </svg>
        <% if pending_down_payments > 0 %>
          <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full shadow"><%= pending_down_payments %></span>
        <% end %>
      </div>
      <div>
        <p class="font-bold text-violet-800 text-lg">Primas Pendientes</p>
        <p class="text-sm text-violet-700">
          <% if pending_down_payments > 0 %>
            <span class="font-semibold"><%= pending_down_payments %> pendientes</span> de verificacion
          <% else %>
            No hay primas pendientes
          <% end %>
        </p>
      </div>
    <% end %>
  </div>

  <%# === KPI CARDS === %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 mb-8">
    <%# Card 1: Cuotas en Mora %>
    <%= link_to supervisor_overdue_devices_path, class: "block bg-white rounded-xl border-l-4 border-l-red-500 border border-gray-200 shadow-sm hover:shadow-lg hover:-translate-y-0.5 p-5 transition-all duration-200 group" do %>
      <div class="flex items-center justify-between mb-3">
        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Cuotas en Mora</p>
        <div class="bg-red-100 p-2 rounded-lg">
          <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @dashboard_data[:overdue_devices][:total_count] %></p>
      <p class="text-sm text-red-600 font-medium mt-1">L. <%= number_with_precision(@dashboard_data[:overdue_devices][:total_amount], precision: 2, delimiter: ",") %></p>
    <% end %>

    <%# Card 2: Dispositivos Bloqueados %>
    <%= link_to supervisor_overdue_devices_path, class: "block bg-white rounded-xl border-l-4 border-l-orange-500 border border-gray-200 shadow-sm hover:shadow-lg hover:-translate-y-0.5 p-5 transition-all duration-200 group" do %>
      <div class="flex items-center justify-between mb-3">
        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Bloqueados</p>
        <div class="bg-orange-100 p-2 rounded-lg">
          <svg class="h-5 w-5 text-orange-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @dashboard_data[:blocked_devices][:locked_count] %></p>
      <p class="text-sm text-orange-600 font-medium mt-1">Ultimos 7 dias: <%= @dashboard_data[:blocked_devices][:recent_locked] %></p>
    <% end %>

    <%# Card 3: Pendientes de Bloqueo %>
    <%= link_to supervisor_overdue_devices_path, class: "block bg-white rounded-xl border-l-4 border-l-yellow-500 border border-gray-200 shadow-sm hover:shadow-lg hover:-translate-y-0.5 p-5 transition-all duration-200 group" do %>
      <div class="flex items-center justify-between mb-3">
        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Pendientes Bloquear</p>
        <div class="bg-yellow-100 p-2 rounded-lg">
          <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @dashboard_data[:blocked_devices][:pending_count] %></p>
      <p class="text-sm text-yellow-600 font-medium mt-1">En proceso de bloqueo</p>
    <% end %>

    <%# Card 4: Pagos del Mes %>
    <%= link_to vendor_payments_path, class: "block bg-white rounded-xl border-l-4 border-l-green-500 border border-gray-200 shadow-sm hover:shadow-lg hover:-translate-y-0.5 p-5 transition-all duration-200 group" do %>
      <div class="flex items-center justify-between mb-3">
        <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Pagos del Mes</p>
        <div class="bg-green-100 p-2 rounded-lg">
          <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @dashboard_data[:this_month_payments][:count] %></p>
      <p class="text-sm text-green-600 font-medium mt-1">L. <%= number_with_precision(@dashboard_data[:this_month_payments][:amount], precision: 2, delimiter: ",") %></p>
    <% end %>
  </div>

  <%# === TWO COLUMNS: Mora por Antiguedad + Accesos Rapidos === %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <%# Columna izquierda: Mora por Antiguedad %>
    <div class="bg-white shadow-md rounded-xl border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-5">
        <h2 class="text-lg font-bold text-gray-900">Mora por Antiguedad</h2>
        <%= link_to "Ver todos", supervisor_overdue_devices_path, class: "text-sm text-[#125282] hover:underline font-medium" %>
      </div>

      <% by_days = @dashboard_data[:overdue_devices][:by_days] %>
      <% max_val = by_days.values.max || 1 %>
      <% total_overdue = @dashboard_data[:overdue_devices][:total_count] %>

      <div class="space-y-5">
        <%# 1-7 dias %>
        <div>
          <div class="flex items-center justify-between mb-1.5">
            <span class="text-sm font-medium text-gray-700">1-7 dias</span>
            <span class="text-sm font-bold text-yellow-600"><%= by_days[:"1-7"] %></span>
          </div>
          <div class="w-full bg-gray-100 rounded-full h-3.5">
            <div class="bg-yellow-400 h-3.5 rounded-full transition-all duration-500" style="width: <%= max_val > 0 ? (by_days[:"1-7"].to_f / max_val * 100).round : 0 %>%"></div>
          </div>
        </div>

        <%# 8-15 dias %>
        <div>
          <div class="flex items-center justify-between mb-1.5">
            <span class="text-sm font-medium text-gray-700">8-15 dias</span>
            <span class="text-sm font-bold text-amber-600"><%= by_days[:"8-15"] %></span>
          </div>
          <div class="w-full bg-gray-100 rounded-full h-3.5">
            <div class="bg-amber-400 h-3.5 rounded-full transition-all duration-500" style="width: <%= max_val > 0 ? (by_days[:"8-15"].to_f / max_val * 100).round : 0 %>%"></div>
          </div>
        </div>

        <%# 16-30 dias %>
        <div>
          <div class="flex items-center justify-between mb-1.5">
            <span class="text-sm font-medium text-gray-700">16-30 dias</span>
            <span class="text-sm font-bold text-red-500"><%= by_days[:"16-30"] %></span>
          </div>
          <div class="w-full bg-gray-100 rounded-full h-3.5">
            <div class="bg-red-400 h-3.5 rounded-full transition-all duration-500" style="width: <%= max_val > 0 ? (by_days[:"16-30"].to_f / max_val * 100).round : 0 %>%"></div>
          </div>
        </div>

        <%# 30+ dias %>
        <div>
          <div class="flex items-center justify-between mb-1.5">
            <span class="text-sm font-medium text-gray-700">30+ dias</span>
            <span class="text-sm font-bold text-red-700"><%= by_days[:"30+"] %></span>
          </div>
          <div class="w-full bg-gray-100 rounded-full h-3.5">
            <div class="bg-red-600 h-3.5 rounded-full transition-all duration-500" style="width: <%= max_val > 0 ? (by_days[:"30+"].to_f / max_val * 100).round : 0 %>%"></div>
          </div>
        </div>
      </div>

      <% if total_overdue > 0 %>
        <div class="mt-5 pt-4 border-t border-gray-200 flex items-center justify-between">
          <p class="text-sm text-gray-500">Total en mora</p>
          <p class="text-lg font-bold text-red-600"><%= total_overdue %> cuotas</p>
        </div>
      <% end %>
    </div>

    <%# Columna derecha: Accesos Rapidos %>
    <div class="bg-white shadow-md rounded-xl border border-gray-200 p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-5">Accesos Rapidos</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        <%# Dispositivos en Mora %>
        <%= link_to supervisor_overdue_devices_path, class: "flex items-center p-3.5 rounded-xl bg-red-50 border border-red-100 hover:bg-red-100 hover:shadow-md transition-all duration-200 group" do %>
          <div class="bg-red-500 p-2.5 rounded-lg mr-3 shadow-sm">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-900">Dispositivos en Mora</p>
            <p class="text-xs text-gray-500">Ver dispositivos atrasados</p>
          </div>
        <% end %>

        <%# Prestamos %>
        <%= link_to vendor_loans_path, class: "flex items-center p-3.5 rounded-xl bg-blue-50 border border-blue-100 hover:bg-blue-100 hover:shadow-md transition-all duration-200 group" do %>
          <div class="bg-[#125282] p-2.5 rounded-lg mr-3 shadow-sm">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-900">Prestamos</p>
            <p class="text-xs text-gray-500">Consultar prestamos</p>
          </div>
        <% end %>

        <%# Pagos %>
        <%= link_to vendor_payments_path, class: "flex items-center p-3.5 rounded-xl bg-green-50 border border-green-100 hover:bg-green-100 hover:shadow-md transition-all duration-200 group" do %>
          <div class="bg-green-600 p-2.5 rounded-lg mr-3 shadow-sm">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-900">Pagos</p>
            <p class="text-xs text-gray-500">Historial de pagos</p>
          </div>
        <% end %>

        <%# Comprobantes %>
        <%= link_to admin_payments_path(status: "pending"), class: "flex items-center p-3.5 rounded-xl bg-blue-50 border border-blue-100 hover:bg-blue-100 hover:shadow-md transition-all duration-200 group" do %>
          <div class="bg-blue-600 p-2.5 rounded-lg mr-3 shadow-sm">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex items-center gap-2">
            <div>
              <p class="text-sm font-semibold text-gray-900">Comprobantes</p>
              <p class="text-xs text-gray-500">Pendientes de verificar</p>
            </div>
            <% if @dashboard_data[:pending_verifications] > 0 %>
              <span class="bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded-full"><%= @dashboard_data[:pending_verifications] %></span>
            <% end %>
          </div>
        <% end %>

        <%# Reportes de Mora - full width %>
        <%= link_to supervisor_collection_reports_path, class: "flex items-center p-3.5 rounded-xl bg-indigo-50 border border-indigo-100 hover:bg-indigo-100 hover:shadow-md transition-all duration-200 group sm:col-span-2" do %>
          <div class="bg-indigo-600 p-2.5 rounded-lg mr-3 shadow-sm">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-900">Reportes de Mora</p>
            <p class="text-xs text-gray-500">Generar reportes por sucursal y dias de atraso</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# === ACTIVIDAD RECIENTE === %>
  <div class="bg-white shadow-md rounded-xl border border-gray-200 overflow-hidden">
    <div class="flex items-center justify-between px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h2 class="text-lg font-bold text-gray-900">Actividad Reciente de Bloqueos</h2>
      <%= link_to "Ver historial completo", supervisor_overdue_devices_path, class: "text-sm text-[#125282] hover:underline font-medium" %>
    </div>

    <% recent_blocks = @dashboard_data[:recent_blocks] %>

    <% if recent_blocks.any? %>
      <%# Desktop: tabla %>
      <div class="hidden md:block">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dispositivo (IMEI)</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Motivo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bloqueado por</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <% recent_blocks.each do |lock_state| %>
              <tr class="hover:bg-blue-50 transition-colors">
                <td class="px-6 py-4 text-sm text-gray-600"><%= lock_state.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                <td class="px-6 py-4 text-sm font-mono text-gray-900"><%= lock_state.device.imei %></td>
                <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= lock_state.device.loan&.customer&.full_name || "—" %></td>
                <td class="px-6 py-4 text-sm text-gray-600"><%= lock_reason_es(lock_state.reason) %></td>
                <td class="px-6 py-4 text-sm text-gray-600"><%= lock_state.initiated_by&.full_name || "Sistema" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%# Mobile: cards %>
      <div class="md:hidden p-4 space-y-3">
        <% recent_blocks.each do |lock_state| %>
          <div class="bg-red-50 border border-red-100 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-xs text-gray-500"><%= lock_state.created_at.strftime("%d/%m/%Y %H:%M") %></span>
              <span class="bg-red-500 text-white text-xs font-medium px-2 py-0.5 rounded-full">Bloqueado</span>
            </div>
            <p class="text-sm font-medium text-gray-900"><%= lock_state.device.loan&.customer&.full_name || "—" %></p>
            <p class="text-xs font-mono text-gray-500 mt-1">IMEI: <%= lock_state.device.imei %></p>
            <% if lock_state.reason.present? %>
              <p class="text-xs text-gray-500 mt-1">Motivo: <%= lock_reason_es(lock_state.reason) %></p>
            <% end %>
            <p class="text-xs text-gray-400 mt-1">Por: <%= lock_state.initiated_by&.full_name || "Sistema" %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500">No hay bloqueos recientes</p>
      </div>
    <% end %>
  </div>
</div>
</div>

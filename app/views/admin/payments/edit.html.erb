<% content_for :title, "Editar Pago - Admin - MOVICUOTAS" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Page header -->
  <div class="mb-6">
    <%= link_to "← Volver al Pago", admin_payment_path(@payment), class: "text-[#125282] hover:underline text-sm font-medium" %>
    <h1 class="text-2xl lg:text-3xl font-bold text-[#125282] mt-2">Editar Pago</h1>
    <p class="text-gray-600 mt-2">Actualiza la información del pago #<%= @payment.id %></p>
  </div>

  <!-- Status Badge -->
  <% status_colors = { "pending" => "bg-yellow-100 text-yellow-800 border-yellow-300", "verified" => "bg-green-100 text-green-800 border-green-300", "rejected" => "bg-red-100 text-red-800 border-red-300" } %>
  <% status_labels = { "pending" => "Pendiente", "verified" => "Verificado", "rejected" => "Rechazado" } %>
  <div class="mb-4">
    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium border <%= status_colors[@payment.verification_status] %>">
      Estado: <%= status_labels[@payment.verification_status] %>
    </span>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 sm:p-8">
    <%= render "form" %>
  </div>
</div>

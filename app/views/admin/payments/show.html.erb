<% content_for :title, "Detalles del Pago - Admin - MOVICUOTAS" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Page header -->
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-[#125282]">Pago del <%= @payment.payment_date.strftime("%d de %B de %Y") %></h1>
      <p class="text-gray-600 mt-2">L. <%= number_with_delimiter(@payment.amount, delimiter: ',') %></p>
    </div>
    <div>
      <span class="px-4 py-2 text-lg rounded-lg font-medium <%= @payment.verified? ? 'bg-green-100 text-green-800' : @payment.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
        <%= verification_status_es(@payment.verification_status) %>
      </span>
    </div>
  </div>

  <!-- Payment details grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Payment Information -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h2 class="text-xl font-semibold text-[#125282] mb-6">Información del Pago</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-600">Monto</label>
          <p class="text-2xl font-bold text-gray-900 mt-1">L. <%= number_with_delimiter(@payment.amount, delimiter: ',') %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600">Fecha de Pago</label>
          <p class="text-lg text-gray-900 mt-1"><%= @payment.payment_date.strftime("%d de %B de %Y") %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600">Método de Pago</label>
          <p class="text-lg text-gray-900 mt-1"><%= payment_method_es(@payment.payment_method) %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600">Referencia</label>
          <p class="text-lg text-gray-900 mt-1"><%= @payment.reference_number || "—" %></p>
        </div>
      </div>
    </div>

    <!-- Verification Information -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h2 class="text-xl font-semibold text-[#125282] mb-6">Verificación</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-600">Estado</label>
          <p class="text-lg text-gray-900 mt-1">
            <span class="px-4 py-2 rounded-lg font-medium <%= @payment.verified? ? 'bg-green-100 text-green-800' : @payment.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
              <%= verification_status_es(@payment.verification_status) %>
            </span>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600">Monto Asignado a Cuotas</label>
          <p class="text-lg text-gray-900 mt-1">L. <%= number_with_delimiter(@payment.total_allocated, delimiter: ',') %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-600">Monto Sin Asignar</label>
          <p class="text-lg font-semibold <%= @payment.unallocated_amount > 0 ? 'text-orange-600' : 'text-green-600' %> mt-1">
            L. <%= number_with_delimiter(@payment.unallocated_amount, delimiter: ',') %>
          </p>
        </div>

        <% if @payment.pending? && policy(@payment).verify? %>
          <div class="pt-4 border-t border-gray-200">
            <label class="block text-sm font-medium text-gray-600 mb-3">Acciones de Verificación</label>
            <div class="flex gap-3">
              <%= button_to "Verificar Pago", verify_admin_payment_path(@payment),
                  method: :post,
                  class: "flex-1 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors",
                  data: { confirm: "¿Confirmar que este pago es válido?" } %>
              <button type="button" onclick="openRejectModal()"
                      class="flex-1 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                Rechazar
              </button>
            </div>
          </div>
        <% end %>

        <% if @payment.rejected? && @payment.notes.present? %>
          <div class="pt-4 border-t border-gray-200">
            <label class="block text-sm font-medium text-red-700 mb-2">Razón del Rechazo</label>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <p class="text-red-800"><%= @payment.notes %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Loan Information -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-[#125282] mb-6">Información del Préstamo</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-600">Número de Contrato</label>
        <p class="text-lg font-medium text-[#125282] mt-1"><%= @payment.loan.contract_number %></p>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-600">Cliente</label>
        <p class="text-lg font-medium text-gray-900 mt-1"><%= @payment.loan.customer.full_name %></p>
        <p class="text-sm text-gray-600"><%= @payment.loan.customer.identification_number %></p>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-600">Estado del Préstamo</label>
        <p class="text-lg text-gray-900 mt-1">
          <span class="px-3 py-1 text-sm rounded-full <%= @payment.loan.active? ? 'bg-green-100 text-green-800' : @payment.loan.paid? ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-800' %>">
            <%= loan_status_es(@payment.loan.status) %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <!-- Installment Allocation -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-[#125282] mb-6">Cuotas Asignadas</h2>

    <% if @payment.installments.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cuota</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha de Vencimiento</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monto Cuota</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monto Asignado</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @payment.installments.sort_by(&:due_date).each_with_index do |installment, index| %>
              <% payment_installment = @payment.payment_installments.find { |pi| pi.installment_id == installment.id } %>
              <tr>
                <td class="px-4 py-3">
                  <span class="font-medium text-gray-900">#<%= installment.installment_number %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-gray-600"><%= installment.due_date.strftime("%d/%m/%Y") %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-medium text-gray-900">L. <%= number_with_delimiter(installment.amount, delimiter: ',') %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-medium text-green-600">L. <%= number_with_delimiter(payment_installment.amount, delimiter: ',') %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="px-2 py-1 text-xs rounded-full <%= installment.paid? ? 'bg-green-100 text-green-800' : installment.overdue? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= installment_status_es(installment.status) %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">Este pago no tiene cuotas asignadas</p>
    <% end %>
  </div>

  <!-- Receipt Image (if attached) -->
  <% if @payment.receipt_image.attached? %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
      <h2 class="text-xl font-semibold text-[#125282] mb-6">Comprobante de Pago</h2>
      <div class="flex justify-center">
        <%= image_tag @payment.receipt_image, class: "max-w-md rounded-lg shadow" %>
      </div>
      <div class="mt-4">
        <%= link_to "Descargar Comprobante", url_for(@payment.receipt_image), download: "receipt_#{@payment.id}.jpg", class: "text-[#125282] hover:underline font-medium" %>
      </div>
    </div>
  <% end %>

  <!-- Footer navigation -->
  <div class="flex justify-between items-center">
    <div>
      <%= link_to "← Volver a Pagos", admin_payments_path, class: "text-[#125282] hover:underline font-medium" %>
    </div>
    <div>
      <%= link_to "← Volver al Dashboard", admin_dashboard_path, class: "text-[#125282] hover:underline font-medium" %>
    </div>
  </div>
</div>

<!-- Rejection Modal -->
<% if @payment.pending? && policy(@payment).reject? %>
  <div id="rejection-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl p-6 max-w-md w-full mx-4">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900">Rechazar Pago</h3>
        <button type="button" onclick="closeRejectModal()" class="text-gray-400 hover:text-gray-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <p class="text-gray-600 mb-4">Por favor, indica la razón por la cual este pago está siendo rechazado:</p>

      <%= form_with url: reject_admin_payment_path(@payment), method: :post, local: true do |f| %>
        <div class="mb-4">
          <label for="rejection_reason" class="block text-sm font-medium text-gray-700 mb-2">Razón del Rechazo</label>
          <textarea name="rejection_reason" id="rejection_reason" rows="3" required
                    class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent resize-none"
                    placeholder="Ej: Comprobante ilegible, monto incorrecto, fecha no coincide..."></textarea>
        </div>

        <div class="flex gap-3">
          <button type="button" onclick="closeRejectModal()"
                  class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium transition-colors">
            Cancelar
          </button>
          <button type="submit"
                  class="flex-1 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
            Confirmar Rechazo
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <script>
    function openRejectModal() {
      document.getElementById('rejection-modal').classList.remove('hidden');
      document.getElementById('rejection_reason').focus();
    }

    function closeRejectModal() {
      document.getElementById('rejection-modal').classList.add('hidden');
      document.getElementById('rejection_reason').value = '';
    }

    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeRejectModal();
      }
    });

    // Close modal when clicking outside
    document.getElementById('rejection-modal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeRejectModal();
      }
    });
  </script>
<% end %>

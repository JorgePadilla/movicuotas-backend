<% content_for :title, "Detalles del Pago - Admin - MOVICUOTAS" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-8">
  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-[#125282]">Pago del <%= @payment.payment_date.strftime("%d de %B de %Y") %></h1>
        <p class="text-gray-600 mt-1 sm:mt-2 text-lg sm:text-xl font-semibold">L. <%= number_with_delimiter(@payment.amount, delimiter: ',') %></p>
      </div>
      <div class="self-start sm:self-auto">
        <span class="px-3 py-1 sm:px-4 sm:py-2 text-sm sm:text-lg rounded-lg font-medium <%= @payment.verified? ? 'bg-green-100 text-green-800' : @payment.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
          <%= verification_status_es(@payment.verification_status) %>
        </span>
      </div>
    </div>
  </div>

  <!-- Payment details grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <!-- Payment Information -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h2 class="text-lg sm:text-xl font-semibold text-[#125282] mb-4 sm:mb-6">Información del Pago</h2>
      <div class="space-y-3 sm:space-y-4">
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Monto</label>
          <p class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">L. <%= number_with_delimiter(@payment.amount, delimiter: ',') %></p>
        </div>
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Fecha de Pago</label>
          <p class="text-base sm:text-lg text-gray-900 mt-1"><%= @payment.payment_date.strftime("%d de %B de %Y") %></p>
        </div>
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Método de Pago</label>
          <p class="text-base sm:text-lg text-gray-900 mt-1"><%= payment_method_es(@payment.payment_method) %></p>
        </div>
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Referencia</label>
          <p class="text-base sm:text-lg text-gray-900 mt-1 break-all"><%= @payment.reference_number || "—" %></p>
        </div>
      </div>
    </div>

    <!-- Verification Information -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h2 class="text-lg sm:text-xl font-semibold text-[#125282] mb-4 sm:mb-6">Verificación</h2>
      <div class="space-y-3 sm:space-y-4">
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Estado</label>
          <p class="text-base sm:text-lg text-gray-900 mt-1">
            <span class="px-3 py-1 sm:px-4 sm:py-2 rounded-lg font-medium text-sm sm:text-base <%= @payment.verified? ? 'bg-green-100 text-green-800' : @payment.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
              <%= verification_status_es(@payment.verification_status) %>
            </span>
          </p>
        </div>
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Monto Asignado a Cuotas</label>
          <p class="text-base sm:text-lg text-gray-900 mt-1">L. <%= number_with_delimiter(@payment.total_allocated, delimiter: ',') %></p>
        </div>
        <div>
          <label class="block text-xs sm:text-sm font-medium text-gray-600">Monto Sin Asignar</label>
          <p class="text-base sm:text-lg font-semibold <%= @payment.unallocated_amount > 0 ? 'text-orange-600' : 'text-green-600' %> mt-1">
            L. <%= number_with_delimiter(@payment.unallocated_amount, delimiter: ',') %>
          </p>
        </div>

        <% if @payment.pending? && policy(@payment).verify? %>
          <div class="pt-4 border-t border-gray-200">
            <label class="block text-xs sm:text-sm font-medium text-gray-600 mb-3">Acciones de Verificación</label>
            <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
              <button type="button" onclick="openVerifyModal()"
                      class="w-full sm:flex-1 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-sm sm:text-base">
                Verificar Pago
              </button>
              <button type="button" onclick="openRejectModal()"
                      class="w-full sm:flex-1 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-sm sm:text-base">
                Rechazar
              </button>
            </div>
          </div>
        <% end %>

        <% if @payment.verified? %>
          <div class="pt-4 border-t border-gray-200 space-y-3">
            <% if @payment.reference_number.present? %>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-600">Número de Referencia</label>
                <p class="text-base sm:text-lg text-gray-900 mt-1 font-mono"><%= @payment.reference_number %></p>
              </div>
            <% end %>
            <% if @payment.bank_source.present? %>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-600">Banco / Fuente</label>
                <p class="text-base sm:text-lg text-gray-900 mt-1"><%= @payment.bank_source %></p>
              </div>
            <% end %>
            <% if @payment.verified_by.present? %>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-600">Verificado Por</label>
                <p class="text-base sm:text-lg text-gray-900 mt-1"><%= @payment.verified_by.full_name %></p>
                <p class="text-xs sm:text-sm text-gray-500"><%= @payment.verified_at&.strftime("%d/%m/%Y %H:%M") %></p>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if @payment.rejected? %>
          <div class="pt-4 border-t border-gray-200 space-y-3">
            <% if @payment.notes.present? %>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-red-700 mb-2">Razón del Rechazo</label>
                <div class="bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4">
                  <p class="text-red-800 text-sm sm:text-base"><%= @payment.notes %></p>
                </div>
              </div>
            <% end %>
            <% if @payment.verified_by.present? %>
              <div>
                <label class="block text-xs sm:text-sm font-medium text-gray-600">Rechazado Por</label>
                <p class="text-base sm:text-lg text-gray-900 mt-1"><%= @payment.verified_by.full_name %></p>
                <p class="text-xs sm:text-sm text-gray-500"><%= @payment.verified_at&.strftime("%d/%m/%Y %H:%M") %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Loan Information -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 mb-6 sm:mb-8">
    <h2 class="text-lg sm:text-xl font-semibold text-[#125282] mb-4 sm:mb-6">Información del Préstamo</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3 sm:gap-4">
      <div>
        <label class="block text-xs sm:text-sm font-medium text-gray-600">Número de Contrato</label>
        <p class="text-sm sm:text-lg font-medium text-[#125282] mt-1 break-all"><%= @payment.loan.contract_number %></p>
      </div>
      <div>
        <label class="block text-xs sm:text-sm font-medium text-gray-600">Cliente</label>
        <p class="text-sm sm:text-lg font-medium text-gray-900 mt-1"><%= @payment.loan.customer.full_name %></p>
        <p class="text-xs sm:text-sm text-gray-600"><%= @payment.loan.customer.identification_number %></p>
      </div>
      <div>
        <label class="block text-xs sm:text-sm font-medium text-gray-600">Estado del Préstamo</label>
        <p class="text-sm sm:text-lg text-gray-900 mt-1">
          <span class="px-2 py-1 text-xs sm:text-sm rounded-full <%= @payment.loan.active? ? 'bg-green-100 text-green-800' : @payment.loan.paid? ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-800' %>">
            <%= loan_status_es(@payment.loan.status) %>
          </span>
        </p>
      </div>
    </div>
  </div>

  <!-- Installment Allocation -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 mb-6 sm:mb-8">
    <h2 class="text-lg sm:text-xl font-semibold text-[#125282] mb-4 sm:mb-6">Cuotas Asignadas</h2>

    <% if @payment.installments.any? %>
      <!-- Mobile Card View -->
      <div class="block sm:hidden space-y-3">
        <% @payment.installments.sort_by(&:due_date).each do |installment| %>
          <% payment_installment = @payment.payment_installments.find { |pi| pi.installment_id == installment.id } %>
          <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-gray-900">Cuota #<%= installment.installment_number %></span>
              <span class="px-2 py-1 text-xs rounded-full <%= installment.paid? ? 'bg-green-100 text-green-800' : installment.overdue? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= installment_status_es(installment.status) %>
              </span>
            </div>
            <div class="grid grid-cols-2 gap-2 text-sm">
              <div>
                <span class="text-gray-500 text-xs">Vencimiento</span>
                <p class="text-gray-900"><%= installment.due_date.strftime("%d/%m/%Y") %></p>
              </div>
              <div>
                <span class="text-gray-500 text-xs">Monto Cuota</span>
                <p class="text-gray-900">L. <%= number_with_delimiter(installment.amount, delimiter: ',') %></p>
              </div>
              <div class="col-span-2">
                <span class="text-gray-500 text-xs">Monto Asignado</span>
                <p class="text-green-600 font-semibold">L. <%= number_with_delimiter(payment_installment.amount, delimiter: ',') %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Desktop Table View -->
      <div class="hidden sm:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cuota</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vencimiento</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monto Cuota</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monto Asignado</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @payment.installments.sort_by(&:due_date).each do |installment| %>
              <% payment_installment = @payment.payment_installments.find { |pi| pi.installment_id == installment.id } %>
              <tr>
                <td class="px-4 py-3">
                  <span class="font-medium text-gray-900">#<%= installment.installment_number %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-gray-600"><%= installment.due_date.strftime("%d/%m/%Y") %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-medium text-gray-900">L. <%= number_with_delimiter(installment.amount, delimiter: ',') %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-medium text-green-600">L. <%= number_with_delimiter(payment_installment.amount, delimiter: ',') %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="px-2 py-1 text-xs rounded-full <%= installment.paid? ? 'bg-green-100 text-green-800' : installment.overdue? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= installment_status_es(installment.status) %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-6 sm:py-8 text-sm sm:text-base">Este pago no tiene cuotas asignadas</p>
    <% end %>
  </div>

  <!-- Receipt Image (uploaded by customer) -->
  <% if @payment.receipt_image.attached? %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 mb-6 sm:mb-8">
      <h2 class="text-lg sm:text-xl font-semibold text-[#125282] mb-4 sm:mb-6">Comprobante del Cliente</h2>
      <p class="text-sm text-gray-500 mb-4">Imagen enviada por el cliente desde la aplicación móvil</p>
      <div class="flex justify-center">
        <%= image_tag @payment.receipt_image, class: "max-w-full sm:max-w-md rounded-lg shadow" %>
      </div>
      <div class="mt-4 text-center">
        <%= link_to "Descargar Comprobante", url_for(@payment.receipt_image), download: "comprobante_cliente_#{@payment.id}.jpg", class: "text-[#125282] hover:underline font-medium text-sm sm:text-base" %>
      </div>
    </div>
  <% end %>

  <!-- Verification Image (uploaded by supervisor during verification) -->
  <% if @payment.verification_image.attached? %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 mb-6 sm:mb-8">
      <h2 class="text-lg sm:text-xl font-semibold text-green-700 mb-4 sm:mb-6">Comprobante de Verificación</h2>
      <p class="text-sm text-gray-500 mb-4">Imagen adjuntada durante la verificación del pago</p>
      <div class="flex justify-center">
        <%= image_tag @payment.verification_image, class: "max-w-full sm:max-w-md rounded-lg shadow" %>
      </div>
      <div class="mt-4 text-center">
        <%= link_to "Descargar Comprobante", url_for(@payment.verification_image), download: "comprobante_verificacion_#{@payment.id}.jpg", class: "text-[#125282] hover:underline font-medium text-sm sm:text-base" %>
      </div>
    </div>
  <% end %>

  <!-- Footer navigation -->
  <div class="flex flex-col sm:flex-row justify-between items-center gap-3 sm:gap-0">
    <div class="flex gap-4 items-center">
      <%= link_to "← Volver a Pagos", admin_payments_path, class: "text-[#125282] hover:underline font-medium text-sm sm:text-base" %>
    </div>
    <div class="flex gap-4 items-center">
      <% if policy(@payment).update? %>
        <%= link_to edit_admin_payment_path(@payment), class: "inline-flex items-center gap-2 bg-[#125282] hover:bg-[#0f4670] text-white px-4 py-2 rounded-lg font-medium transition-colors text-sm" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Editar Pago
        <% end %>
      <% end %>
      <%= link_to "← Dashboard", admin_dashboard_path, class: "text-[#125282] hover:underline font-medium text-sm sm:text-base" %>
    </div>
  </div>
</div>

<!-- Verification Modal -->
<% if @payment.pending? && policy(@payment).verify? %>
  <div id="verify-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 overflow-y-auto">
    <div class="bg-white rounded-xl shadow-xl p-6 max-w-lg w-full mx-4 my-8">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900">Verificar Pago</h3>
        <button type="button" onclick="closeVerifyModal()" class="text-gray-400 hover:text-gray-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
        <p class="text-green-800 text-sm">
          <strong>Monto a verificar:</strong> L. <%= number_with_delimiter(@payment.amount, delimiter: ',') %>
        </p>
      </div>

      <%= form_with url: verify_admin_payment_path(@payment), method: :post, local: true, multipart: true do |f| %>
        <div class="space-y-4">
          <!-- Reference Number -->
          <div>
            <label for="reference_number" class="block text-sm font-medium text-gray-700 mb-2">
              Número de Referencia <span class="text-gray-400">(opcional)</span>
            </label>
            <input type="text" name="reference_number" id="reference_number"
                   class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-green-500 focus:border-transparent"
                   placeholder="Ej: 123456789, TRX-001234">
          </div>

          <!-- Bank Source -->
          <div>
            <label for="bank_source" class="block text-sm font-medium text-gray-700 mb-2">
              Banco / Fuente <span class="text-gray-400">(opcional)</span>
            </label>
            <select name="bank_source" id="bank_source"
                    class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-green-500 focus:border-transparent">
              <option value="">-- Seleccionar --</option>
              <option value="BAC">BAC Honduras</option>
              <option value="Banpais">Banpais</option>
              <option value="Banco Atlantida">Banco Atlántida</option>
              <option value="Banco Ficohsa">Banco Ficohsa</option>
              <option value="Banco Occidente">Banco de Occidente</option>
              <option value="Banco Promerica">Banco Promerica</option>
              <option value="Tigo Money">Tigo Money</option>
              <option value="Efectivo">Efectivo en Tienda</option>
              <option value="Otro">Otro</option>
            </select>
          </div>

          <!-- Verification Image -->
          <div>
            <label for="verification_image" class="block text-sm font-medium text-gray-700 mb-2">
              Comprobante de Verificación <span class="text-gray-400">(opcional)</span>
            </label>
            <input type="file" name="verification_image" id="verification_image" accept="image/*"
                   class="w-full border border-gray-300 rounded-lg p-2 text-gray-900 focus:ring-2 focus:ring-green-500 focus:border-transparent file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-green-50 file:text-green-700 hover:file:bg-green-100">
            <p class="text-xs text-gray-500 mt-1">Adjunta imagen del comprobante bancario si lo tienes</p>
          </div>
        </div>

        <div class="flex gap-3 mt-6">
          <button type="button" onclick="closeVerifyModal()"
                  class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium transition-colors">
            Cancelar
          </button>
          <button type="submit"
                  class="flex-1 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
            Confirmar Verificación
          </button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Rejection Modal -->
<% if @payment.pending? && policy(@payment).reject? %>
  <div id="rejection-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl p-6 max-w-md w-full mx-4">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900">Rechazar Pago</h3>
        <button type="button" onclick="closeRejectModal()" class="text-gray-400 hover:text-gray-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <p class="text-gray-600 mb-4">Por favor, indica la razón por la cual este pago está siendo rechazado:</p>

      <%= form_with url: reject_admin_payment_path(@payment), method: :post, local: true do |f| %>
        <div class="mb-4">
          <label for="rejection_reason" class="block text-sm font-medium text-gray-700 mb-2">Razón del Rechazo</label>
          <textarea name="rejection_reason" id="rejection_reason" rows="3" required
                    class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent resize-none"
                    placeholder="Ej: Comprobante ilegible, monto incorrecto, fecha no coincide..."></textarea>
        </div>

        <div class="flex gap-3">
          <button type="button" onclick="closeRejectModal()"
                  class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium transition-colors">
            Cancelar
          </button>
          <button type="submit"
                  class="flex-1 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
            Confirmar Rechazo
          </button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% if @payment.pending? && (policy(@payment).verify? || policy(@payment).reject?) %>
  <script>
    function openVerifyModal() {
      document.getElementById('verify-modal').classList.remove('hidden');
      document.getElementById('reference_number').focus();
    }

    function closeVerifyModal() {
      document.getElementById('verify-modal').classList.add('hidden');
      document.getElementById('reference_number').value = '';
      document.getElementById('bank_source').value = '';
      document.getElementById('verification_image').value = '';
    }

    function openRejectModal() {
      document.getElementById('rejection-modal').classList.remove('hidden');
      document.getElementById('rejection_reason').focus();
    }

    function closeRejectModal() {
      document.getElementById('rejection-modal').classList.add('hidden');
      document.getElementById('rejection_reason').value = '';
    }

    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeVerifyModal();
        closeRejectModal();
      }
    });

    // Close modals when clicking outside
    document.getElementById('verify-modal')?.addEventListener('click', function(e) {
      if (e.target === this) closeVerifyModal();
    });

    document.getElementById('rejection-modal')?.addEventListener('click', function(e) {
      if (e.target === this) closeRejectModal();
    });
  </script>
<% end %>

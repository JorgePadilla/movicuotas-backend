<% content_for :title, "Gestión de Pagos - Admin - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-8">
  <!-- Page header -->
  <div class="mb-8">
    <div>
      <h1 class="text-3xl font-bold text-[#125282]">Gestión de Pagos</h1>
      <p class="text-gray-600 mt-2">Visualiza y verifica todos los pagos del sistema</p>
    </div>
  </div>

  <!-- Search and filter section -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
      <!-- Search -->
      <%= form_with url: admin_payments_path, method: :get, local: true, class: "md:col-span-2 flex gap-2" do |f| %>
        <div class="flex-1">
          <%= f.search_field :search, placeholder: "Buscar por nombre del cliente o número de contrato...", value: params[:search], class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
        </div>
        <%= f.submit "Buscar", class: "bg-[#125282] hover:bg-[#0f4670] text-white px-6 py-2 rounded-lg font-medium transition-colors" %>
      <% end %>
    </div>

    <!-- Status and Method filters -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <!-- Verification Status filter -->
      <div class="flex gap-2 flex-wrap">
        <span class="text-sm font-medium text-gray-700 leading-10">Estado:</span>
        <%= link_to "Todos", admin_payments_path, class: "#{params[:status].blank? ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282]'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
        <%= link_to "Verificados", admin_payments_path(status: 'verified'), class: "#{params[:status] == 'verified' ? 'bg-green-600 text-white' : 'bg-white border border-green-200 text-green-600'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
        <%= link_to "Pendientes", admin_payments_path(status: 'pending'), class: "#{params[:status] == 'pending' ? 'bg-yellow-600 text-white' : 'bg-white border border-yellow-200 text-yellow-600'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
        <%= link_to "Rechazados", admin_payments_path(status: 'rejected'), class: "#{params[:status] == 'rejected' ? 'bg-red-600 text-white' : 'bg-white border border-red-200 text-red-600'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
      </div>

      <!-- Payment Method filter -->
      <div class="flex gap-2 flex-wrap">
        <span class="text-sm font-medium text-gray-700 leading-10">Método:</span>
        <%= link_to "Todos", admin_payments_path, class: "#{params[:method].blank? ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282]'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
        <%= link_to "Efectivo", admin_payments_path(method: 'cash'), class: "#{params[:method] == 'cash' ? 'bg-purple-600 text-white' : 'bg-white border border-purple-200 text-purple-600'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
        <%= link_to "Transferencia", admin_payments_path(method: 'transfer'), class: "#{params[:method] == 'transfer' ? 'bg-blue-600 text-white' : 'bg-white border border-blue-200 text-blue-600'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
        <%= link_to "Tarjeta", admin_payments_path(method: 'card'), class: "#{params[:method] == 'card' ? 'bg-indigo-600 text-white' : 'bg-white border border-indigo-200 text-indigo-600'} px-3 py-1 rounded-lg font-medium text-sm transition-colors" %>
      </div>
    </div>

    <!-- Date range filter -->
    <%= form_with url: admin_payments_path, method: :get, local: true, class: "flex gap-2 items-end" do |f| %>
      <div>
        <%= f.label :date_from, "Desde:", class: "block text-sm font-medium text-gray-600" %>
        <%= f.date_field :date_from, value: params[:date_from], class: "mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
      </div>
      <div>
        <%= f.label :date_to, "Hasta:", class: "block text-sm font-medium text-gray-600" %>
        <%= f.date_field :date_to, value: params[:date_to], class: "mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
      </div>
      <%= f.hidden_field :search, value: params[:search] %>
      <%= f.submit "Filtrar por Fecha", class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
    <% end %>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-[#125282]">Total Pagos</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2">L. <%= number_with_delimiter(@total_payments, delimiter: ',') %></p>
      <p class="text-sm text-gray-600 mt-2"><%= Payment.count %> transacciones</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-green-600">Verificados</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2">L. <%= number_with_delimiter(@verified_payments, delimiter: ',') %></p>
      <p class="text-sm text-gray-600 mt-2"><%= Payment.verified.count %> transacciones</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-yellow-600">Pendientes</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2">L. <%= number_with_delimiter(@pending_verification, delimiter: ',') %></p>
      <p class="text-sm text-gray-600 mt-2"><%= Payment.pending_verification.count %> transacciones</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-[#125282]">Métodos Pagos</h3>
      <div class="mt-2 space-y-1 text-sm">
        <% @payments_by_method.each do |method, amount| %>
          <div class="flex justify-between">
            <span class="text-gray-600"><%= method.titleize %></span>
            <span class="font-medium">L. <%= number_with_delimiter(amount, delimiter: ',') %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Payments table -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha de Pago</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contrato</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Método</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Referencia</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @payments.any? %>
            <% @payments.each do |payment| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= payment.payment_date.strftime("%d/%m/%Y") %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= payment.loan.customer.full_name %></div>
                  <div class="text-xs text-gray-600"><%= payment.loan.customer.identification_number %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-medium text-[#125282]"><%= payment.loan.contract_number %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">L. <%= number_with_delimiter(payment.amount, delimiter: ',') %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-xs rounded-full <%= payment.cash? ? 'bg-purple-100 text-purple-800' : payment.transfer? ? 'bg-blue-100 text-blue-800' : payment.card? ? 'bg-indigo-100 text-indigo-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= payment.payment_method.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-xs rounded-full <%= payment.verified? ? 'bg-green-100 text-green-800' : payment.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                    <%= payment.verification_status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= payment.reference_number || "—" %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                  <%= link_to "Ver", admin_payment_path(payment), class: "text-[#125282] hover:underline font-medium" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-6 py-8 text-center text-gray-500">
                No hay pagos que coincidan con tu búsqueda
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer navigation -->
  <div class="mt-8 pt-8 border-t border-gray-200 flex justify-between items-center">
    <div>
      <%= link_to "← Volver al Dashboard", admin_dashboard_path, class: "text-[#125282] hover:underline font-medium" %>
    </div>
    <div class="text-sm text-gray-500">
      Total de pagos mostrados: <%= @payments.count %>
    </div>
  </div>
</div>

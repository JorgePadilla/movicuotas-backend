<% content_for :title, "Gestión de Préstamos - Admin - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [{ name: "Préstamos" }]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Gestión de Préstamos</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Visualiza y administra todos los préstamos del sistema</p>
  </div>

  <!-- Search and filter section -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 mb-6 sm:mb-8">
    <!-- Search -->
    <%= form_with url: admin_loans_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-3 sm:gap-4 mb-4" do |f| %>
      <div class="flex-1">
        <%= f.search_field :search, placeholder: "Buscar por contrato, cliente o identidad...", value: params[:search], class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282] text-sm sm:text-base" %>
      </div>
      <%= f.submit "Buscar", class: "bg-[#125282] hover:bg-[#0f4670] text-white px-6 py-2.5 rounded-lg font-medium transition-colors cursor-pointer" %>
    <% end %>

    <!-- Status filter -->
    <div class="flex flex-wrap gap-2 sm:gap-3 mb-4">
      <%= link_to "Todos", admin_loans_path, class: "#{params[:status].blank? ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282]'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
      <%= link_to "Activos", admin_loans_path(status: 'active'), class: "#{params[:status] == 'active' ? 'bg-green-600 text-white' : 'bg-white border border-green-200 text-green-600'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
      <%= link_to "Completados", admin_loans_path(status: 'paid'), class: "#{params[:status] == 'paid' ? 'bg-blue-600 text-white' : 'bg-white border border-blue-200 text-blue-600'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
      <%= link_to "En Mora", admin_loans_path(status: 'overdue'), class: "#{params[:status] == 'overdue' ? 'bg-red-600 text-white' : 'bg-white border border-red-200 text-red-600'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
    </div>

    <!-- Branch filter -->
    <%= form_with url: admin_loans_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-2" do |f| %>
      <%= f.select :branch, [['Todas las sucursales', '']] + @branches.map { |b| [b, b] }, { selected: params[:branch] }, class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282] text-sm" %>
      <%= f.hidden_field :search, value: params[:search] %>
      <%= f.hidden_field :status, value: params[:status] %>
      <%= f.submit "Filtrar", class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium text-sm transition-colors cursor-pointer" %>
    <% end %>
  </div>

  <!-- Mobile: Card view -->
  <div class="block lg:hidden space-y-4">
    <% if @loans.any? %>
      <% @loans.each do |loan| %>
        <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
          <!-- Header: Contract + Status -->
          <div class="flex justify-between items-start mb-3">
            <div class="flex-1 min-w-0 mr-3">
              <h3 class="font-semibold text-[#125282] truncate"><%= loan.contract_number %></h3>
              <p class="text-sm text-gray-600"><%= loan.customer.full_name %></p>
            </div>
            <span class="flex-shrink-0 px-2.5 py-1 text-xs rounded-full <%= loan.active? ? 'bg-green-100 text-green-800' : loan.paid? ? 'bg-blue-100 text-blue-800' : loan.overdue? ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
              <%= loan_status_es(loan.status) %>
            </span>
          </div>

          <!-- Details grid -->
          <div class="grid grid-cols-2 gap-3 text-sm mb-4">
            <div>
              <span class="text-gray-500">Total</span>
              <p class="text-gray-900 font-medium">L. <%= number_with_delimiter(loan.total_amount, delimiter: ',') %></p>
            </div>
            <div>
              <span class="text-gray-500">Balance</span>
              <p class="font-medium <%= loan.remaining_balance > 0 ? 'text-red-600' : 'text-green-600' %>">
                L. <%= number_with_delimiter(loan.remaining_balance, delimiter: ',') %>
              </p>
            </div>
            <div>
              <span class="text-gray-500">Cuotas</span>
              <p class="text-gray-900"><%= loan.paid_installments_count %>/<%= loan.number_of_installments %></p>
            </div>
            <div>
              <span class="text-gray-500">Sucursal</span>
              <p class="text-gray-900"><%= loan.branch_number %></p>
            </div>
          </div>

          <!-- Actions -->
          <div class="pt-3 border-t border-gray-100 flex gap-2">
            <%= link_to admin_loan_path(loan), class: "flex-1 text-center bg-[#125282] text-white py-2 rounded-lg text-sm font-medium hover:bg-[#0f4670] transition-colors" do %>
              Ver Detalles
            <% end %>
            <% if current_user.master? %>
              <%= link_to "Eliminar", admin_loan_path(loan), data: { turbo_method: :delete, turbo_confirm: "¿Eliminar préstamo #{loan.contract_number}?" }, class: "px-4 text-center bg-red-600 text-white py-2 rounded-lg text-sm font-medium hover:bg-red-700 transition-colors" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center text-gray-500">
        No hay préstamos que coincidan con tu búsqueda
      </div>
    <% end %>
  </div>

  <!-- Desktop: Table view -->
  <div class="hidden lg:block bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <%= sortable_header :contract_number, "Contrato", px: 4 %>
            <%= sortable_header :customer_name, "Cliente", px: 4 %>
            <%= sortable_header :branch_number, "Sucursal", px: 4 %>
            <%= sortable_header :total_amount, "Monto Total", px: 4 %>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pagado</th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Balance</th>
            <%= sortable_header :status, "Estado", px: 4 %>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cuotas</th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @loans.any? %>
            <% @loans.each do |loan| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class="font-medium text-[#125282]"><%= loan.contract_number %></span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= loan.customer.full_name %></div>
                  <div class="text-xs text-gray-600"><%= loan.customer.identification_number %></div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-600"><%= loan.branch_number %></td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">L. <%= number_with_delimiter(loan.total_amount, delimiter: ',') %></td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-green-600">L. <%= number_with_delimiter(loan.total_paid, delimiter: ',') %></td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium <%= loan.remaining_balance > 0 ? 'text-red-600' : 'text-green-600' %>">
                  L. <%= number_with_delimiter(loan.remaining_balance, delimiter: ',') %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-sm rounded-full <%= loan.active? ? 'bg-green-100 text-green-800' : loan.paid? ? 'bg-blue-100 text-blue-800' : loan.overdue? ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= loan_status_es(loan.status) %>
                  </span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm">
                  <span class="font-medium"><%= loan.paid_installments_count %></span>/<span class="text-gray-600"><%= loan.number_of_installments %></span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm">
                  <div class="flex items-center gap-3">
                    <%= link_to admin_loan_path(loan), class: "text-[#125282] hover:text-[#0f4670] transition-colors", title: "Ver detalles" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    <% if current_user.master? %>
                      <%= link_to admin_loan_path(loan), data: { turbo_method: :delete, turbo_confirm: "¿Eliminar préstamo #{loan.contract_number}? Esta acción no se puede deshacer." }, class: "text-red-600 hover:text-red-700 transition-colors", title: "Eliminar" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="9" class="px-4 py-8 text-center text-gray-500">
                No hay préstamos que coincidan con tu búsqueda
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @loans.respond_to?(:total_pages) && @loans.total_pages > 1 %>
    <div class="mt-6 mb-4 sm:mb-6">
      <!-- Mobile pagination -->
      <div class="flex sm:hidden justify-between items-center gap-2">
        <% if @loans.first_page? %>
          <span class="px-3 py-2 text-gray-400 text-sm">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", admin_loans_path(status: params[:status], branch: params[:branch], search: params[:search], sort: params[:sort], direction: params[:direction], page: @loans.current_page - 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg text-sm font-medium" %>
        <% end %>
        <span class="text-sm text-gray-600"><%= @loans.current_page %> / <%= @loans.total_pages %></span>
        <% if @loans.last_page? %>
          <span class="px-3 py-2 text-gray-400 text-sm">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", admin_loans_path(status: params[:status], branch: params[:branch], search: params[:search], sort: params[:sort], direction: params[:direction], page: @loans.current_page + 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg text-sm font-medium" %>
        <% end %>
      </div>

      <!-- Desktop pagination -->
      <div class="hidden sm:flex justify-center items-center gap-2">
        <% if @loans.first_page? %>
          <span class="px-3 py-2 text-gray-400 cursor-not-allowed">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", admin_loans_path(status: params[:status], branch: params[:branch], search: params[:search], sort: params[:sort], direction: params[:direction], page: @loans.current_page - 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
        <% end %>
        <div class="flex items-center gap-1">
          <% (1..@loans.total_pages).each do |page| %>
            <% if page == @loans.current_page %>
              <span class="px-3 py-2 bg-[#125282] text-white rounded-lg font-medium"><%= page %></span>
            <% elsif (page - @loans.current_page).abs <= 1 || page == 1 || page == @loans.total_pages %>
              <%= link_to page, admin_loans_path(status: params[:status], branch: params[:branch], search: params[:search], sort: params[:sort], direction: params[:direction], page: page), class: "px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium transition-colors" %>
            <% elsif page == 2 && @loans.current_page > 3 %>
              <span class="px-2 py-2 text-gray-500">...</span>
            <% elsif page == @loans.total_pages - 1 && @loans.current_page < @loans.total_pages - 2 %>
              <span class="px-2 py-2 text-gray-500">...</span>
            <% end %>
          <% end %>
        </div>
        <% if @loans.last_page? %>
          <span class="px-3 py-2 text-gray-400 cursor-not-allowed">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", admin_loans_path(status: params[:status], branch: params[:branch], search: params[:search], sort: params[:sort], direction: params[:direction], page: @loans.current_page + 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
        <% end %>
      </div>
    </div>
    <div class="text-center text-xs sm:text-sm text-gray-500 mb-6">
      Página <%= @loans.current_page %> de <%= @loans.total_pages %> • <%= @loans.size %> de <%= @loans.total_count %> préstamos
    </div>
  <% end %>

  <!-- Summary stats -->
  <div class="mt-6 sm:mt-8 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 sm:gap-4">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-[#125282]">Total</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= Loan.count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-green-600">Activos</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= Loan.where(status: 'active').count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-blue-600">Completados</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= Loan.where(status: 'paid').count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-red-600">En Mora</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= Loan.where(status: 'overdue').count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 col-span-2 sm:col-span-1">
      <h3 class="text-sm sm:text-base font-semibold text-[#125282]">Valor Total</h3>
      <p class="text-lg sm:text-xl font-bold text-gray-800 mt-1">L. <%= number_with_delimiter(Loan.sum(:total_amount), delimiter: ',') %></p>
    </div>
  </div>

</div>

<% content_for :title, "Cartera de Clientes - Admin - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [
    { name: "Reportes", path: admin_reports_path },
    { name: "Cartera de Clientes" }
  ]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Análisis de Cartera de Clientes</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Portafolio de crédito, análisis de riesgo y composición</p>
  </div>

  <!-- Customer Statistics Overview -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 lg:gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-[#125282]">Total</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1 lg:mt-2"><%= @total_customers %></p>
      <p class="text-xs text-gray-600 mt-2 hidden lg:block">Clientes registrados</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-green-600">Activos</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1 lg:mt-2"><%= @active_customers %></p>
      <% active_percent = @total_customers > 0 ? ((@active_customers / @total_customers) * 100).round(1) : 0 %>
      <p class="text-xs text-green-600 font-medium mt-2"><%= active_percent %>%</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-yellow-600">Suspendidos</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1 lg:mt-2"><%= @suspended_customers %></p>
      <% suspended_percent = @total_customers > 0 ? ((@suspended_customers / @total_customers) * 100).round(1) : 0 %>
      <p class="text-xs text-yellow-600 font-medium mt-2"><%= suspended_percent %>%</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-red-600">Bloqueados</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1 lg:mt-2"><%= @blocked_customers %></p>
      <% blocked_percent = @total_customers > 0 ? ((@blocked_customers / @total_customers) * 100).round(1) : 0 %>
      <p class="text-xs text-red-600 font-medium mt-2"><%= blocked_percent %>%</p>
    </div>
  </div>

  <!-- Loan Engagement Statistics -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 lg:gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-[#125282]">Con Préstamos</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1 lg:mt-2"><%= @customers_with_loans %></p>
      <% engagement = @total_customers > 0 ? ((@customers_with_loans / @total_customers) * 100).round(1) : 0 %>
      <p class="text-xs text-[#125282] font-medium mt-2"><%= engagement %>% cobertura</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-gray-600">Sin Préstamos</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1 lg:mt-2"><%= @customers_without_loans %></p>
      <p class="text-xs text-gray-600 mt-2 hidden lg:block">Sin productos de crédito</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-red-600">En Mora</h3>
      <p class="text-xl lg:text-3xl font-bold text-red-600 mt-1 lg:mt-2"><%= @customers_with_overdue %></p>
      <% risk_percent = @customers_with_loans > 0 ? ((@customers_with_overdue / @customers_with_loans) * 100).round(1) : 0 %>
      <p class="text-xs text-red-600 font-medium mt-2"><%= risk_percent %>% riesgo</p>
    </div>
  </div>

  <!-- Status Distribution -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <h2 class="text-lg font-semibold text-[#125282] mb-4">Distribución por Estado</h2>
    <% if @customers_by_status.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <% @customers_by_status.each do |status, count| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">
              <%= customer_status_es(status) %>
              <% percent = @total_customers > 0 ? ((count / @total_customers) * 100).round(1) : 0 %>
              <span class="text-sm text-gray-600">(<%= percent %>%)</span>
            </h3>
            <p class="text-xl lg:text-2xl font-bold text-[#125282]"><%= count %></p>
            <div class="mt-3 w-full bg-gray-200 rounded-full h-2">
              <div class="bg-[#125282] h-2 rounded-full" style="width: <%= percent %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay datos de distribución</p>
    <% end %>
  </div>

  <!-- Top Customers -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden mb-6">
    <div class="px-4 lg:px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-[#125282]">Principales Clientes</h2>
    </div>

    <% if @top_customers.any? %>
      <!-- Mobile Card View -->
      <div class="block lg:hidden p-4 space-y-3">
        <% @top_customers.each_with_index do |customer, index| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-8 h-8 rounded-full bg-[#125282] text-white flex items-center justify-center text-sm font-bold flex-shrink-0">
                <%= index + 1 %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-bold text-gray-900 truncate"><%= customer.full_name %></p>
                <p class="text-xs text-gray-500"><%= customer.identification_number %></p>
              </div>
              <span class="px-2 py-1 text-xs rounded-full <%= customer.status == 'active' ? 'bg-green-100 text-green-800' : customer.status == 'suspended' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                <%= customer_status_es(customer.status) %>
              </span>
            </div>
            <div class="bg-gray-50 rounded-lg p-2">
              <span class="text-xs text-gray-500">Valor Total Préstamos</span>
              <p class="text-lg font-bold text-[#125282]">L. <%= number_with_delimiter(customer.total_loan_value, delimiter: ',') %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Desktop Table View -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">#</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Identidad</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Valor Total</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @top_customers.each_with_index do |customer, index| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="w-8 h-8 rounded-full bg-[#125282] text-white flex items-center justify-center text-sm font-bold">
                    <%= index + 1 %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-medium text-gray-900"><%= customer.full_name %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-600"><%= customer.identification_number %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-xs rounded-full <%= customer.status == 'active' ? 'bg-green-100 text-green-800' : customer.status == 'suspended' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                    <%= customer_status_es(customer.status) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm font-medium text-[#125282]">L. <%= number_with_delimiter(customer.total_loan_value, delimiter: ',') %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay clientes en el sistema</p>
    <% end %>
  </div>

</div>

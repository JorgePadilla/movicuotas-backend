<% content_for :title, "Cartera de Clientes - Admin - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Page header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-[#125282]">An√°lisis de Cartera de Clientes</h1>
    <p class="text-gray-600 mt-2">Portafolio de cr√©dito, an√°lisis de riesgo y composici√≥n de clientes</p>
  </div>

  <!-- Customer Statistics Overview -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-[#125282]">Total de Clientes</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2"><%= @total_customers %></p>
      <div class="mt-4 pt-4 border-t text-sm text-gray-600">
        Clientes registrados en el sistema
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-green-600">Clientes Activos</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2"><%= @active_customers %></p>
      <div class="mt-4 pt-4 border-t text-sm">
        <% active_percent = @total_customers > 0 ? ((@active_customers / @total_customers) * 100).round(2) : 0 %>
        <span class="text-green-600 font-medium"><%= active_percent %>% del total</span>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-yellow-600">Clientes Suspendidos</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2"><%= @suspended_customers %></p>
      <div class="mt-4 pt-4 border-t text-sm">
        <% suspended_percent = @total_customers > 0 ? ((@suspended_customers / @total_customers) * 100).round(2) : 0 %>
        <span class="text-yellow-600 font-medium"><%= suspended_percent %>% del total</span>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-red-600">Clientes Bloqueados</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2"><%= @blocked_customers %></p>
      <div class="mt-4 pt-4 border-t text-sm">
        <% blocked_percent = @total_customers > 0 ? ((@blocked_customers / @total_customers) * 100).round(2) : 0 %>
        <span class="text-red-600 font-medium"><%= blocked_percent %>% del total</span>
      </div>
    </div>
  </div>

  <!-- Loan Engagement Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-[#125282]">üë• Con Pr√©stamos Activos</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2"><%= @customers_with_loans %></p>
      <div class="mt-4 pt-4 border-t text-sm">
        <% engagement = @total_customers > 0 ? ((@customers_with_loans / @total_customers) * 100).round(2) : 0 %>
        <span class="text-[#125282] font-medium"><%= engagement %>% de cobertura</span>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-600">üîï Sin Pr√©stamos</h3>
      <p class="text-3xl font-bold text-gray-800 mt-2"><%= @customers_without_loans %></p>
      <div class="mt-4 pt-4 border-t text-sm text-gray-600">
        Clientes sin productos de cr√©dito
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-[#125282]">‚ö†Ô∏è En Mora</h3>
      <p class="text-3xl font-bold text-red-600 mt-2"><%= @customers_with_overdue %></p>
      <div class="mt-4 pt-4 border-t text-sm">
        <% risk_percent = @customers_with_loans > 0 ? ((@customers_with_overdue / @customers_with_loans) * 100).round(2) : 0 %>
        <span class="text-red-600 font-medium"><%= risk_percent %>% de riesgo</span>
      </div>
    </div>
  </div>

  <!-- Status Distribution -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-[#125282] mb-6">üìä Distribuci√≥n por Estado</h2>
    <% if @customers_by_status.any? %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% @customers_by_status.each do |status, count| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">
              <%= status.titleize %>
              <% percent = @total_customers > 0 ? ((count / @total_customers) * 100).round(2) : 0 %>
              <span class="text-sm text-gray-600">(<%= percent %>%)</span>
            </h3>
            <p class="text-2xl font-bold text-[#125282]"><%= count %> clientes</p>
            <div class="mt-3 w-full bg-gray-200 rounded-full h-2">
              <div class="bg-[#125282] h-2 rounded-full" style="width: <%= percent %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay datos de distribuci√≥n de estados</p>
    <% end %>
  </div>

  <!-- Loans Per Customer Distribution -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-[#125282] mb-6">üìà Cantidad de Pr√©stamos por Cliente</h2>
    <% if @loans_per_customer.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Pr√©stamos por Cliente</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cantidad de Clientes</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Porcentaje</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @loans_per_customer.each do |loan_count, customer_count| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-medium text-gray-900"><%= loan_count %> <%= loan_count == 1 ? 'pr√©stamo' : 'pr√©stamos' %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-600"><%= customer_count %> clientes</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% total_customers_with_loans = @customers_by_status.sum { |status, count| status == 'active' ? count : 0 } %>
                  <% percent = total_customers_with_loans > 0 ? ((customer_count / total_customers_with_loans) * 100).round(2) : 0 %>
                  <div class="flex items-center gap-2">
                    <div class="w-24 bg-gray-200 rounded-full h-2">
                      <div class="bg-[#125282] h-2 rounded-full" style="width: <%= percent %>%"></div>
                    </div>
                    <span class="text-sm text-gray-600"><%= percent %>%</span>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay datos de distribuci√≥n de pr√©stamos</p>
    <% end %>
  </div>

  <!-- Top Customers -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
    <h2 class="text-xl font-semibold text-[#125282] mb-6">üèÜ Principales Clientes</h2>
    <% if @top_customers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Posici√≥n</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Identidad</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Valor Total de Pr√©stamos</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @top_customers.each_with_index do |customer, index| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="w-8 h-8 rounded-full bg-[#125282] text-white flex items-center justify-center text-sm font-bold">
                    <%= index + 1 %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-medium text-gray-900"><%= customer.full_name %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm text-gray-600"><%= customer.identification_number %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-xs rounded-full <%= customer.status == 'active' ? 'bg-green-100 text-green-800' : customer.status == 'suspended' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                    <%= customer.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="text-sm font-medium text-[#125282]">L. <%= number_with_delimiter(customer.total_loan_value, delimiter: ',') %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No hay clientes en el sistema</p>
    <% end %>
  </div>

  <!-- Footer navigation -->
  <div class="flex justify-between items-center">
    <div>
      <%= link_to "‚Üê Volver a Reportes", admin_reports_path, class: "text-[#125282] hover:underline font-medium" %>
    </div>
    <div>
      <%= link_to "‚Üê Volver al Dashboard", admin_dashboard_path, class: "text-[#125282] hover:underline font-medium" %>
    </div>
  </div>
</div>

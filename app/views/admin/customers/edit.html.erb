<% content_for :title, "Editar Cliente - Admin - MOVICUOTAS" %>

<div class="max-w-2xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [
    { name: "Clientes", path: admin_customers_path },
    { name: @customer.full_name, path: admin_customer_path(@customer) },
    { name: "Editar" }
  ]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Editar Cliente</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base"><%= @customer.full_name %> (<%= @customer.identification_number %>)</p>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8">
    <%= render "form" %>
  </div>
</div>

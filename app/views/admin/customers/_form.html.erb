<%= form_with model: [:admin, @customer], local: true, class: "space-y-4 sm:space-y-6" do |f| %>
  <% if @customer.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4 sm:mb-6">
      <h3 class="text-xs sm:text-sm font-medium text-red-800 mb-2">Se encontraron los siguientes errores:</h3>
      <ul class="list-disc pl-5 text-xs sm:text-sm text-red-700">
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Full Name -->
  <div>
    <%= f.label :full_name, "Nombre Completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :full_name, placeholder: "Ej: Juan García López", class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]", disabled: true %>
    <p class="text-xs sm:text-sm text-gray-600 mt-2">No se puede editar este campo</p>
  </div>

  <!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, placeholder: "Ej: juan.garcia@example.com", class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
    <p class="text-xs sm:text-sm text-gray-600 mt-2">Opcional</p>
  </div>

  <!-- Phone -->
  <div>
    <%= f.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.telephone_field :phone, placeholder: "Ej: 98765432", class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]", disabled: true %>
    <p class="text-xs sm:text-sm text-gray-600 mt-2">No se puede editar este campo</p>
  </div>

  <!-- Status -->
  <div class="border-t pt-4 sm:pt-6">
    <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-3 sm:mb-4">Estado del Cliente</h3>

    <div>
      <%= f.label :status, "Estado", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, [['Activo', 'active'], ['Suspendido', 'suspended'], ['Bloqueado', 'blocked']], {}, class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
      <p class="text-xs sm:text-sm text-gray-600 mt-2 space-y-1">
        <div><strong>Activo:</strong> Cliente con acceso normal</div>
        <div><strong>Suspendido:</strong> Cliente temporalmente restringido</div>
        <div><strong>Bloqueado:</strong> Cliente sin acceso (usualmente por mora)</div>
      </p>
    </div>
  </div>

  <!-- Submit button -->
  <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 pt-4 sm:pt-6 border-t">
    <%= f.submit "Actualizar Cliente", class: "bg-[#125282] hover:bg-[#0f4670] text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-colors text-sm sm:text-base text-center" %>
    <%= link_to "Cancelar", admin_customer_path(@customer), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-colors text-sm sm:text-base text-center" %>
  </div>
<% end %>

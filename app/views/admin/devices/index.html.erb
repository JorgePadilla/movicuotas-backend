<% content_for :title, "Gestión de Dispositivos - Admin - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [{ name: "Dispositivos" }]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Gestión de Dispositivos</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Visualiza todos los dispositivos y su estado de activación</p>
  </div>

  <!-- Search and filter section -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6 mb-6 sm:mb-8">
    <!-- Search -->
    <%= form_with url: admin_devices_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-3 sm:gap-4 mb-4" do |f| %>
      <div class="flex-1">
        <%= f.search_field :search, placeholder: "Buscar por IMEI, código de activación o cliente...", value: params[:search], class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282] text-sm sm:text-base" %>
      </div>
      <%= f.submit "Buscar", class: "bg-[#125282] hover:bg-[#0f4670] text-white px-6 py-2.5 rounded-lg font-medium transition-colors cursor-pointer" %>
    <% end %>

    <!-- Activation status filter -->
    <div class="flex flex-wrap gap-2 sm:gap-3 mb-4">
      <%= link_to "Todos", admin_devices_path, class: "#{params[:activation].blank? && params[:lock_status].blank? ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282]'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
      <%= link_to "Activados", admin_devices_path(activation: 'activated'), class: "#{params[:activation] == 'activated' ? 'bg-green-600 text-white' : 'bg-white border border-green-200 text-green-600'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
      <%= link_to "Pendientes", admin_devices_path(activation: 'pending'), class: "#{params[:activation] == 'pending' ? 'bg-yellow-600 text-white' : 'bg-white border border-yellow-200 text-yellow-600'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
      <%= link_to "Bloqueados", admin_devices_path(lock_status: 'locked'), class: "#{params[:lock_status] == 'locked' ? 'bg-red-600 text-white' : 'bg-white border border-red-200 text-red-600'} px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm font-medium transition-colors" %>
    </div>
  </div>

  <!-- Mobile: Card view -->
  <div class="block lg:hidden space-y-4">
    <% if @devices.any? %>
      <% @devices.each do |device| %>
        <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
          <!-- Header: Device + Status -->
          <div class="flex justify-between items-start mb-3">
            <div class="flex-1 min-w-0 mr-3">
              <h3 class="font-semibold text-[#125282] truncate"><%= device.brand %> <%= device.model %></h3>
              <p class="text-sm text-gray-600">IMEI: <%= device.imei %></p>
            </div>
            <div class="flex flex-col gap-1">
              <span class="flex-shrink-0 px-2.5 py-1 text-xs rounded-full <%= device.activated? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= device.activated? ? 'Activado' : 'Pendiente' %>
              </span>
              <% if device.locked? %>
                <span class="flex-shrink-0 px-2.5 py-1 text-xs rounded-full bg-red-100 text-red-800">
                  Bloqueado
                </span>
              <% end %>
            </div>
          </div>

          <!-- Details grid -->
          <div class="grid grid-cols-2 gap-3 text-sm mb-4">
            <div>
              <span class="text-gray-500">Código</span>
              <p class="text-gray-900 font-mono font-bold text-[#125282]"><%= device.activation_code || '------' %></p>
            </div>
            <div>
              <span class="text-gray-500">Cliente</span>
              <p class="text-gray-900 font-medium truncate"><%= device.loan&.customer&.full_name || 'Sin asignar' %></p>
            </div>
            <div>
              <span class="text-gray-500">Activado</span>
              <p class="text-gray-900"><%= device.activated_at ? l(device.activated_at, format: :short) : '-' %></p>
            </div>
            <div>
              <span class="text-gray-500">Contrato</span>
              <p class="text-gray-900 truncate"><%= device.loan&.contract_number || '-' %></p>
            </div>
          </div>

          <!-- Actions -->
          <div class="pt-3 border-t border-gray-100">
            <%= link_to admin_device_path(device), class: "block w-full text-center bg-[#125282] text-white py-2 rounded-lg text-sm font-medium hover:bg-[#0f4670] transition-colors" do %>
              Ver Detalles
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center text-gray-500">
        No hay dispositivos que coincidan con tu búsqueda
      </div>
    <% end %>
  </div>

  <!-- Desktop: Table view -->
  <div class="hidden lg:block bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dispositivo</th>
            <%= sortable_header :imei, "IMEI", px: 6 %>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código Activación</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado App</th>
            <%= sortable_header :lock_status, "Estado MDM", px: 6 %>
            <%= sortable_header :created_at, "Activado", px: 6 %>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @devices.any? %>
            <% @devices.each do |device| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= device.brand %> <%= device.model %></div>
                  <div class="text-xs text-gray-500"><%= device.color %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-mono text-sm text-gray-900"><%= device.imei %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-mono font-bold text-[#125282]"><%= device.activation_code || '------' %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if device.loan&.customer %>
                    <div class="text-sm font-medium text-gray-900"><%= device.loan.customer.full_name %></div>
                    <div class="text-xs text-gray-500"><%= device.loan.contract_number %></div>
                  <% else %>
                    <span class="text-gray-400">Sin asignar</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-sm rounded-full <%= device.activated? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= device.activated? ? 'Activado' : 'Pendiente' %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-sm rounded-full <%= device.locked? ? 'bg-red-100 text-red-800' : device.pending? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= device.locked? ? 'Bloqueado' : device.pending? ? 'Pendiente' : 'Desbloqueado' %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= device.activated_at ? l(device.activated_at, format: :short) : '-' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= link_to "Ver", admin_device_path(device), class: "text-[#125282] hover:underline font-medium" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-6 py-8 text-center text-gray-500">
                No hay dispositivos que coincidan con tu búsqueda
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @devices.respond_to?(:total_pages) && @devices.total_pages > 1 %>
    <div class="mt-6 mb-4 sm:mb-6">
      <!-- Mobile pagination -->
      <div class="flex sm:hidden justify-between items-center gap-2">
        <% if @devices.first_page? %>
          <span class="px-3 py-2 text-gray-400 text-sm">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", admin_devices_path(activation: params[:activation], lock_status: params[:lock_status], search: params[:search], sort: params[:sort], direction: params[:direction], page: @devices.current_page - 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg text-sm font-medium" %>
        <% end %>
        <span class="text-sm text-gray-600"><%= @devices.current_page %> / <%= @devices.total_pages %></span>
        <% if @devices.last_page? %>
          <span class="px-3 py-2 text-gray-400 text-sm">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", admin_devices_path(activation: params[:activation], lock_status: params[:lock_status], search: params[:search], sort: params[:sort], direction: params[:direction], page: @devices.current_page + 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg text-sm font-medium" %>
        <% end %>
      </div>

      <!-- Desktop pagination -->
      <div class="hidden sm:flex justify-center items-center gap-2">
        <% if @devices.first_page? %>
          <span class="px-3 py-2 text-gray-400 cursor-not-allowed">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", admin_devices_path(activation: params[:activation], lock_status: params[:lock_status], search: params[:search], sort: params[:sort], direction: params[:direction], page: @devices.current_page - 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
        <% end %>
        <div class="flex items-center gap-1">
          <% (1..@devices.total_pages).each do |page| %>
            <% if page == @devices.current_page %>
              <span class="px-3 py-2 bg-[#125282] text-white rounded-lg font-medium"><%= page %></span>
            <% elsif (page - @devices.current_page).abs <= 1 || page == 1 || page == @devices.total_pages %>
              <%= link_to page, admin_devices_path(activation: params[:activation], lock_status: params[:lock_status], search: params[:search], sort: params[:sort], direction: params[:direction], page: page), class: "px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium transition-colors" %>
            <% elsif page == 2 && @devices.current_page > 3 %>
              <span class="px-2 py-2 text-gray-500">...</span>
            <% elsif page == @devices.total_pages - 1 && @devices.current_page < @devices.total_pages - 2 %>
              <span class="px-2 py-2 text-gray-500">...</span>
            <% end %>
          <% end %>
        </div>
        <% if @devices.last_page? %>
          <span class="px-3 py-2 text-gray-400 cursor-not-allowed">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", admin_devices_path(activation: params[:activation], lock_status: params[:lock_status], search: params[:search], sort: params[:sort], direction: params[:direction], page: @devices.current_page + 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
        <% end %>
      </div>
    </div>
    <div class="text-center text-xs sm:text-sm text-gray-500 mb-6">
      Página <%= @devices.current_page %> de <%= @devices.total_pages %> • <%= @devices.size %> de <%= @devices.total_count %> dispositivos
    </div>
  <% end %>

  <!-- Summary stats -->
  <div class="mt-6 sm:mt-8 grid grid-cols-2 sm:grid-cols-4 gap-3 sm:gap-4">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-[#125282]">Total</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= @total_devices %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-green-600">Activados</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= @activated_devices %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-yellow-600">Pendientes</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= @pending_activation %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 sm:p-6">
      <h3 class="text-sm sm:text-base font-semibold text-red-600">Bloqueados</h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-800 mt-1"><%= @locked_devices %></p>
    </div>
  </div>
</div>

<%= form_with model: [:admin, @phone_model], local: true, class: "space-y-4 sm:space-y-6" do |f| %>
  <% if @phone_model.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4 sm:mb-6">
      <h3 class="text-xs sm:text-sm font-medium text-red-800 mb-2">Se encontraron los siguientes errores:</h3>
      <ul class="list-disc pl-5 text-xs sm:text-sm text-red-700">
        <% @phone_model.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Brand -->
  <div>
    <%= f.label :brand, "Marca *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :brand, placeholder: "Ej: Samsung, Apple, Xiaomi", required: true, class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
  </div>

  <!-- Model -->
  <div>
    <%= f.label :model, "Modelo *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :model, placeholder: "Ej: Galaxy A54, iPhone 15, Redmi Note 12", required: true, class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
  </div>

  <!-- Storage -->
  <div>
    <%= f.label :storage, "Almacenamiento (GB)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :storage, placeholder: "Ej: 128, 256, 512", min: 1, class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
    <p class="text-xs sm:text-sm text-gray-600 mt-2">Opcional. Capacidad de almacenamiento en GB.</p>
  </div>

  <!-- Price -->
  <div>
    <%= f.label :price, "Precio (L.) *", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :price, placeholder: "Ej: 8500.00", min: 0.01, step: 0.01, required: true, class: "mt-1 block w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-[#125282] focus:border-[#125282]" %>
    <p class="text-xs sm:text-sm text-gray-600 mt-2">Precio en Lempiras. Debe ser mayor a 0.</p>
  </div>

  <!-- Active -->
  <div class="border-t pt-4 sm:pt-6">
    <div class="flex items-center">
      <%= f.check_box :active, class: "h-5 w-5 text-[#125282] border-gray-300 rounded focus:ring-[#125282]" %>
      <%= f.label :active, "Teléfono activo", class: "ml-3 text-sm font-medium text-gray-700" %>
    </div>
    <p class="text-xs sm:text-sm text-gray-600 mt-2 ml-8">Los teléfonos inactivos no aparecen en el catálogo para los vendedores.</p>
  </div>

  <!-- Submit button -->
  <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 pt-4 sm:pt-6 border-t">
    <%= f.submit @phone_model.new_record? ? "Crear Teléfono" : "Actualizar Teléfono", class: "bg-[#125282] hover:bg-[#0f4670] text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-colors text-sm sm:text-base text-center cursor-pointer" %>
    <%= link_to "Cancelar", admin_phone_models_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-medium transition-colors text-sm sm:text-base text-center" %>
  </div>
<% end %>

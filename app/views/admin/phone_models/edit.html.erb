<% content_for :title, "Editar #{@phone_model.brand} #{@phone_model.model} - Admin - MOVICUOTAS" %>

<div class="max-w-2xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [
    { name: "Catálogo", path: admin_phone_models_path },
    { name: "#{@phone_model.brand} #{@phone_model.model}", path: admin_phone_model_path(@phone_model) },
    { name: "Editar" }
  ]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Editar Teléfono</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base"><%= @phone_model.brand %> <%= @phone_model.model %></p>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8">
    <%= render "form" %>
  </div>
</div>

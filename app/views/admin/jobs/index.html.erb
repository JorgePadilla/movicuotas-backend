<% content_for :title, "Monitoreo de Jobs - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [{ name: "Jobs" }]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Monitoreo de Jobs</h1>
        <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Estado y gestión de tareas en segundo plano</p>
      </div>
      <%= link_to "/admin/jobs_dashboard", class: "inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium text-sm transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        Mission Control
      <% end %>
    </div>
  </div>

  <!-- Metrics grid -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 lg:gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-[#125282] mb-1">Total Hoy</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800"><%= @total_jobs_today %></p>
      <p class="text-xs text-gray-600 mt-1 hidden lg:block">Jobs encolados en las últimas 24 horas</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-green-600 mb-1">Completados</h3>
      <p class="text-xl lg:text-3xl font-bold text-green-700"><%= @completed_jobs %></p>
      <p class="text-xs text-gray-600 mt-1 hidden lg:block">Hoy</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-red-600 mb-1">Fallidos</h3>
      <p class="text-xl lg:text-3xl font-bold text-red-700"><%= @failed_jobs %></p>
      <p class="text-xs text-gray-600 mt-1"><%= link_to "Ver detalles", admin_jobs_path(status: 'failed'), class: "text-[#125282] hover:underline" %></p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-blue-600 mb-1">En Ejecución</h3>
      <p class="text-xl lg:text-3xl font-bold text-blue-700"><%= @running_jobs %></p>
      <p class="text-xs text-gray-600 mt-1 hidden lg:block">En este momento</p>
    </div>
  </div>

  <!-- Secondary metrics -->
  <div class="grid grid-cols-3 gap-3 lg:gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-xs lg:text-lg font-semibold text-yellow-600 mb-1">Pendientes</h3>
      <p class="text-lg lg:text-2xl font-bold text-yellow-700"><%= @pending_jobs %></p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-xs lg:text-lg font-semibold text-purple-600 mb-1">Programados</h3>
      <p class="text-lg lg:text-2xl font-bold text-purple-700"><%= @scheduled_jobs %></p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-xs lg:text-lg font-semibold text-[#125282] mb-1">Colas</h3>
      <p class="text-lg lg:text-2xl font-bold text-[#125282]"><%= @queues.count %></p>
    </div>
  </div>

  <!-- Queue Information -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-4">
      <div>
        <h3 class="text-lg font-semibold text-[#125282]">Colas de Procesamiento</h3>
        <p class="text-xs text-gray-600">Estado y descripción de cada cola de Solid Queue</p>
      </div>
      <div class="mt-2 lg:mt-0">
        <% if @running_jobs > 0 || @pending_jobs == 0 %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Solid Queue Activo
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
            Solid Queue Inactivo
          </span>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 mb-4">
      <!-- Default Queue -->
      <div class="border border-gray-200 rounded-lg p-3">
        <div class="flex items-center justify-between mb-1">
          <span class="font-medium text-gray-900 text-sm">default</span>
          <span class="text-xs px-2 py-0.5 rounded bg-gray-100 text-gray-600">5 workers</span>
        </div>
        <p class="text-xs text-gray-600">Jobs generales: ActiveStorage, limpieza, sincronización de estados.</p>
      </div>

      <!-- Mailers Queue -->
      <div class="border border-gray-200 rounded-lg p-3">
        <div class="flex items-center justify-between mb-1">
          <span class="font-medium text-gray-900 text-sm">mailers</span>
          <span class="text-xs px-2 py-0.5 rounded bg-blue-100 text-blue-600">5 workers</span>
        </div>
        <p class="text-xs text-gray-600">Envío de correos electrónicos del sistema.</p>
      </div>

      <!-- Notifications Queue -->
      <div class="border border-gray-200 rounded-lg p-3">
        <div class="flex items-center justify-between mb-1">
          <span class="font-medium text-gray-900 text-sm">notifications</span>
          <span class="text-xs px-2 py-0.5 rounded bg-purple-100 text-purple-600">10 workers</span>
        </div>
        <p class="text-xs text-gray-600">Notificaciones push y alertas a clientes.</p>
      </div>

      <!-- Reminders Queue -->
      <div class="border border-gray-200 rounded-lg p-3">
        <div class="flex items-center justify-between mb-1">
          <span class="font-medium text-gray-900 text-sm">reminders</span>
          <span class="text-xs px-2 py-0.5 rounded bg-yellow-100 text-yellow-600">10 workers</span>
        </div>
        <p class="text-xs text-gray-600">Recordatorios de pago y cuotas vencidas.</p>
      </div>

      <!-- Blocking Queue -->
      <div class="border border-gray-200 rounded-lg p-3">
        <div class="flex items-center justify-between mb-1">
          <span class="font-medium text-gray-900 text-sm">blocking</span>
          <span class="text-xs px-2 py-0.5 rounded bg-red-100 text-red-600">3 workers</span>
        </div>
        <p class="text-xs text-gray-600">Bloqueo automático de dispositivos MDM (limitado para evitar sobrecarga).</p>
      </div>
    </div>

  </div>

  <!-- Notification Schedule -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <h3 class="text-lg font-semibold text-[#125282] mb-4">Esquema de Notificaciones Push</h3>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Before Due Date -->
      <div>
        <h4 class="font-medium text-gray-900 mb-3 flex items-center">
          <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
          Antes del Vencimiento
        </h4>
        <div class="space-y-2 text-sm">
          <div class="flex justify-between p-2 bg-blue-50 rounded">
            <span class="text-gray-600">3 días antes</span>
            <span class="text-gray-800">8:00 AM</span>
          </div>
          <div class="flex justify-between p-2 bg-blue-50 rounded">
            <span class="text-gray-600">1 día antes</span>
            <span class="text-gray-800">8:00 AM</span>
          </div>
          <div class="flex justify-between p-2 bg-blue-50 rounded">
            <span class="text-gray-600">Día de pago</span>
            <span class="text-gray-800">8:00 AM</span>
          </div>
        </div>
      </div>

      <!-- After Due Date (Overdue) -->
      <div>
        <h4 class="font-medium text-gray-900 mb-3 flex items-center">
          <span class="w-3 h-3 bg-red-500 rounded-full mr-2"></span>
          Después del Vencimiento (Mora)
        </h4>
        <div class="space-y-2 text-sm">
          <div class="flex justify-between p-2 bg-red-50 rounded">
            <span class="text-gray-600">1 día después</span>
            <span class="text-gray-800">8:00 AM</span>
          </div>
          <div class="flex justify-between p-2 bg-red-50 rounded">
            <span class="text-gray-600">3 días después</span>
            <span class="text-gray-800">8:00 AM</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Manual Job Triggers -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <h3 class="text-lg font-semibold text-[#125282] mb-2">Ejecutar Jobs Manualmente</h3>
    <p class="text-xs text-gray-600 mb-4">Encolar jobs para ejecución inmediata.</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 lg:gap-4">
      <!-- 1. Mark Installments Overdue -->
      <div class="border border-gray-200 rounded-lg p-3 lg:p-4 hover:shadow-md transition-shadow">
        <h4 class="font-medium text-gray-900 text-sm mb-1">Marcar Cuotas Vencidas</h4>
        <p class="text-xs text-gray-600 mb-2 hidden sm:block">Identifica cuotas con fecha pasada.</p>
        <%= form_with url: trigger_admin_jobs_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :job_class, value: "MarkInstallmentsOverdueJob" %>
          <%= f.submit "Ejecutar",
              class: "bg-orange-600 hover:bg-orange-700 text-white px-3 py-1.5 rounded font-medium transition-colors w-full text-xs",
              data: { confirm: "¿Ejecutar ahora?" } %>
        <% end %>
      </div>

      <!-- 2. Payment Reminder Notifications -->
      <div class="border border-gray-200 rounded-lg p-3 lg:p-4 hover:shadow-md transition-shadow">
        <h4 class="font-medium text-gray-900 text-sm mb-1">Recordatorios de Pago</h4>
        <p class="text-xs text-gray-600 mb-2 hidden sm:block">Envía recordatorios (3 días, 1 día, día de pago)</p>
        <%= form_with url: trigger_admin_jobs_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :job_class, value: "PaymentReminderNotificationJob" %>
          <%= f.submit "Ejecutar",
              class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 rounded font-medium transition-colors w-full text-xs",
              data: { confirm: "¿Ejecutar ahora?" } %>
        <% end %>
      </div>

      <!-- 3. Overdue Payment Notifications -->
      <div class="border border-gray-200 rounded-lg p-3 lg:p-4 hover:shadow-md transition-shadow">
        <h4 class="font-medium text-gray-900 text-sm mb-1">Notificaciones de Mora</h4>
        <p class="text-xs text-gray-600 mb-2 hidden sm:block">Envía avisos (1 día y 3 días después)</p>
        <%= form_with url: trigger_admin_jobs_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :job_class, value: "OverduePaymentNotificationJob" %>
          <%= f.submit "Ejecutar",
              class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1.5 rounded font-medium transition-colors w-full text-xs",
              data: { confirm: "¿Ejecutar ahora?" } %>
        <% end %>
      </div>

      <!-- 4. Auto Block Device -->
      <div class="border border-gray-200 rounded-lg p-3 lg:p-4 hover:shadow-md transition-shadow">
        <h4 class="font-medium text-gray-900 text-sm mb-1">Auto-Bloquear Dispositivos</h4>
        <p class="text-xs text-gray-600 mb-2 hidden sm:block">Bloquea dispositivos con 30+ días mora.</p>
        <%= form_with url: trigger_admin_jobs_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :job_class, value: "AutoBlockDeviceJob" %>
          <%= f.submit "Ejecutar",
              class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1.5 rounded font-medium transition-colors w-full text-xs",
              data: { confirm: "ACCIÓN CRÍTICA: ¿Continuar?" } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filter and search section -->
  <div id="filters-section" class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <h3 class="text-lg font-semibold text-[#125282] mb-4">Filtros</h3>

    <!-- Status filters -->
    <div class="mb-4">
      <span class="text-xs font-medium text-gray-700 block mb-2">Estado:</span>
      <div class="flex flex-wrap gap-2">
        <%= link_to "Todos", admin_jobs_path(anchor: 'filters-section'),
            class: "#{params[:status].blank? ? 'bg-[#125282] text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
        <%= link_to "Pendientes", admin_jobs_path(status: 'pending', anchor: 'filters-section'),
            class: "#{params[:status] == 'pending' ? 'bg-[#125282] text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
        <%= link_to "En Ejecución", admin_jobs_path(status: 'running', anchor: 'filters-section'),
            class: "#{params[:status] == 'running' ? 'bg-[#125282] text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
        <%= link_to "Completados", admin_jobs_path(status: 'completed', anchor: 'filters-section'),
            class: "#{params[:status] == 'completed' ? 'bg-[#125282] text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
        <%= link_to "Fallidos", admin_jobs_path(status: 'failed', anchor: 'filters-section'),
            class: "#{params[:status] == 'failed' ? 'bg-[#125282] text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
      </div>
    </div>

    <%= form_with url: admin_jobs_path, method: :get, local: true do |f| %>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
        <div>
          <%= f.search_field :search, placeholder: "Buscar por ID o clase",
              value: params[:search],
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-[#125282] focus:border-[#125282]" %>
        </div>
        <div>
          <%= f.select :queue, [["Todas las colas", ""]] + @queues.map { |q| [q, q] },
              { selected: params[:queue] },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-[#125282] focus:border-[#125282]" %>
        </div>
        <div>
          <%= f.submit "Buscar", class: "w-full bg-[#125282] hover:bg-[#0f4670] text-white px-4 py-2 rounded-lg font-medium transition-colors text-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Mobile Card View -->
  <div class="block lg:hidden space-y-4">
    <% if @jobs.records.any? %>
      <% @jobs.records.each do |job| %>
        <% status = determine_job_status(job) %>
        <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
          <div class="flex justify-between items-start mb-3">
            <div>
              <p class="font-bold text-gray-900 text-sm"><%= job_class_name_es(job.class_name) %></p>
              <p class="text-xs text-gray-500">ID: <%= job.id %></p>
            </div>
            <% case status %>
            <% when 'completed' %>
              <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Completado</span>
            <% when 'failed' %>
              <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Fallido</span>
            <% when 'running' %>
              <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">En ejecución</span>
            <% when 'pending' %>
              <span class="px-2 py-1 text-xs rounded-full bg-orange-100 text-orange-800">Pendiente</span>
            <% when 'scheduled' %>
              <span class="px-2 py-1 text-xs rounded-full bg-indigo-100 text-indigo-800">Programado</span>
            <% else %>
              <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800"><%= status %></span>
            <% end %>
          </div>

          <div class="grid grid-cols-2 gap-2 text-sm mb-3">
            <div>
              <span class="text-gray-500 text-xs">Cola</span>
              <p class="text-gray-700"><%= job.queue_name %></p>
            </div>
            <div>
              <span class="text-gray-500 text-xs">Creado</span>
              <p class="text-gray-700"><%= job.created_at.strftime("%d/%m %H:%M") %></p>
            </div>
          </div>

          <div class="pt-3 border-t border-gray-100 flex gap-3">
            <%= link_to "Ver", admin_job_path(job), class: "text-[#125282] hover:underline text-sm font-medium" %>
            <% if status == 'failed' %>
              <%= link_to "Reintentar", retry_admin_job_path(job),
                  data: { turbo_method: :post, confirm: "¿Reintentar?" },
                  class: "text-orange-600 hover:underline text-sm font-medium" %>
            <% elsif ['pending', 'scheduled'].include?(status) %>
              <%= link_to "Cancelar", cancel_admin_job_path(job),
                  data: { turbo_method: :post, confirm: "¿Cancelar?" },
                  class: "text-red-600 hover:underline text-sm font-medium" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center text-gray-500">
        No hay jobs que coincidan con tu búsqueda
      </div>
    <% end %>
  </div>

  <!-- Desktop Table View -->
  <div class="hidden lg:block bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo de Job</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cola</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Creado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Finalizado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @jobs.records.any? %>
            <% @jobs.records.each do |job| %>
              <% status = determine_job_status(job) %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to job.id, admin_job_path(job), class: "text-[#125282] hover:underline" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= job_class_name_es(job.class_name) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <span class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800">
                    <%= job.queue_name %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% case status %>
                  <% when 'completed' %>
                    <span class="px-3 py-1 text-xs rounded-full bg-green-100 text-green-800">Completado</span>
                  <% when 'failed' %>
                    <span class="px-3 py-1 text-xs rounded-full bg-red-100 text-red-800">Fallido</span>
                  <% when 'running' %>
                    <span class="px-3 py-1 text-xs rounded-full bg-blue-100 text-blue-800">En ejecución</span>
                  <% when 'pending' %>
                    <span class="px-3 py-1 text-xs rounded-full bg-orange-100 text-orange-800">Pendiente</span>
                  <% when 'scheduled' %>
                    <span class="px-3 py-1 text-xs rounded-full bg-indigo-100 text-indigo-800">Programado</span>
                  <% else %>
                    <span class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800"><%= status %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= job.created_at.strftime("%d/%m/%Y %H:%M") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <% if job.finished_at %>
                    <%= job.finished_at.strftime("%d/%m/%Y %H:%M") %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                  <%= link_to "Ver", admin_job_path(job), class: "text-[#125282] hover:underline font-medium" %>
                  <% if status == 'failed' %>
                    <%= link_to "Reintentar", retry_admin_job_path(job),
                        data: { turbo_method: :post, confirm: "¿Reintentar este job?" },
                        class: "text-orange-600 hover:underline font-medium" %>
                  <% elsif ['pending', 'scheduled'].include?(status) %>
                    <%= link_to "Cancelar", cancel_admin_job_path(job),
                        data: { turbo_method: :post, confirm: "¿Cancelar este job?" },
                        class: "text-red-600 hover:underline font-medium" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                No hay jobs que coincidan con tu búsqueda
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @jobs.records.any? && @jobs.total_pages > 1 %>
    <div class="mt-6 flex flex-col items-center gap-4">
      <!-- Mobile Pagination -->
      <div class="flex lg:hidden items-center gap-3">
        <% if @jobs.current_page > 1 %>
          <%= link_to "← Anterior", admin_jobs_path(request.query_parameters.merge(page: @jobs.current_page - 1)),
              class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        <% else %>
          <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">← Anterior</span>
        <% end %>

        <span class="text-sm text-gray-600"><%= @jobs.current_page %> / <%= @jobs.total_pages %></span>

        <% if @jobs.current_page < @jobs.total_pages %>
          <%= link_to "Siguiente →", admin_jobs_path(request.query_parameters.merge(page: @jobs.current_page + 1)),
              class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        <% else %>
          <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">Siguiente →</span>
        <% end %>
      </div>

      <!-- Desktop Pagination -->
      <div class="hidden lg:flex items-center gap-2">
        <% if @jobs.current_page > 1 %>
          <%= link_to "← Anterior", admin_jobs_path(request.query_parameters.merge(page: @jobs.current_page - 1)),
              class: "px-4 py-2 bg-gray-100 rounded-lg text-gray-700 hover:bg-gray-200 font-medium" %>
        <% end %>

        <% (1..@jobs.total_pages).each do |page_num| %>
          <% if page_num == @jobs.current_page %>
            <span class="px-4 py-2 bg-[#125282] text-white rounded-lg font-medium"><%= page_num %></span>
          <% elsif (page_num - @jobs.current_page).abs <= 2 || page_num == 1 || page_num == @jobs.total_pages %>
            <%= link_to page_num, admin_jobs_path(request.query_parameters.merge(page: page_num)),
                class: "px-4 py-2 bg-gray-100 rounded-lg text-gray-700 hover:bg-gray-200 font-medium" %>
          <% elsif page_num == 2 && @jobs.current_page > 4 %>
            <span class="px-2 py-2 text-gray-500">...</span>
          <% elsif page_num == @jobs.total_pages - 1 && @jobs.current_page < @jobs.total_pages - 3 %>
            <span class="px-2 py-2 text-gray-500">...</span>
          <% end %>
        <% end %>

        <% if @jobs.current_page < @jobs.total_pages %>
          <%= link_to "Siguiente →", admin_jobs_path(request.query_parameters.merge(page: @jobs.current_page + 1)),
              class: "px-4 py-2 bg-gray-100 rounded-lg text-gray-700 hover:bg-gray-200 font-medium" %>
        <% end %>
      </div>

      <p class="text-sm text-gray-500">
        Mostrando <%= @jobs.offset_value + 1 %> a <%= [@jobs.offset_value + @jobs.size, @jobs.total_count].min %> de <%= @jobs.total_count %> jobs
      </p>
    </div>
  <% end %>
</div>

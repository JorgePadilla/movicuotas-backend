<% content_for :title, "Gestión de Usuarios - Admin - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [{ name: "Usuarios" }]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Gestión de Usuarios</h1>
        <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Administra usuarios del sistema</p>
      </div>
      <%= link_to "Crear Usuario", new_admin_user_path, class: "bg-[#125282] hover:bg-[#0f4670] text-white px-4 py-2 rounded-lg font-medium transition-colors text-sm text-center" %>
    </div>
  </div>

  <!-- Summary stats -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 lg:gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-[#125282]">Total</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1"><%= User.count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-purple-600">Administradores</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1"><%= User.where(role: 'admin').count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-green-600">Supervisores</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1"><%= User.where(role: 'supervisor').count %></p>
    </div>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <h3 class="text-sm lg:text-lg font-semibold text-blue-600">Vendedores</h3>
      <p class="text-xl lg:text-3xl font-bold text-gray-800 mt-1"><%= User.where(role: 'vendedor').count %></p>
    </div>
  </div>

  <!-- Filter by role -->
  <div class="mb-6 flex gap-2 flex-wrap">
    <%= link_to "Todos", admin_users_path, class: "#{params[:role].blank? ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282]'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
    <%= link_to "Admins", admin_users_path(role: 'admin'), class: "#{params[:role] == 'admin' ? 'bg-purple-600 text-white' : 'bg-white border border-purple-200 text-purple-600'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
    <%= link_to "Supervisores", admin_users_path(role: 'supervisor'), class: "#{params[:role] == 'supervisor' ? 'bg-green-600 text-white' : 'bg-white border border-green-200 text-green-600'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
    <%= link_to "Vendedores", admin_users_path(role: 'vendedor'), class: "#{params[:role] == 'vendedor' ? 'bg-blue-600 text-white' : 'bg-white border border-blue-200 text-blue-600'} px-3 py-1 rounded-lg font-medium text-xs transition-colors" %>
  </div>

  <!-- Mobile Card View -->
  <div class="block lg:hidden space-y-4">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
          <div class="flex justify-between items-start mb-3">
            <div>
              <p class="font-bold text-gray-900"><%= user.full_name %></p>
              <p class="text-xs text-gray-500"><%= user.email %></p>
            </div>
            <span class="px-2 py-1 text-xs rounded-full <%= user.role == 'admin' ? 'bg-purple-100 text-purple-800' : user.role == 'supervisor' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= role_es(user.role) %>
            </span>
          </div>

          <div class="grid grid-cols-2 gap-2 text-sm mb-3">
            <div>
              <span class="text-gray-500 text-xs">Sucursal</span>
              <p class="text-gray-700"><%= user.branch_number || "—" %></p>
            </div>
            <div>
              <span class="text-gray-500 text-xs">Creado</span>
              <p class="text-gray-700"><%= user.created_at.strftime("%d/%m/%Y") %></p>
            </div>
          </div>

          <div class="pt-3 border-t border-gray-100 flex gap-3">
            <%= link_to "Ver", admin_user_path(user), class: "text-[#125282] hover:underline text-sm font-medium" %>
            <%= link_to "Editar", edit_admin_user_path(user), class: "text-green-600 hover:underline text-sm font-medium" %>
            <% if user != current_user %>
              <%= link_to "Eliminar", admin_user_path(user), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "text-red-600 hover:underline text-sm font-medium" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center text-gray-500">
        No hay usuarios registrados
      </div>
    <% end %>
  </div>

  <!-- Desktop Table View -->
  <div class="hidden lg:block bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sucursal</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rol</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Creado</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Última Actividad</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @users.any? %>
            <% @users.each do |user| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="font-medium text-gray-900"><%= user.full_name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= user.email %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= user.branch_number || "—" %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 text-xs rounded-full <%= user.role == 'admin' ? 'bg-purple-100 text-purple-800' : user.role == 'supervisor' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= role_es(user.role) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= user.created_at.strftime("%d/%m/%Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= user.updated_at.strftime("%d/%m/%Y %H:%M") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-3">
                  <%= link_to "Ver", admin_user_path(user), class: "text-[#125282] hover:underline font-medium" %>
                  <%= link_to "Editar", edit_admin_user_path(user), class: "text-green-600 hover:underline font-medium" %>
                  <% if user != current_user %>
                    <%= link_to "Eliminar", admin_user_path(user), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "text-red-600 hover:underline font-medium" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                No hay usuarios registrados
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @users.respond_to?(:total_pages) && @users.total_pages > 1 %>
    <div class="mt-6 flex flex-col items-center gap-4">
      <!-- Mobile Pagination -->
      <div class="flex lg:hidden items-center gap-3">
        <% if @users.first_page? %>
          <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", admin_users_path(role: params[:role], page: @users.current_page - 1), class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        <% end %>

        <span class="text-sm text-gray-600"><%= @users.current_page %> / <%= @users.total_pages %></span>

        <% if @users.last_page? %>
          <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", admin_users_path(role: params[:role], page: @users.current_page + 1), class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        <% end %>
      </div>

      <!-- Desktop Pagination -->
      <div class="hidden lg:flex items-center gap-2">
        <% if @users.first_page? %>
          <span class="px-3 py-2 text-gray-400 cursor-not-allowed">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", admin_users_path(role: params[:role], page: @users.current_page - 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
        <% end %>

        <div class="flex items-center gap-1">
          <% (1..@users.total_pages).each do |page| %>
            <% if page == @users.current_page %>
              <span class="px-3 py-2 bg-[#125282] text-white rounded-lg font-medium"><%= page %></span>
            <% elsif (page - @users.current_page).abs <= 1 || page == 1 || page == @users.total_pages %>
              <%= link_to page, admin_users_path(role: params[:role], page: page), class: "px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium transition-colors" %>
            <% elsif page == 2 && @users.current_page > 3 %>
              <span class="px-2 py-2 text-gray-500">...</span>
            <% elsif page == @users.total_pages - 1 && @users.current_page < @users.total_pages - 2 %>
              <span class="px-2 py-2 text-gray-500">...</span>
            <% end %>
          <% end %>
        </div>

        <% if @users.last_page? %>
          <span class="px-3 py-2 text-gray-400 cursor-not-allowed">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", admin_users_path(role: params[:role], page: @users.current_page + 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
        <% end %>
      </div>

      <p class="text-sm text-gray-500">
        Mostrando <%= @users.size %> de <%= @users.total_count %> usuarios
      </p>
    </div>
  <% end %>
</div>

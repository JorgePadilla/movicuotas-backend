<% content_for :title, "Editar Usuario - Admin - MOVICUOTAS" %>

<div class="max-w-2xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Admin::BreadcrumbComponent.new(items: [
    { name: "Usuarios", path: admin_users_path },
    { name: @user.full_name, path: admin_user_path(@user) },
    { name: "Editar" }
  ]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Editar Usuario</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base"><%= @user.full_name %> (<%= @user.email %>)</p>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8">
    <%= render "form" %>
  </div>
</div>

<% content_for :title, "Admin Dashboard - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <!-- Page header -->
  <div class="mb-4">
    <h1 class="text-3xl font-bold text-[#125282]">Dashboard de Administrador</h1>
    <p class="text-gray-600 mt-2">Estad√≠sticas del sistema y gesti√≥n administrativa</p>
  </div>

  <!-- Quick actions -->
  <div class="mb-6 flex flex-wrap gap-6">
    <% button_class = "px-6 py-3 rounded-lg font-medium transition-colors hover:bg-[#125282]" %>

    <%= link_to "Gesti√≥n de Usuarios", admin_users_path,
        class: "#{controller_name == 'users' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <%= link_to "Gesti√≥n de Clientes", admin_customers_path,
        class: "#{controller_name == 'customers' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <%= link_to "Gesti√≥n de Contratos", admin_contracts_path,
        class: "#{controller_name == 'contracts' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <%= link_to "QR por Defecto", admin_default_qr_codes_path,
        class: "#{controller_name == 'default_qr_codes' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <%= link_to "Reportes del Sistema", admin_reports_path,
        class: "#{controller_name == 'reports' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <%= link_to "Pr√©stamos y Pagos", admin_loans_path,
        class: "#{controller_name == 'loans' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <%= link_to "Monitoreo de Jobs", admin_jobs_path,
        class: "#{controller_name == 'jobs' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" %>

    <% pending_down_payments = Loan.down_payment_pending_verification.count %>
    <%= link_to admin_down_payments_path,
        class: "relative #{controller_name == 'down_payments' ? 'bg-[#125282] text-white' : 'bg-white border border-[#125282] text-[#125282] hover:text-white'} #{button_class}" do %>
      Primas Pendientes
      <% if pending_down_payments > 0 %>
        <span class="absolute -top-2 -right-2 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white bg-yellow-500 rounded-full">
          <%= pending_down_payments %>
        </span>
      <% end %>
    <% end %>
  </div>

  <!-- Metrics grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <!-- Users card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">üë• Usuarios</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @total_users %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Administradores</span>
          <span class="font-medium text-gray-800"><%= @admin_users %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Vendedores</span>
          <span class="font-medium text-gray-800"><%= @vendor_users %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Cobradores</span>
          <span class="font-medium text-gray-800"><%= @collector_users %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Activos (30 d√≠as)</span>
          <span class="font-medium text-green-600"><%= @active_users %></span>
        </div>
      </div>
    </div>

    <!-- Customers card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">üë§ Clientes</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @total_customers %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Con pr√©stamos activos</span>
          <span class="font-medium text-green-600"><%= @customers_with_active_loans %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Suspendidos</span>
          <span class="font-medium text-orange-500"><%= @suspended_customers %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Bloqueados</span>
          <span class="font-medium text-red-600"><%= @blocked_customers %></span>
        </div>
      </div>
    </div>

    <!-- Loans card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">üí∞ Pr√©stamos</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @total_loans %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Activos</span>
          <span class="font-medium text-green-600"><%= @active_loans %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Completados</span>
          <span class="font-medium text-blue-600"><%= @completed_loans %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">En mora</span>
          <span class="font-medium text-red-600"><%= @overdue_loans %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valor total activos</span>
          <span class="font-medium text-gray-800">L. <%= number_with_delimiter(@total_loan_value, delimiter: ',') %></span>
        </div>
      </div>
    </div>

    <!-- Payments card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">üí≥ Pagos</h3>
        <div class="text-2xl font-bold text-gray-800">L. <%= number_with_delimiter(@payments_this_month, delimiter: ',') %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Ingresos totales</span>
          <span class="font-medium text-gray-800">L. <%= number_with_delimiter(@total_revenue, delimiter: ',') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Monto en mora</span>
          <span class="font-medium text-red-600">L. <%= number_with_delimiter(@overdue_amount, delimiter: ',') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">M√©todos de pago</span>
          <div class="text-right">
            <div class="text-xs">
              <span class="text-gray-600">Efectivo: <%= @cash_payments %></span> |
              <span class="text-gray-600">Tarjeta: <%= @card_payments %></span> |
              <span class="text-gray-600">Transferencia: <%= @transfer_payments %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Second row: Devices & Branch statistics -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <!-- Devices card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">üì± Dispositivos</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @total_devices %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Asignados</span>
          <span class="font-medium text-gray-800"><%= @assigned_devices %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Disponibles</span>
          <span class="font-medium text-green-600"><%= @available_devices %></span>
        </div>
      </div>
    </div>

    <!-- Branch statistics card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">üè¢ Estad√≠sticas por Sucursal</h3>
      </div>
      <div class="space-y-3">
        <% if @loans_by_branch.any? %>
          <% @loans_by_branch.each do |branch_number, loan_count| %>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Sucursal <%= branch_number %></span>
              <div class="text-right">
                <div class="font-medium text-gray-800"><%= loan_count %> pr√©stamos</div>
                <div class="text-xs text-gray-500">
                  <% revenue = @revenue_by_branch[branch_number] || 0 %>
                  L. <%= number_with_delimiter(revenue, delimiter: ',') %> recaudado
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-sm">No hay datos de sucursales</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Three-column layout for recent activity -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Recent loans -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-[#125282]">Pr√©stamos Recientes</h3>
        <%= link_to "Ver todos", admin_loans_path, class: "text-sm text-[#125282] hover:underline" %>
      </div>
      <% if @recent_loans.any? %>
        <div class="space-y-3">
          <% @recent_loans.each do |loan| %>
            <div class="flex justify-between items-center pb-3 border-b border-gray-100 last:border-0">
              <div>
                <div class="font-medium text-gray-900"><%= loan.contract_number %></div>
                <div class="text-xs text-gray-500"><%= loan.customer.full_name %></div>
              </div>
              <div class="text-right">
                <div class="text-sm font-medium text-gray-800">L. <%= number_with_delimiter(loan.total_amount, delimiter: ',') %></div>
                <div class="text-xs text-gray-500"><%= loan.created_at.strftime("%d/%m/%Y") %></div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No hay pr√©stamos recientes</p>
      <% end %>
    </div>

    <!-- Recent payments -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-[#125282]">Pagos Recientes</h3>
        <%= link_to "Ver todos", admin_payments_path, class: "text-sm text-[#125282] hover:underline" %>
      </div>
      <% if @recent_payments.any? %>
        <div class="space-y-3">
          <% @recent_payments.each do |payment| %>
            <div class="flex justify-between items-center pb-3 border-b border-gray-100 last:border-0">
              <div>
                <div class="font-medium text-gray-900"><%= payment.loan.customer.full_name %></div>
                <div class="text-xs text-gray-500"><%= payment.payment_date.strftime("%d/%m/%Y") %></div>
              </div>
              <div class="text-right">
                <div class="text-sm font-medium text-gray-800">L. <%= number_with_delimiter(payment.amount, delimiter: ',') %></div>
                <div class="text-xs">
                  <span class="px-1.5 py-0.5 rounded bg-blue-100 text-blue-800 text-xs"><%= payment.payment_method.titleize %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No hay pagos recientes</p>
      <% end %>
    </div>

    <!-- Recent users -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-[#125282]">Usuarios Recientes</h3>
        <%= link_to "Ver todos", admin_users_path, class: "text-sm text-[#125282] hover:underline" %>
      </div>
      <% if @recent_users.any? %>
        <div class="space-y-3">
          <% @recent_users.each do |user| %>
            <div class="flex justify-between items-center pb-3 border-b border-gray-100 last:border-0">
              <div>
                <div class="font-medium text-gray-900"><%= user.full_name %></div>
                <div class="text-xs text-gray-500"><%= user.email %></div>
              </div>
              <div class="text-right">
                <div class="text-sm">
                  <span class="px-2 py-1 text-xs rounded-full <%= user.role == 'admin' ? 'bg-purple-100 text-purple-800' : user.role == 'vendedor' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= user.role.titleize %>
                  </span>
                </div>
                <div class="text-xs text-gray-500"><%= user.created_at.strftime("%d/%m/%Y") %></div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No hay usuarios recientes</p>
      <% end %>
    </div>
  </div>

  <!-- Footer note -->
  <div class="mt-6 pt-6 border-t border-gray-200 text-center text-sm text-gray-500">
    <p>Dashboard de administrador ‚Ä¢ Actualizado en tiempo real ‚Ä¢ √öltima actualizaci√≥n: <%= Time.current.strftime("%d/%m/%Y %H:%M") %></p>
  </div>
</div>
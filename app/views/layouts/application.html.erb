    <script>
      // Flash message auto-dismiss with animation
      const FLASH_DURATION = 5000; // 5 seconds

      function initFlashMessages() {
        const flashMessages = document.querySelectorAll('.flash-message:not([data-initialized])');

        flashMessages.forEach((flash, index) => {
          // Mark as initialized to prevent double-init
          flash.setAttribute('data-initialized', 'true');

          // Add relative positioning for progress bar
          flash.style.position = 'relative';
          flash.style.overflow = 'hidden';

          // Animate entrance
          flash.style.opacity = '0';
          flash.style.transform = 'translateX(100%)';

          setTimeout(() => {
            flash.style.opacity = '1';
            flash.style.transform = 'translateX(0)';
          }, index * 100 + 50);

          // Animate progress bar
          const progressBar = flash.querySelector('.flash-progress');
          if (progressBar) {
            progressBar.style.transition = `width ${FLASH_DURATION}ms linear`;
            setTimeout(() => {
              progressBar.style.width = '0%';
            }, 100);
          }

          // Store timeout ID so we can cancel on hover
          let dismissTimeout;

          function startDismissTimer() {
            dismissTimeout = setTimeout(() => {
              dismissFlash(flash);
            }, FLASH_DURATION);
          }

          // Start the timer
          startDismissTimer();

          // Pause on hover
          flash.addEventListener('mouseenter', () => {
            clearTimeout(dismissTimeout);
            if (progressBar) {
              progressBar.style.transitionPlayState = 'paused';
            }
          });

          flash.addEventListener('mouseleave', () => {
            if (progressBar) {
              progressBar.style.transitionPlayState = 'running';
            }
            // Restart timer with remaining time (simplified: restart full timer)
            startDismissTimer();
          });
        });
      }

      function dismissFlash(element) {
        if (!element || element.classList.contains('dismissing')) return;

        element.classList.add('dismissing');
        element.style.transition = 'all 0.3s ease-out';
        element.style.opacity = '0';
        element.style.transform = 'translateX(100%)';

        setTimeout(() => {
          element.style.height = element.offsetHeight + 'px';
          element.style.marginBottom = '0';
          element.style.padding = '0';
          element.style.height = '0';

          setTimeout(() => {
            element.remove();
            // Remove container if empty
            const container = document.getElementById('flash-container');
            if (container && container.children.length === 0) {
              container.remove();
            }
          }, 200);
        }, 300);
      }

      // Mobile menu toggle
      function initMobileMenu() {
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (menuButton && mobileMenu && !menuButton.hasAttribute('data-initialized')) {
          menuButton.setAttribute('data-initialized', 'true');
          menuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
          });
        }
      }

      // Navigation dropdown toggle (Supervisor/Admin only)
      function initNavDropdown() {
        const dropdownButton = document.getElementById('nav-dropdown-button');
        const dropdownMenu = document.getElementById('nav-dropdown-menu');

        if (dropdownButton && dropdownMenu && !dropdownButton.hasAttribute('data-initialized')) {
          dropdownButton.setAttribute('data-initialized', 'true');

          dropdownButton.addEventListener('click', function(e) {
            e.stopPropagation();
            dropdownMenu.classList.toggle('hidden');
          });

          // Close dropdown when clicking outside
          document.addEventListener('click', function(e) {
            if (!dropdownButton.contains(e.target) && !dropdownMenu.contains(e.target)) {
              dropdownMenu.classList.add('hidden');
            }
          });
        }
      }

      // Initialize Flatpickr with Spanish locale globally
      function initFlatpickrSpanish() {
        if (typeof flatpickr !== 'undefined' && flatpickr.l10ns && flatpickr.l10ns.es) {
          flatpickr.localize(flatpickr.l10ns.es);

          // Initialize all date inputs that don't have a Stimulus controller
          document.querySelectorAll('input[type="date"]:not([data-controller])').forEach(function(input) {
            if (!input._flatpickr) {
              flatpickr(input, {
                locale: 'es',
                dateFormat: 'Y-m-d',
                altInput: true,
                altFormat: 'd/m/Y',
                allowInput: true
              });
            }
          });
        }
      }

      // Initialize on various events to support Turbo
      function initAll() {
        initMobileMenu();
        initNavDropdown();
        initFlashMessages();
        initFlatpickrSpanish();
      }

      // Regular page load
      document.addEventListener('DOMContentLoaded', initAll);

      // Turbo page loads (Hotwire)
      document.addEventListener('turbo:load', initAll);
      document.addEventListener('turbo:render', initAll);
      document.addEventListener('turbo:frame-load', initAll);

      // Also run immediately in case DOM is already ready
      if (document.readyState === 'complete' || document.readyState === 'interactive') {
        setTimeout(initAll, 10);
      }
    </script>

                    <% end %>

                    <%= link_to vendor_loans_path, class: "flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-100 #{current_page?(vendor_loans_path) ? 'bg-gray-50 text-[#125282] font-medium' : ''}" do %>
                      <svg class="mr-3 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                      </svg>
                      Préstamos
                    <% end %>

                    <%= link_to vendor_payments_path, class: "flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-100 #{current_page?(vendor_payments_path) ? 'bg-gray-50 text-[#125282] font-medium' : ''}" do %>
                      <svg class="mr-3 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                      </svg>

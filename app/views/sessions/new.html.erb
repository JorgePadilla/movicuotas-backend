<div class="text-center mb-6 sm:mb-8">
  <h1 class="text-3xl sm:text-4xl font-bold text-[#125282]">MOVICUOTAS</h1>
  <p class="text-gray-600 mt-2 text-base sm:text-lg">Tu Crédito, Tu Móvil</p>
</div>

<div class="mx-auto max-w-sm bg-white rounded-lg shadow-lg p-4 sm:p-6 md:p-8 border border-gray-200 mb-6 sm:mb-8">
  <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4 sm:mb-6">Iniciar Sesión</h2>

  <%= form_with url: login_path, class: "space-y-4 sm:space-y-6", local: true do |f| %>
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, required: true, class: "w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent", placeholder: "usuario@movicuotas.com" %>
    </div>

    <div>
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-0 mb-2">
        <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700" %>
        <%= link_to "¿Olvidaste tu contraseña?", forgot_password_path, class: "text-xs sm:text-sm text-[#125282] hover:underline" %>
      </div>
      <%= f.password_field :password, required: true, class: "w-full px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent", placeholder: "••••••••" %>
    </div>

    <div>
      <label class="flex items-center gap-2">
        <%= f.check_box :remember_me, { class: "rounded border-gray-300 text-[#125282] focus:ring-[#125282]" } %>
        <span class="text-xs sm:text-sm text-gray-700">Recuérdame en este dispositivo</span>
      </label>
    </div>

    <div>
      <%= f.submit "Iniciar Sesión", class: "w-full py-2 sm:py-3 px-4 bg-[#125282] hover:bg-[#0f4670] text-white text-sm sm:text-base font-semibold rounded-lg transition duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>

<div class="text-center text-gray-500 text-xs sm:text-sm px-4">
  <p>© <%= Date.today.year %> MOVICUOTAS - Sistema de Crédito para Móviles</p>
</div>
<% content_for :title, "Verificacion - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Progress Bar -->
  <div class="mb-6 md:mb-8">
    <h1 class="text-xl md:text-3xl font-bold text-[#125282] mb-1 md:mb-2">Solicitud de Credito - Paso 3 de 5</h1>
    <p class="text-gray-600 mb-4 text-sm md:text-base">Verificacion de Identidad</p>
    <%= render partial: "progress_bar", locals: { current_step: 3 } %>
  </div>

  <div class="bg-white shadow rounded-lg p-4 md:p-6">
    <% otp_sent = @credit_application.otp_sent_at.present? && !@credit_application.otp_expired? %>

    <% if otp_sent %>
      <!-- OTP Code Entry -->
      <div id="otp-form" data-controller="otp-verification"
           data-otp-verification-time-remaining-value="<%= @credit_application.otp_time_remaining %>"
           data-otp-verification-resend-cooldown-value="<%= @credit_application.time_until_resend %>">
        <%= render partial: "otp_form", locals: { credit_application: @credit_application } %>
      </div>
    <% else %>
      <!-- Method Selection -->
      <div class="text-center space-y-6">
        <!-- Icon -->
        <div class="mx-auto w-16 h-16 bg-[#125282]/10 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-[#125282]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>

        <!-- Title -->
        <div>
          <h2 class="text-xl font-bold text-gray-900">Verificacion de Identidad</h2>
          <p class="mt-2 text-gray-600">
            El cliente recibira un codigo de 4 digitos por SMS para verificar su identidad.
          </p>
        </div>

        <!-- Customer Info -->
        <div class="bg-gray-50 rounded-lg p-4 text-left max-w-md mx-auto">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-[#125282] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
            <p class="text-sm text-gray-600">
              <span class="font-medium">Telefono:</span> <%= @credit_application.customer.phone %>
            </p>
          </div>
        </div>

        <!-- Send SMS Form -->
        <%= form_with url: send_otp_vendor_credit_application_path(@credit_application), method: :post, class: "space-y-6" do |f| %>
          <input type="hidden" name="verification_method" value="sms">

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "Enviar Codigo por SMS",
                class: "w-full max-w-md mx-auto block px-6 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282]" %>
          </div>
        <% end %>

        <!-- Back Link -->
        <div class="pt-4">
          <%= link_to "â† Volver a Fotografias", photos_vendor_credit_application_path(@credit_application),
              class: "text-gray-500 hover:text-gray-700 text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :title, "Verificacion - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Progress Bar -->
  <div class="mb-6 md:mb-8">
    <h1 class="text-xl md:text-3xl font-bold text-[#125282] mb-1 md:mb-2">Solicitud de Credito - Paso 3 de 5</h1>
    <p class="text-gray-600 mb-4 text-sm md:text-base">Verificacion de Identidad</p>
    <%= render partial: "progress_bar", locals: { current_step: 3 } %>
  </div>

  <div class="bg-white shadow rounded-lg p-4 md:p-6">
    <% otp_sent = @credit_application.otp_sent_at.present? && !@credit_application.otp_expired? %>

    <% if otp_sent %>
      <!-- OTP Code Entry -->
      <div id="otp-form" data-controller="otp-verification"
           data-otp-verification-time-remaining-value="<%= @credit_application.otp_time_remaining %>"
           data-otp-verification-resend-cooldown-value="<%= @credit_application.time_until_resend %>">
        <%= render partial: "otp_form", locals: { credit_application: @credit_application } %>
      </div>
    <% else %>
      <!-- Method Selection -->
      <div class="text-center space-y-6">
        <!-- Icon -->
        <div class="mx-auto w-16 h-16 bg-[#125282]/10 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-[#125282]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>

        <!-- Title -->
        <div>
          <h2 class="text-xl font-bold text-gray-900">Verificacion de Identidad</h2>
          <p class="mt-2 text-gray-600">
            El cliente recibira un codigo de 4 digitos para verificar su identidad.
            Selecciona como desea recibirlo:
          </p>
        </div>

        <!-- Customer Info -->
        <div class="bg-gray-50 rounded-lg p-4 text-left max-w-md mx-auto">
          <p class="text-sm text-gray-600">
            <span class="font-medium">Telefono:</span> <%= @credit_application.customer.phone %>
          </p>
          <p class="text-sm text-gray-600 mt-1">
            <span class="font-medium">Correo:</span> <%= @credit_application.customer.email %>
          </p>
        </div>

        <!-- Method Selection Form -->
        <%= form_with url: send_otp_vendor_credit_application_path(@credit_application), method: :post, class: "space-y-6" do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-lg mx-auto">
            <!-- WhatsApp Option -->
            <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-[#125282] transition-colors duration-200 has-[:checked]:border-[#125282] has-[:checked]:bg-[#125282]/5">
              <input type="radio" name="verification_method" value="whatsapp"
                     class="h-5 w-5 text-[#125282] border-gray-300 focus:ring-[#125282]"
                     required>
              <div class="ml-3 flex items-center">
                <svg class="w-6 h-6 text-[#25D366] mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                <span class="text-sm font-medium text-gray-900">WhatsApp</span>
              </div>
            </label>

            <!-- Email Option -->
            <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-[#125282] transition-colors duration-200 has-[:checked]:border-[#125282] has-[:checked]:bg-[#125282]/5">
              <input type="radio" name="verification_method" value="email"
                     class="h-5 w-5 text-[#125282] border-gray-300 focus:ring-[#125282]"
                     required>
              <div class="ml-3 flex items-center">
                <svg class="w-6 h-6 text-[#125282] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span class="text-sm font-medium text-gray-900">Correo Electronico</span>
              </div>
            </label>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "Enviar Codigo",
                class: "w-full max-w-md mx-auto block px-6 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282]" %>
          </div>
        <% end %>

        <!-- Back Link -->
        <div class="pt-4">
          <%= link_to "â† Volver a Fotografias", photos_vendor_credit_application_path(@credit_application),
              class: "text-gray-500 hover:text-gray-700 text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

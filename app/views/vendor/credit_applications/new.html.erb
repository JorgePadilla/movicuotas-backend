<% content_for :title, "Datos Generales - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Progress Bar -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-[#125282] mb-2">Solicitud de Crédito - Paso 1 de 4</h1>
    <p class="text-gray-600 mb-4">Datos Generales del Cliente</p>

    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold">1</div>
        <span class="ml-2 font-medium text-[#125282]">Datos Generales</span>
      </div>
      <div class="h-1 w-8 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">2</div>
        <span class="ml-2 font-medium text-gray-500">Fotografías</span>
      </div>
      <div class="h-1 w-8 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">3</div>
        <span class="ml-2 font-medium text-gray-500">Datos Laborales</span>
      </div>
      <div class="h-1 w-8 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">4</div>
        <span class="ml-2 font-medium text-gray-500">Resumen</span>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: @credit_application, url: vendor_credit_applications_path, class: "space-y-6" do |f| %>
      <%= f.fields_for :customer, @customer do |customer_fields| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Identification Number -->
          <div>
            <%= customer_fields.label :identification_number, "Número de Identidad *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.text_field :identification_number,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "Ej: 0801199012345 (13 dígitos)",
                  required: true,
                  pattern: "\\d{13}",
                  title: "Debe tener 13 dígitos numéricos" %>
            <p class="mt-1 text-sm text-gray-500">13 dígitos sin guiones ni espacios</p>
          </div>

          <!-- Full Name -->
          <div>
            <%= customer_fields.label :full_name, "Nombre Completo *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.text_field :full_name,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "Ej: Juan Pérez García",
                  required: true %>
          </div>

          <!-- Gender -->
          <div>
            <%= customer_fields.label :gender, "Género *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.select :gender,
                  options_for_select(Customer.genders.map { |key, value| [key.humanize, key] }, @customer.gender),
                  { include_blank: "Seleccionar..." },
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  required: true %>
          </div>

          <!-- Date of Birth -->
          <div>
            <%= customer_fields.label :date_of_birth, "Fecha de Nacimiento *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.date_field :date_of_birth,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  required: true,
                  max: 18.years.ago.to_date,
                  min: 100.years.ago.to_date %>
            <p class="mt-1 text-sm text-gray-500">Debe ser mayor de edad (18+ años)</p>
          </div>

          <!-- Address -->
          <div>
            <%= customer_fields.label :address, "Dirección *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.text_field :address,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "Ej: Colonia Los Alamos, Calle Principal",
                  required: true %>
          </div>

          <!-- City -->
          <div>
            <%= customer_fields.label :city, "Ciudad *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.text_field :city,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "Ej: Tegucigalpa",
                  required: true %>
          </div>

          <!-- Department -->
          <div>
            <%= customer_fields.label :department, "Departamento *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.text_field :department,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "Ej: Francisco Morazán",
                  required: true %>
          </div>

          <!-- Phone -->
          <div>
            <%= customer_fields.label :phone, "Teléfono *", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.text_field :phone,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "Ej: 98765432 (8 dígitos)",
                  required: true,
                  pattern: "\\d{8}",
                  title: "Debe tener 8 dígitos numéricos" %>
            <p class="mt-1 text-sm text-gray-500">8 dígitos sin guiones ni espacios</p>
          </div>

          <!-- Email (Optional) -->
          <div>
            <%= customer_fields.label :email, "Correo Electrónico (Opcional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= customer_fields.email_field :email,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
                  placeholder: "ejemplo@correo.com" %>
          </div>
        </div>
      <% end %>

      <!-- Notes -->
      <div class="pt-4 border-t border-gray-200">
        <%= f.label :notes, "Notas Adicionales (Opcional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :notes,
              rows: 3,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent",
              placeholder: "Observaciones o comentarios sobre esta solicitud..." %>
      </div>

      <!-- Navigation Buttons -->
      <div class="flex justify-between pt-6 border-t border-gray-200">
        <%= link_to "← Cancelar", vendor_customer_search_path, class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200" %>
        <%= f.submit "Siguiente →", class: "px-6 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282]" %>
      </div>
    <% end %>
  </div>
</div>
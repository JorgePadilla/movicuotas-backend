<% content_for :title, "Fotografías - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Progress Bar -->
  <div class="mb-6 md:mb-8">
    <h1 class="text-xl md:text-3xl font-bold text-[#125282] mb-1 md:mb-2">Solicitud de Crédito - Paso 2 de 4</h1>
    <p class="text-gray-600 mb-4 text-sm md:text-base">Fotografías de Identificación</p>

    <%# Mobile Progress: Simple dots %>
    <div class="flex md:hidden items-center justify-center space-x-2 mb-2">
      <div class="w-3 h-3 rounded-full bg-[#125282]"></div>
      <div class="w-6 h-0.5 bg-[#125282]"></div>
      <div class="w-3 h-3 rounded-full bg-[#125282]"></div>
      <div class="w-6 h-0.5 bg-gray-300"></div>
      <div class="w-3 h-3 rounded-full bg-gray-300"></div>
      <div class="w-6 h-0.5 bg-gray-300"></div>
      <div class="w-3 h-3 rounded-full bg-gray-300"></div>
    </div>

    <%# Desktop Progress: Full labels %>
    <div class="hidden md:flex items-center justify-between mb-2">
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold">1</div>
        <span class="ml-2 font-medium text-[#125282]">Datos Generales</span>
      </div>
      <div class="h-1 w-8 bg-[#125282]"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold">2</div>
        <span class="ml-2 font-medium text-[#125282]">Fotografías</span>
      </div>
      <div class="h-1 w-8 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">3</div>
        <span class="ml-2 font-medium text-gray-500">Datos Laborales</span>
      </div>
      <div class="h-1 w-8 bg-gray-300"></div>
      <div class="flex items-center">
        <div class="w-8 h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold">4</div>
        <span class="ml-2 font-medium text-gray-500">Resumen</span>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-4 md:p-6">
    <% if flash[:alert].present? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Error:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <%= flash[:alert] %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with model: @credit_application, url: update_photos_vendor_credit_application_path(@credit_application), method: :patch, class: "space-y-8" do |f| %>
      <div class="space-y-6">
        <!-- ID Front Image - Back camera -->
        <div class="border-2 border-gray-300 rounded-lg p-4 md:p-6"
             data-controller="camera-capture"
             data-camera-capture-facing-mode-value="environment">
          <div class="text-center mb-4">
            <svg class="mx-auto h-10 w-10 md:h-12 md:w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="text-base md:text-lg font-medium text-gray-900 mt-2">Fotografía del Frente de la Identificación *</h3>
            <p class="text-sm text-gray-500">Captura una imagen clara del frente de la identificación</p>
          </div>

          <!-- Camera/Preview Area -->
          <div class="relative bg-gray-900 rounded-lg overflow-hidden aspect-video mb-4">
            <!-- Placeholder -->
            <div data-camera-capture-target="placeholder" class="absolute inset-0 flex items-center justify-center bg-gray-100">
              <div class="text-center text-gray-500">
                <svg class="mx-auto h-16 w-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p class="text-sm">Presiona "Iniciar Cámara" para comenzar</p>
              </div>
            </div>

            <!-- Video element -->
            <video data-camera-capture-target="video" class="hidden w-full h-full object-cover" playsinline autoplay muted></video>

            <!-- Canvas for capture (hidden) -->
            <canvas data-camera-capture-target="canvas" class="hidden"></canvas>

            <!-- Preview image -->
            <img data-camera-capture-target="preview" class="hidden w-full h-full object-cover" alt="Vista previa">
          </div>

          <!-- Status message -->
          <p data-camera-capture-target="status" class="text-center text-sm mb-4 hidden"></p>

          <!-- Hidden file input -->
          <%= f.file_field :id_front_image,
                accept: "image/*",
                class: "hidden",
                data: { camera_capture_target: "input" } %>

          <!-- Control Buttons -->
          <div class="flex flex-wrap justify-center gap-2 md:gap-3">
            <button type="button"
                    data-action="click->camera-capture#startCamera"
                    data-camera-capture-target="startBtn"
                    class="px-4 py-2 md:px-6 md:py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 text-sm md:text-base">
              Iniciar Cámara
            </button>

            <button type="button"
                    data-action="click->camera-capture#capture"
                    data-camera-capture-target="captureBtn"
                    class="hidden px-4 py-2 md:px-6 md:py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors duration-200 text-sm md:text-base">
              Capturar
            </button>

            <button type="button"
                    data-action="click->camera-capture#retake"
                    data-camera-capture-target="retakeBtn"
                    class="hidden px-4 py-2 md:px-6 md:py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors duration-200 text-sm md:text-base">
              Tomar Otra
            </button>
          </div>

          <% if @credit_application.id_front_image.attached? %>
            <p class="mt-4 text-center text-sm text-green-600">✓ Imagen ya capturada anteriormente</p>
          <% end %>
        </div>

        <!-- ID Back Image - Back camera -->
        <div class="border-2 border-gray-300 rounded-lg p-4 md:p-6"
             data-controller="camera-capture"
             data-camera-capture-facing-mode-value="environment">
          <div class="text-center mb-4">
            <svg class="mx-auto h-10 w-10 md:h-12 md:w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="text-base md:text-lg font-medium text-gray-900 mt-2">Fotografía del Reverso de la Identificación *</h3>
            <p class="text-sm text-gray-500">Captura una imagen clara del reverso de la identificación</p>
          </div>

          <!-- Camera/Preview Area -->
          <div class="relative bg-gray-900 rounded-lg overflow-hidden aspect-video mb-4">
            <!-- Placeholder -->
            <div data-camera-capture-target="placeholder" class="absolute inset-0 flex items-center justify-center bg-gray-100">
              <div class="text-center text-gray-500">
                <svg class="mx-auto h-16 w-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p class="text-sm">Presiona "Iniciar Cámara" para comenzar</p>
              </div>
            </div>

            <!-- Video element -->
            <video data-camera-capture-target="video" class="hidden w-full h-full object-cover" playsinline autoplay muted></video>

            <!-- Canvas for capture (hidden) -->
            <canvas data-camera-capture-target="canvas" class="hidden"></canvas>

            <!-- Preview image -->
            <img data-camera-capture-target="preview" class="hidden w-full h-full object-cover" alt="Vista previa">
          </div>

          <!-- Status message -->
          <p data-camera-capture-target="status" class="text-center text-sm mb-4 hidden"></p>

          <!-- Hidden file input -->
          <%= f.file_field :id_back_image,
                accept: "image/*",
                class: "hidden",
                data: { camera_capture_target: "input" } %>

          <!-- Control Buttons -->
          <div class="flex flex-wrap justify-center gap-2 md:gap-3">
            <button type="button"
                    data-action="click->camera-capture#startCamera"
                    data-camera-capture-target="startBtn"
                    class="px-4 py-2 md:px-6 md:py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 text-sm md:text-base">
              Iniciar Cámara
            </button>

            <button type="button"
                    data-action="click->camera-capture#capture"
                    data-camera-capture-target="captureBtn"
                    class="hidden px-4 py-2 md:px-6 md:py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors duration-200 text-sm md:text-base">
              Capturar
            </button>

            <button type="button"
                    data-action="click->camera-capture#retake"
                    data-camera-capture-target="retakeBtn"
                    class="hidden px-4 py-2 md:px-6 md:py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors duration-200 text-sm md:text-base">
              Tomar Otra
            </button>
          </div>

          <% if @credit_application.id_back_image.attached? %>
            <p class="mt-4 text-center text-sm text-green-600">✓ Imagen ya capturada anteriormente</p>
          <% end %>
        </div>

        <!-- Facial Verification Image - Front camera (selfie) -->
        <div class="border-2 border-gray-300 rounded-lg p-4 md:p-6"
             data-controller="camera-capture"
             data-camera-capture-facing-mode-value="user">
          <div class="text-center mb-4">
            <svg class="mx-auto h-10 w-10 md:h-12 md:w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            <h3 class="text-base md:text-lg font-medium text-gray-900 mt-2">Fotografía de Verificación Facial *</h3>
            <p class="text-sm text-gray-500">Captura una selfie del cliente sosteniendo la identificación cerca del rostro</p>
          </div>

          <!-- Camera/Preview Area -->
          <div class="relative bg-gray-900 rounded-lg overflow-hidden aspect-video mb-4">
            <!-- Placeholder -->
            <div data-camera-capture-target="placeholder" class="absolute inset-0 flex items-center justify-center bg-gray-100">
              <div class="text-center text-gray-500">
                <svg class="mx-auto h-16 w-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <p class="text-sm">Presiona "Iniciar Cámara" para tomar selfie</p>
              </div>
            </div>

            <!-- Video element -->
            <video data-camera-capture-target="video" class="hidden w-full h-full object-cover" playsinline autoplay muted></video>

            <!-- Canvas for capture (hidden) -->
            <canvas data-camera-capture-target="canvas" class="hidden"></canvas>

            <!-- Preview image -->
            <img data-camera-capture-target="preview" class="hidden w-full h-full object-cover" alt="Vista previa">
          </div>

          <!-- Status message -->
          <p data-camera-capture-target="status" class="text-center text-sm mb-4 hidden"></p>

          <!-- Hidden file input -->
          <%= f.file_field :facial_verification_image,
                accept: "image/*",
                class: "hidden",
                data: { camera_capture_target: "input" } %>

          <!-- Control Buttons -->
          <div class="flex flex-wrap justify-center gap-2 md:gap-3">
            <button type="button"
                    data-action="click->camera-capture#startCamera"
                    data-camera-capture-target="startBtn"
                    class="px-4 py-2 md:px-6 md:py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 text-sm md:text-base">
              Iniciar Cámara
            </button>

            <button type="button"
                    data-action="click->camera-capture#capture"
                    data-camera-capture-target="captureBtn"
                    class="hidden px-4 py-2 md:px-6 md:py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors duration-200 text-sm md:text-base">
              Capturar
            </button>

            <button type="button"
                    data-action="click->camera-capture#retake"
                    data-camera-capture-target="retakeBtn"
                    class="hidden px-4 py-2 md:px-6 md:py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors duration-200 text-sm md:text-base">
              Tomar Otra
            </button>

            <button type="button"
                    data-action="click->camera-capture#switchCamera"
                    class="px-4 py-2 md:px-6 md:py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition-colors duration-200 text-sm md:text-base">
              Cambiar Cámara
            </button>
          </div>

          <% if @credit_application.facial_verification_image.attached? %>
            <p class="mt-4 text-center text-sm text-green-600">✓ Imagen ya capturada anteriormente</p>
          <% end %>
        </div>
      </div>

      <!-- Verification Method -->
      <div class="pt-6 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Método de Verificación</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <% CreditApplication.verification_methods.each_key do |method| %>
            <label class="relative flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer hover:border-[#125282] transition-colors duration-200">
              <%= f.radio_button :verification_method, method,
                    class: "h-4 w-4 text-[#125282] border-gray-300 focus:ring-[#125282]",
                    required: true %>
              <span class="ml-3 text-sm font-medium text-gray-900">
                <%= method.humanize %>
              </span>
            </label>
          <% end %>
        </div>
        <p class="mt-2 text-sm text-gray-500">Selecciona cómo el cliente recibirá el código de verificación</p>
      </div>

      <!-- Navigation Buttons -->
      <div class="flex flex-col-reverse md:flex-row md:justify-between gap-3 pt-6 border-t border-gray-200">
        <%= link_to "← Anterior", edit_vendor_credit_application_path(@credit_application), class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200 text-center" %>
        <%= f.submit "Siguiente →", class: "px-6 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282]" %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :title, "Detalles de Solicitud - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-[#125282] mb-2">Solicitud de Crédito</h1>
      <p class="text-gray-600">Número: <span class="font-semibold"><%= @credit_application.application_number %></span></p>
    </div>
    <div>
      <% status_color = @credit_application.approved? ? "bg-green-100 text-green-800" : @credit_application.rejected? ? "bg-red-100 text-red-800" : "bg-yellow-100 text-yellow-800" %>
      <span class="px-4 py-2 rounded-full text-sm font-semibold <%= status_color %>">
        <%= @credit_application.human_enum_name(:status) %>
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Left Column: Customer Info -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Customer Card -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Datos del Cliente</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-500">Nombre Completo</p>
            <p class="font-medium"><%= @credit_application.customer.full_name %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Número de Identidad</p>
            <p class="font-medium"><%= @credit_application.customer.identification_number %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Fecha de Nacimiento / Edad</p>
            <p class="font-medium">
              <%= @credit_application.customer.date_of_birth.strftime("%d/%m/%Y") %>
              (<%= @credit_application.customer.age %> años)
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Género</p>
            <p class="font-medium"><%= @credit_application.customer.human_enum_name(:gender) %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Teléfono</p>
            <p class="font-medium"><%= @credit_application.customer.phone %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Correo Electrónico</p>
            <p class="font-medium"><%= @credit_application.customer.email.presence || "No proporcionado" %></p>
          </div>
          <div class="md:col-span-2">
            <p class="text-sm text-gray-500">Dirección</p>
            <p class="font-medium"><%= @credit_application.customer.address %>, <%= @credit_application.customer.city %>, <%= @credit_application.customer.department %></p>
          </div>
        </div>
      </div>

      <!-- Employment Data -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Datos Laborales</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <p class="text-sm text-gray-500">Situación Laboral</p>
            <p class="font-medium"><%= @credit_application.human_enum_name(:employment_status) %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Rango Salarial Mensual</p>
            <p class="font-medium">
              <%= @credit_application.human_salary_range %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Método de Verificación</p>
            <p class="font-medium"><%= @credit_application.human_enum_name(:verification_method) %></p>
          </div>
        </div>
      </div>

      <!-- Photos -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Fotografías</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="text-center">
            <div class="mb-2">
              <% if @credit_application.id_front_image.attached? %>
                <svg class="mx-auto h-8 w-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-green-600 font-medium">Subida</p>
              <% else %>
                <svg class="mx-auto h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-red-600 font-medium">Pendiente</p>
              <% end %>
            </div>
            <p class="text-sm font-medium text-gray-900">Frente de Identificación</p>
          </div>
          <div class="text-center">
            <div class="mb-2">
              <% if @credit_application.id_back_image.attached? %>
                <svg class="mx-auto h-8 w-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-green-600 font-medium">Subida</p>
              <% else %>
                <svg class="mx-auto h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-red-600 font-medium">Pendiente</p>
              <% end %>
            </div>
            <p class="text-sm font-medium text-gray-900">Reverso de Identificación</p>
          </div>
          <div class="text-center">
            <div class="mb-2">
              <% if @credit_application.facial_verification_image.attached? %>
                <svg class="mx-auto h-8 w-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-green-600 font-medium">Subida</p>
              <% else %>
                <svg class="mx-auto h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <p class="text-sm text-red-600 font-medium">Pendiente</p>
              <% end %>
            </div>
            <p class="text-sm font-medium text-gray-900">Verificación Facial</p>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <% if @credit_application.notes.present? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Notas Adicionales</h2>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-gray-700"><%= @credit_application.notes %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column: Status & Actions -->
    <div class="space-y-8">
      <!-- Status Card -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Estado de la Solicitud</h2>
        <div class="space-y-4">
          <div>
            <p class="text-sm text-gray-500">Fecha de Creación</p>
            <p class="font-medium"><%= @credit_application.created_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Vendedor</p>
            <p class="font-medium"><%= @credit_application.vendor&.full_name || "No asignado" %></p>
          </div>
          <% if @credit_application.approved? %>
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500">Resultado</p>
              <p class="font-medium text-green-600">Aprobada</p>
              <p class="text-xs text-gray-500 mt-1">El monto aprobado está almacenado en el sistema para validación interna.</p>
            </div>
          <% elsif @credit_application.rejected? %>
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500">Motivo del Rechazo</p>
              <p class="font-medium text-red-600"><%= @credit_application.rejection_reason %></p>
            </div>
          <% else %>
            <div class="pt-4 border-t border-gray-200">
              <p class="text-sm text-gray-500">Estado Actual</p>
              <p class="font-medium text-yellow-600">Pendiente de Aprobación</p>
              <p class="text-xs text-gray-500 mt-1">La solicitud será evaluada automáticamente al enviarla.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions Card -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Acciones</h2>
        <div class="space-y-3">
          <% if @credit_application.pending? %>
            <%= link_to "Continuar Proceso", summary_vendor_credit_application_path(@credit_application), class: "block w-full text-center px-4 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200" %>
          <% end %>

          <% if @credit_application.approved? %>
            <%= link_to "Proceder a Catálogo", vendor_device_selection_path(@credit_application), class: "block w-full text-center px-4 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200" %>
          <% end %>

          <%= link_to "Nueva Búsqueda", vendor_customer_search_path, class: "block w-full text-center px-4 py-3 border border-[#125282] text-[#125282] font-semibold rounded-lg hover:bg-blue-50 transition-colors duration-200" %>

          <%= link_to "Editar Solicitud", edit_vendor_credit_application_path(@credit_application), class: "block w-full text-center px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>
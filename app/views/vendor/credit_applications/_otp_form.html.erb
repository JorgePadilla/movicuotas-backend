<div class="text-center space-y-6">
  <!-- Icon -->
  <div class="mx-auto w-16 h-16 bg-[#125282]/10 rounded-full flex items-center justify-center">
    <svg class="w-8 h-8 text-[#125282]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
    </svg>
  </div>

  <!-- Title -->
  <div>
    <h2 class="text-xl font-bold text-gray-900">Verificacion de Identidad</h2>
    <p class="mt-2 text-gray-600">
      Enviamos un codigo de 4 digitos por SMS al numero del cliente.
    </p>
  </div>

  <!-- OTP Input Form -->
  <%= form_with url: submit_otp_vendor_credit_application_path(credit_application), method: :post, class: "space-y-6" do |f| %>
    <div class="flex justify-center">
      <div class="flex space-x-3" data-otp-verification-target="inputContainer">
        <% 4.times do |i| %>
          <input type="text"
                 maxlength="1"
                 class="w-14 h-16 text-center text-2xl font-bold border-2 border-gray-300 rounded-lg focus:border-[#125282] focus:ring-2 focus:ring-[#125282] focus:outline-none otp-digit"
                 data-index="<%= i %>"
                 data-action="input->otp-verification#handleInput keydown->otp-verification#handleKeydown paste->otp-verification#handlePaste"
                 inputmode="numeric"
                 pattern="[0-9]"
                 autocomplete="one-time-code">
        <% end %>
      </div>
      <input type="hidden" name="otp_code" data-otp-verification-target="hiddenInput">
    </div>

    <!-- Timer -->
    <div class="text-center">
      <p class="text-sm text-gray-500" data-otp-verification-target="timer">
        El codigo expira en <span data-otp-verification-target="countdown" class="font-semibold text-[#125282]">--:--</span>
      </p>
    </div>

    <!-- Error message area -->
    <div data-otp-verification-target="error" class="hidden text-center">
      <p class="text-sm text-red-600"></p>
    </div>

    <!-- Submit Button -->
    <div class="pt-4">
      <%= f.submit "Verificar Codigo",
          class: "w-full px-6 py-3 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282] disabled:opacity-50 disabled:cursor-not-allowed",
          data: { otp_verification_target: "submitBtn" } %>
    </div>
  <% end %>

  <!-- Resend Section -->
  <div class="pt-4 border-t border-gray-200">
    <p class="text-sm text-gray-600 mb-3">
      No recibiste el codigo?
    </p>
    <%= button_to "Reenviar Codigo",
        resend_otp_vendor_credit_application_path(credit_application),
        method: :post,
        class: "text-[#125282] font-semibold hover:underline disabled:text-gray-400 disabled:no-underline disabled:cursor-not-allowed",
        disabled: !credit_application.can_resend_otp?,
        data: { otp_verification_target: "resendBtn", turbo_stream: true } %>

    <p data-otp-verification-target="resendTimer" class="<%= 'hidden' if credit_application.can_resend_otp? %> text-xs text-gray-500 mt-2">
      Puedes reenviar en <span data-otp-verification-target="resendCountdown" class="font-semibold"></span> segundos
    </p>
  </div>

  <!-- Back Link -->
  <div class="pt-4">
    <%= link_to "Volver a Fotografias", photos_vendor_credit_application_path(credit_application),
        class: "text-gray-500 hover:text-gray-700 text-sm" %>
  </div>
</div>

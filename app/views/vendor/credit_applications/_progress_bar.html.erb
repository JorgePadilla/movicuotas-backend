<%# Progress Bar Partial - 5 steps %>
<%# Usage: render partial: "progress_bar", locals: { current_step: 1 } %>
<% steps = [
  { number: 1, name: "Datos Generales" },
  { number: 2, name: "Fotografias" },
  { number: 3, name: "Verificacion" },
  { number: 4, name: "Datos Laborales" },
  { number: 5, name: "Resumen" }
] %>

<%# Mobile Progress: Simple dots %>
<div class="flex md:hidden items-center justify-center space-x-1 mb-2">
  <% steps.each_with_index do |step, index| %>
    <div class="w-3 h-3 rounded-full <%= step[:number] <= current_step ? 'bg-[#125282]' : 'bg-gray-300' %>"></div>
    <% if index < steps.length - 1 %>
      <div class="w-4 h-0.5 <%= step[:number] < current_step ? 'bg-[#125282]' : 'bg-gray-300' %>"></div>
    <% end %>
  <% end %>
</div>
<p class="md:hidden text-center text-xs text-gray-500 mb-4">Paso <%= current_step %> de 5</p>

<%# Desktop Progress: Full labels %>
<div class="hidden md:flex items-center justify-between mb-2">
  <% steps.each_with_index do |step, index| %>
    <div class="flex items-center">
      <div class="w-8 h-8 rounded-full <%= step[:number] <= current_step ? 'bg-[#125282] text-white' : 'bg-gray-300 text-gray-600' %> flex items-center justify-center font-bold text-sm">
        <%= step[:number] %>
      </div>
      <span class="ml-2 font-medium text-sm <%= step[:number] <= current_step ? 'text-[#125282]' : 'text-gray-500' %>">
        <%= step[:name] %>
      </span>
    </div>
    <% if index < steps.length - 1 %>
      <div class="h-1 w-6 lg:w-12 <%= step[:number] < current_step ? 'bg-[#125282]' : 'bg-gray-300' %>"></div>
    <% end %>
  <% end %>
</div>

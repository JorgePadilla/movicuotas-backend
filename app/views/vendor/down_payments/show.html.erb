<%# Step 15: Down Payment Collection (Prima) %>
<% content_for :title, "Recolección de Prima - MOVICUOTAS" %>
<% receipt_attached = @loan.down_payment_receipt.attached? %>

<div class="max-w-3xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Step Header -->
  <div class="mb-6 md:mb-8">
    <h1 class="text-2xl md:text-3xl font-bold text-[#125282]">Recolección de Prima</h1>
    <p class="mt-2 text-gray-600">
      Confirme la recepción de la prima del cliente <span class="font-semibold"><%= @customer.full_name %></span>
    </p>

    <div class="mt-4 p-3 sm:p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-start sm:items-center gap-3">
          <svg class="h-5 sm:h-6 w-5 sm:w-6 text-blue-600 flex-shrink-0 mt-0.5 sm:mt-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <div>
            <p class="font-medium text-blue-800 text-sm sm:text-base">Contrato: <%= @loan.contract_number %></p>
            <p class="text-xs sm:text-sm text-blue-600">Prima: L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ",") %></p>
          </div>
        </div>
        <div class="text-right text-xs sm:text-sm">
          <p class="text-blue-700">Paso 15 de 18</p>
          <p class="text-blue-600">Recolección de Prima</p>
        </div>
      </div>
    </div>
  </div>

  <% if flash[:alert].present? %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
      <p class="text-red-800"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <!-- Loan Summary -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Resumen del Préstamo</h2>
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <span class="text-gray-600">Cliente:</span>
        <span class="font-medium text-gray-900 ml-2"><%= @customer.full_name %></span>
      </div>
      <div>
        <span class="text-gray-600">Contrato:</span>
        <span class="font-medium text-gray-900 ml-2"><%= @loan.contract_number %></span>
      </div>
      <div>
        <span class="text-gray-600">Precio del Teléfono:</span>
        <span class="font-medium text-gray-900 ml-2">L. <%= number_with_delimiter(@loan.total_amount, delimiter: ",") %></span>
      </div>
      <div>
        <span class="text-gray-600">Porcentaje Prima:</span>
        <span class="font-medium text-gray-900 ml-2"><%= @loan.down_payment_percentage %>%</span>
      </div>
    </div>
    <div class="mt-4 pt-4 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <span class="text-lg font-semibold text-gray-900">Monto de Prima a Cobrar:</span>
        <span class="text-2xl font-bold text-[#125282]">L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ",") %></span>
      </div>
    </div>
  </div>

  <!-- Payment Method Form -->
  <%= form_with url: vendor_contract_down_payment_path(@contract), method: :patch, local: true, multipart: true, data: { turbo: false } do %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Método de Pago</h2>

      <div class="space-y-4">
        <!-- Cash Option -->
        <label class="block">
          <div class="flex items-start p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[#125282] has-[:checked]:border-[#125282] has-[:checked]:bg-[#125282]/5 transition-colors">
            <input type="radio" name="down_payment_method" value="cash"
                   class="mt-1 h-4 w-4 text-[#125282] border-gray-300 focus:ring-[#125282]"
                   data-action="change->down-payment#toggleMethod"
                   data-down-payment-target="cashRadio">
            <div class="ml-3">
              <span class="text-base font-medium text-gray-900">Efectivo</span>
              <p class="text-sm text-gray-600 mt-1">El cliente paga la prima en efectivo. Solo se requiere confirmación.</p>
            </div>
          </div>
        </label>

        <!-- Deposit Option -->
        <label class="block">
          <div class="flex items-start p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[#125282] has-[:checked]:border-[#125282] has-[:checked]:bg-[#125282]/5 transition-colors">
            <input type="radio" name="down_payment_method" value="deposit"
                   class="mt-1 h-4 w-4 text-[#125282] border-gray-300 focus:ring-[#125282]"
                   data-action="change->down-payment#toggleMethod"
                   data-down-payment-target="depositRadio"
                   <%= "checked" if receipt_attached %>>
            <div class="ml-3">
              <span class="text-base font-medium text-gray-900">Depósito / Transferencia</span>
              <p class="text-sm text-gray-600 mt-1">El cliente realiza un depósito o transferencia. Se requiere subir el comprobante.</p>
            </div>
          </div>
        </label>
      </div>
    </div>

    <!-- Cash Confirmation Section (hidden by default) -->
    <div id="cash-section" class="hidden bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6" data-down-payment-target="cashSection">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Confirmación de Efectivo</h3>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <label class="flex items-start cursor-pointer">
          <input type="checkbox" name="cash_confirmed" value="1"
                 class="mt-1 h-5 w-5 text-green-600 border-gray-300 rounded focus:ring-green-500"
                 data-down-payment-target="cashCheckbox">
          <div class="ml-3">
            <span class="text-base font-medium text-gray-900">Confirmo haber recibido la prima en efectivo</span>
            <p class="text-sm text-gray-600 mt-1">
              Al marcar esta casilla, confirmo que he recibido el monto de
              <strong>L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ",") %></strong>
              en efectivo del cliente <strong><%= @customer.full_name %></strong>.
            </p>
          </div>
        </label>
      </div>
    </div>

    <!-- Deposit Upload Section (hidden by default) -->
    <div id="deposit-section" class="<%= 'hidden' unless receipt_attached %> bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Comprobante de Depósito</h3>
      <p class="text-sm text-gray-600 mb-4">Tome una foto o seleccione una imagen del comprobante de depósito o transferencia.</p>

      <div data-controller="file-upload camera-capture"
           data-camera-capture-facing-mode-value="environment"
           data-file-upload-target="area"
           class="<%= 'border-2 border-green-500 bg-green-50 rounded-lg' if receipt_attached %>">
        <input type="file" name="down_payment_receipt" accept="image/*"
               class="hidden"
               data-file-upload-target="input"
               data-camera-capture-target="input"
               data-action="change->file-upload#handleFileSelect"
               id="receipt-input">

        <!-- Placeholder: options + camera section -->
        <div data-file-upload-target="placeholder" class="<%= 'hidden' if receipt_attached %>">
          <!-- Option buttons: Tomar Foto / Elegir de Galería -->
          <div id="receipt-options">
            <div class="grid grid-cols-2 gap-3">
              <button type="button"
                      onclick="document.getElementById('receipt-options').classList.add('hidden'); document.getElementById('receipt-camera-area').classList.remove('hidden');"
                      class="flex flex-col items-center gap-2 p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-[#125282] hover:bg-blue-50 transition-colors">
                <svg class="h-8 w-8 text-[#125282]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-sm font-medium text-[#125282]">Tomar Foto</span>
              </button>
              <button type="button" onclick="document.getElementById('receipt-input').click()"
                      class="flex flex-col items-center gap-2 p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-[#125282] hover:bg-blue-50 transition-colors">
                <svg class="h-8 w-8 text-[#125282]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span class="text-sm font-medium text-[#125282]">Elegir de Galería</span>
              </button>
            </div>
            <p class="mt-2 text-xs text-gray-500 text-center">La imagen se comprime automáticamente</p>
          </div>

          <!-- Camera area (hidden initially, shown when Tomar Foto clicked) -->
          <div id="receipt-camera-area" class="hidden">
            <div class="relative bg-gray-900 rounded-lg overflow-hidden aspect-video mb-3">
              <!-- Camera placeholder -->
              <div data-camera-capture-target="placeholder" class="absolute inset-0 flex items-center justify-center bg-gray-100">
                <div class="text-center text-gray-500">
                  <svg class="mx-auto h-16 w-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <p class="text-sm">Presiona "Iniciar Cámara" para comenzar</p>
                </div>
              </div>

              <!-- Video element -->
              <video data-camera-capture-target="video" class="hidden w-full h-full object-cover" playsinline autoplay muted></video>

              <!-- Canvas for capture (hidden) -->
              <canvas data-camera-capture-target="canvas" class="hidden"></canvas>

              <!-- Preview image -->
              <img data-camera-capture-target="preview" class="hidden w-full h-full object-cover" alt="Vista previa">
            </div>

            <!-- Status message -->
            <p data-camera-capture-target="status" class="text-center text-sm mb-3 hidden"></p>

            <!-- Camera control buttons -->
            <div class="flex flex-wrap justify-center gap-2 mb-3">
              <button type="button"
                      data-action="click->camera-capture#startCamera"
                      data-camera-capture-target="startBtn"
                      class="px-4 py-2 bg-[#125282] text-white font-semibold rounded-lg hover:bg-[#0f4670] transition-colors text-sm">
                Iniciar Cámara
              </button>
              <button type="button"
                      data-action="click->camera-capture#capture"
                      data-camera-capture-target="captureBtn"
                      class="hidden px-4 py-2 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors text-sm">
                Capturar
              </button>
              <button type="button"
                      data-action="click->camera-capture#retake"
                      data-camera-capture-target="retakeBtn"
                      class="hidden px-4 py-2 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition-colors text-sm">
                Tomar Otra
              </button>
            </div>

            <!-- Back to options -->
            <div class="text-center">
              <button type="button"
                      onclick="resetReceiptCamera(); document.getElementById('receipt-camera-area').classList.add('hidden'); document.getElementById('receipt-options').classList.remove('hidden');"
                      class="text-sm text-gray-500 hover:underline">
                ← Volver a opciones
              </button>
            </div>
          </div>
        </div>

        <!-- Preview after upload -->
        <div data-file-upload-target="preview" class="<%= 'hidden' unless receipt_attached %>">
          <div class="border-2 border-green-500 bg-green-50 rounded-lg p-4 text-center">
            <div class="flex items-center justify-center gap-2 mb-3">
              <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-sm font-semibold text-green-700">Comprobante cargado</span>
            </div>
            <% if receipt_attached %>
              <%= image_tag @loan.down_payment_receipt, data: { file_upload_target: "thumbnail" }, class: "mx-auto max-h-48 rounded-lg shadow-sm border border-gray-200 mb-2", alt: "Vista previa" %>
            <% else %>
              <img data-file-upload-target="thumbnail" class="hidden mx-auto max-h-48 rounded-lg shadow-sm border border-gray-200 mb-2" alt="Vista previa">
            <% end %>
            <p class="text-sm text-green-600 font-medium" data-file-upload-target="fileName"><%= "Comprobante guardado" if receipt_attached %></p>
            <button type="button" onclick="resetReceiptUpload();"
                    class="mt-3 inline-flex items-center gap-1 text-sm text-[#125282] font-medium hover:underline">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              Cambiar imagen
            </button>
          </div>
        </div>
      </div>

      <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
        <p class="text-sm text-yellow-800">
          <strong>Nota:</strong> El comprobante será revisado por administración. El cliente puede continuar con el proceso mientras se verifica.
        </p>
      </div>
    </div>

    <!-- Actions - Mobile-optimized touch targets -->
    <div class="flex flex-col-reverse sm:flex-row gap-4 justify-between items-stretch sm:items-center pt-6 border-t border-gray-200">
      <div class="text-center sm:text-left">
        <%= link_to "← Volver a Firma", signature_vendor_contract_path(@contract), class: "text-sm text-[#125282] hover:underline inline-block py-2" %>
      </div>
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to "Cancelar", vendor_customer_search_path, class: "px-4 py-2.5 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 text-center text-sm" %>
        <button type="submit" class="px-6 py-2.5 bg-[#125282] text-white font-medium rounded-lg hover:bg-[#125282]/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282] cursor-pointer text-sm">
          Confirmar Prima →
        </button>
      </div>
    </div>
  <% end %>

  <!-- Progress Indicator -->
  <div class="mt-8 sm:mt-12 overflow-x-auto">
    <div class="flex items-center justify-between gap-1 sm:gap-4 mb-4 min-w-min sm:min-w-0">
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold text-xs sm:text-sm">14</div>
        <span class="font-medium text-gray-500 text-xs sm:text-base">Firma</span>
      </div>
      <div class="h-1 flex-shrink-0 w-6 sm:flex-1 sm:mx-2 sm:mx-4 bg-gray-200">
        <div class="h-1 bg-[#125282] w-full"></div>
      </div>
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold text-xs sm:text-sm">15</div>
        <span class="font-medium text-gray-700 text-xs sm:text-base">Prima</span>
      </div>
      <div class="h-1 flex-shrink-0 w-6 sm:flex-1 sm:mx-2 sm:mx-4 bg-gray-200"></div>
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold text-xs sm:text-sm">16</div>
        <span class="font-medium text-gray-500 text-xs sm:text-base">QR MDM</span>
      </div>
    </div>
    <p class="text-center text-xs sm:text-sm text-gray-500 mt-2">Paso 15 de 18 - Flujo de Venta</p>
  </div>
</div>

<script>
  // Stop camera stream and reset camera UI to initial state
  function resetReceiptCamera() {
    var ctrl = document.querySelector('[data-controller*="camera-capture"]');
    if (!ctrl) return;
    var video = ctrl.querySelector('video');
    if (video && video.srcObject) {
      video.srcObject.getTracks().forEach(function(t) { t.stop(); });
      video.srcObject = null;
    }
    if (video) video.classList.add('hidden');
    var startBtn = ctrl.querySelector('[data-camera-capture-target=startBtn]');
    if (startBtn) startBtn.classList.remove('hidden');
    var captureBtn = ctrl.querySelector('[data-camera-capture-target=captureBtn]');
    if (captureBtn) captureBtn.classList.add('hidden');
    var retakeBtn = ctrl.querySelector('[data-camera-capture-target=retakeBtn]');
    if (retakeBtn) retakeBtn.classList.add('hidden');
    var camPlaceholder = ctrl.querySelector('[data-camera-capture-target=placeholder]');
    if (camPlaceholder) camPlaceholder.classList.remove('hidden');
    var camPreview = ctrl.querySelector('[data-camera-capture-target=preview]');
    if (camPreview) camPreview.classList.add('hidden');
    var status = ctrl.querySelector('[data-camera-capture-target=status]');
    if (status) status.classList.add('hidden');
  }

  // Reset the entire receipt upload to initial state (called by "Cambiar imagen")
  function resetReceiptUpload() {
    document.getElementById('receipt-input').value = '';
    var ctrl = document.querySelector('[data-controller*="file-upload"]');
    if (!ctrl) return;
    // Show placeholder, hide preview
    ctrl.querySelector('[data-file-upload-target=placeholder]').classList.remove('hidden');
    ctrl.querySelector('[data-file-upload-target=preview]').classList.add('hidden');
    // Remove green styling from area
    ctrl.classList.remove('border-2', 'border-green-500', 'bg-green-50', 'rounded-lg');
    // Reset thumbnail
    var thumb = ctrl.querySelector('[data-file-upload-target=thumbnail]');
    if (thumb) { thumb.src = ''; thumb.className = 'hidden mx-auto max-h-48 rounded-lg shadow-sm border border-gray-200 mb-2'; }
    ctrl.querySelector('[data-file-upload-target=fileName]').textContent = '';
    // Reset camera section back to options
    document.getElementById('receipt-camera-area').classList.add('hidden');
    document.getElementById('receipt-options').classList.remove('hidden');
    resetReceiptCamera();
  }

  // Simple vanilla JS for toggling sections (fallback if Stimulus not loaded)
  document.addEventListener('DOMContentLoaded', function() {
    const cashRadio = document.querySelector('input[value="cash"]');
    const depositRadio = document.querySelector('input[value="deposit"]');
    const cashSection = document.getElementById('cash-section');
    const depositSection = document.getElementById('deposit-section');

    function toggleSections() {
      if (cashRadio && cashRadio.checked) {
        cashSection.classList.remove('hidden');
        depositSection.classList.add('hidden');
      } else if (depositRadio && depositRadio.checked) {
        cashSection.classList.add('hidden');
        depositSection.classList.remove('hidden');
      }
    }

    if (cashRadio) cashRadio.addEventListener('change', toggleSections);
    if (depositRadio) depositRadio.addEventListener('change', toggleSections);

    // If a radio is already checked (e.g. deposit receipt exists), show the right section
    toggleSections();
  });
</script>

<%# Step 15: Down Payment Collection (Prima) %>
<% content_for :title, "Recolección de Prima - MOVICUOTAS" %>

<div class="max-w-3xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Step Header -->
  <div class="mb-6 md:mb-8">
    <h1 class="text-2xl md:text-3xl font-bold text-[#125282]">Recolección de Prima</h1>
    <p class="mt-2 text-gray-600">
      Confirme la recepción de la prima del cliente <span class="font-semibold"><%= @customer.full_name %></span>
    </p>

    <div class="mt-4 p-3 sm:p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-start sm:items-center gap-3">
          <svg class="h-5 sm:h-6 w-5 sm:w-6 text-blue-600 flex-shrink-0 mt-0.5 sm:mt-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <div>
            <p class="font-medium text-blue-800 text-sm sm:text-base">Contrato: <%= @loan.contract_number %></p>
            <p class="text-xs sm:text-sm text-blue-600">Prima: L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ",") %></p>
          </div>
        </div>
        <div class="text-right text-xs sm:text-sm">
          <p class="text-blue-700">Paso 15 de 19</p>
          <p class="text-blue-600">Recolección de Prima</p>
        </div>
      </div>
    </div>
  </div>

  <% if flash[:alert].present? %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
      <p class="text-red-800"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <!-- Loan Summary -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Resumen del Préstamo</h2>
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <span class="text-gray-600">Cliente:</span>
        <span class="font-medium text-gray-900 ml-2"><%= @customer.full_name %></span>
      </div>
      <div>
        <span class="text-gray-600">Contrato:</span>
        <span class="font-medium text-gray-900 ml-2"><%= @loan.contract_number %></span>
      </div>
      <div>
        <span class="text-gray-600">Precio del Teléfono:</span>
        <span class="font-medium text-gray-900 ml-2">L. <%= number_with_delimiter(@loan.total_amount, delimiter: ",") %></span>
      </div>
      <div>
        <span class="text-gray-600">Porcentaje Prima:</span>
        <span class="font-medium text-gray-900 ml-2"><%= @loan.down_payment_percentage %>%</span>
      </div>
    </div>
    <div class="mt-4 pt-4 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <span class="text-lg font-semibold text-gray-900">Monto de Prima a Cobrar:</span>
        <span class="text-2xl font-bold text-[#125282]">L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ",") %></span>
      </div>
    </div>
  </div>

  <!-- Payment Method Form -->
  <%= form_with url: vendor_contract_down_payment_path(@contract), method: :patch, local: true, data: { turbo: false, controller: "down-payment" } do %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Método de Pago</h2>

      <div class="space-y-4">
        <!-- Cash Option -->
        <label class="block">
          <div class="flex items-start p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[#125282] has-[:checked]:border-[#125282] has-[:checked]:bg-[#125282]/5 transition-colors">
            <input type="radio" name="down_payment_method" value="cash"
                   class="mt-1 h-4 w-4 text-[#125282] border-gray-300 focus:ring-[#125282]"
                   data-action="change->down-payment#toggleMethod"
                   data-down-payment-target="cashRadio">
            <div class="ml-3">
              <span class="text-base font-medium text-gray-900">Efectivo</span>
              <p class="text-sm text-gray-600 mt-1">El cliente paga la prima en efectivo. Solo se requiere confirmación.</p>
            </div>
          </div>
        </label>

        <!-- Deposit Option -->
        <label class="block">
          <div class="flex items-start p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-[#125282] has-[:checked]:border-[#125282] has-[:checked]:bg-[#125282]/5 transition-colors">
            <input type="radio" name="down_payment_method" value="deposit"
                   class="mt-1 h-4 w-4 text-[#125282] border-gray-300 focus:ring-[#125282]"
                   data-action="change->down-payment#toggleMethod"
                   data-down-payment-target="depositRadio">
            <div class="ml-3">
              <span class="text-base font-medium text-gray-900">Depósito / Transferencia</span>
              <p class="text-sm text-gray-600 mt-1">El cliente realiza un depósito o transferencia. Se requiere subir el comprobante.</p>
            </div>
          </div>
        </label>
      </div>
    </div>

    <!-- Cash Confirmation Section (hidden by default) -->
    <div id="cash-section" class="hidden bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6" data-down-payment-target="cashSection">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Confirmación de Efectivo</h3>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
        <label class="flex items-start cursor-pointer">
          <input type="checkbox" name="cash_confirmed" value="1"
                 class="mt-1 h-5 w-5 text-green-600 border-gray-300 rounded focus:ring-green-500"
                 data-down-payment-target="cashCheckbox">
          <div class="ml-3">
            <span class="text-base font-medium text-gray-900">Confirmo haber recibido la prima en efectivo</span>
            <p class="text-sm text-gray-600 mt-1">
              Al marcar esta casilla, confirmo que he recibido el monto de
              <strong>L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ",") %></strong>
              en efectivo del cliente <strong><%= @customer.full_name %></strong>.
            </p>
          </div>
        </label>
      </div>
    </div>

    <!-- Deposit Upload Section (hidden by default) -->
    <div id="deposit-section" class="hidden bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-6" data-down-payment-target="depositSection">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Comprobante de Depósito</h3>
      <p class="text-sm text-gray-600 mb-4">Suba una imagen del comprobante de depósito o transferencia.</p>

      <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-[#125282] transition-colors"
           data-controller="file-upload"
           data-file-upload-target="area"
           data-action="click->file-upload#openFilePicker dragover->file-upload#handleDragOver drop->file-upload#handleDrop">
        <input type="file" name="down_payment_receipt" accept="image/*"
               class="hidden"
               data-file-upload-target="input"
               data-action="change->file-upload#handleFileSelect">

        <div data-file-upload-target="placeholder">
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <p class="mt-2 text-sm text-gray-600">
            <span class="text-[#125282] font-medium">Haga clic para seleccionar</span> o arrastre una imagen
          </p>
          <p class="mt-1 text-xs text-gray-500">PNG, JPG hasta 10MB</p>
        </div>

        <div data-file-upload-target="preview" class="hidden">
          <p class="text-sm text-green-600 font-medium" data-file-upload-target="fileName"></p>
          <p class="text-xs text-gray-500 mt-1">Haga clic para cambiar</p>
        </div>
      </div>

      <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
        <p class="text-sm text-yellow-800">
          <strong>Nota:</strong> El comprobante será revisado por administración. El cliente puede continuar con el proceso mientras se verifica.
        </p>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-4 justify-between items-center pt-6 border-t border-gray-200">
      <div>
        <%= link_to "← Volver a Firma", signature_vendor_contract_path(@contract), class: "text-sm text-[#125282] hover:underline" %>
      </div>
      <div class="flex gap-4">
        <%= link_to "Cancelar", vendor_customer_search_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 text-center" %>
        <button type="submit" class="px-6 py-2 bg-[#125282] text-white font-medium rounded-md hover:bg-[#125282]/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282] cursor-pointer">
          Confirmar Prima →
        </button>
      </div>
    </div>
  <% end %>

  <!-- Progress Indicator -->
  <div class="mt-8 sm:mt-12 overflow-x-auto">
    <div class="flex items-center justify-between gap-1 sm:gap-4 mb-4 min-w-min sm:min-w-0">
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold text-xs sm:text-sm">14</div>
        <span class="font-medium text-gray-500 text-xs sm:text-base">Firma</span>
      </div>
      <div class="h-1 flex-shrink-0 w-6 sm:flex-1 sm:mx-2 sm:mx-4 bg-gray-200">
        <div class="h-1 bg-[#125282] w-full"></div>
      </div>
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-[#125282] text-white flex items-center justify-center font-bold text-xs sm:text-sm">15</div>
        <span class="font-medium text-gray-700 text-xs sm:text-base">Prima</span>
      </div>
      <div class="h-1 flex-shrink-0 w-6 sm:flex-1 sm:mx-2 sm:mx-4 bg-gray-200"></div>
      <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-bold text-xs sm:text-sm">16</div>
        <span class="font-medium text-gray-500 text-xs sm:text-base">Crédito</span>
      </div>
    </div>
    <p class="text-center text-xs sm:text-sm text-gray-500 mt-2">Paso 15 de 19 - Flujo de Venta</p>
  </div>
</div>

<script>
  // Simple vanilla JS for toggling sections (fallback if Stimulus not loaded)
  document.addEventListener('DOMContentLoaded', function() {
    const cashRadio = document.querySelector('input[value="cash"]');
    const depositRadio = document.querySelector('input[value="deposit"]');
    const cashSection = document.getElementById('cash-section');
    const depositSection = document.getElementById('deposit-section');

    function toggleSections() {
      if (cashRadio && cashRadio.checked) {
        cashSection.classList.remove('hidden');
        depositSection.classList.add('hidden');
      } else if (depositRadio && depositRadio.checked) {
        cashSection.classList.add('hidden');
        depositSection.classList.remove('hidden');
      }
    }

    if (cashRadio) cashRadio.addEventListener('change', toggleSections);
    if (depositRadio) depositRadio.addEventListener('change', toggleSections);
  });
</script>

<% content_for :title, "Pagos Verificados - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Vendor::BreadcrumbComponent.new(items: [{ name: "Pagos Verificados" }]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Pagos Verificados</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Historial de pagos confirmados por administración.</p>
  </div>

  <!-- Stats summary -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 lg:gap-4 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
      <p class="text-xs text-gray-500 uppercase tracking-wide">Total Pagos</p>
      <p class="text-2xl font-bold text-[#125282] mt-1"><%= @total_count %></p>
      <p class="text-xs text-gray-400 mt-1 hidden lg:block">Pagos verificados</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
      <p class="text-xs text-gray-500 uppercase tracking-wide">Monto Total</p>
      <p class="text-lg lg:text-xl font-bold text-[#125282] mt-1">L. <%= number_with_delimiter(format("%.2f", @total_amount.to_f), delimiter: ',') %></p>
      <p class="text-xs text-gray-400 mt-1 hidden lg:block">Suma verificada</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
      <p class="text-xs text-gray-500 uppercase tracking-wide">Este Mes</p>
      <p class="text-2xl font-bold text-green-600 mt-1"><%= @this_month_count %></p>
      <p class="text-xs text-gray-400 mt-1 hidden lg:block">Pagos del mes</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4">
      <p class="text-xs text-gray-500 uppercase tracking-wide">Monto Mes</p>
      <p class="text-lg lg:text-xl font-bold text-green-600 mt-1">L. <%= number_with_delimiter(format("%.2f", @this_month_amount.to_f), delimiter: ',') %></p>
      <p class="text-xs text-gray-400 mt-1 hidden lg:block">Recaudado</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <%= form_with url: vendor_payments_path, method: :get, class: "space-y-4" do %>
      <!-- Search -->
      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Buscar</label>
        <input type="text" name="search" value="<%= params[:search] %>"
               placeholder="Cliente, contrato o referencia..."
               class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent">
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
        <!-- Método de Pago -->
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Método de Pago</label>
          <select name="method" class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent" onchange="this.form.submit()">
            <option value="">Todos</option>
            <option value="cash" <%= "selected" if params[:method] == "cash" %>>Efectivo</option>
            <option value="transfer" <%= "selected" if params[:method] == "transfer" %>>Transferencia</option>
            <option value="card" <%= "selected" if params[:method] == "card" %>>Tarjeta</option>
            <option value="other" <%= "selected" if params[:method] == "other" %>>Otro</option>
          </select>
        </div>

        <!-- Fecha Desde -->
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Fecha Desde</label>
          <input type="date" name="date_from" value="<%= params[:date_from] %>"
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent">
        </div>

        <!-- Fecha Hasta -->
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Fecha Hasta</label>
          <input type="date" name="date_to" value="<%= params[:date_to] %>"
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent">
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-2">
        <button type="submit" class="flex-1 sm:flex-none px-6 py-2 bg-[#125282] text-white font-medium rounded-lg hover:bg-[#0f4670] text-sm transition-colors">
          Buscar
        </button>
        <% if params[:search].present? || params[:method].present? || params[:date_from].present? || params[:date_to].present? %>
          <%= link_to "Limpiar", vendor_payments_path, class: "flex-1 sm:flex-none px-6 py-2 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 text-sm text-center transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= turbo_frame_tag "payments_table" do %>
    <!-- Mobile Card View -->
    <div class="block lg:hidden space-y-4">
      <% if @payments.any? %>
        <% @payments.each do |payment| %>
          <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 hover:bg-blue-50 cursor-pointer transition-colors"
               onclick="Turbo.visit('<%= vendor_loan_path(payment.loan) %>')">
            <div class="flex justify-between items-start mb-3">
              <div>
                <p class="font-bold text-gray-900"><%= payment.loan.customer.full_name %></p>
                <p class="text-xs text-gray-500"><%= payment.loan.customer.identification_number %></p>
              </div>
              <span class="px-2 py-1 text-xs rounded-full font-medium bg-green-100 text-green-800">
                Verificado
              </span>
            </div>

            <div class="grid grid-cols-2 gap-2 text-sm mb-3">
              <div>
                <span class="text-gray-500 text-xs">Fecha</span>
                <p class="font-medium text-gray-900"><%= payment.payment_date.strftime("%d/%m/%Y") %></p>
              </div>
              <div>
                <span class="text-gray-500 text-xs">Monto</span>
                <p class="font-bold text-[#125282]">L. <%= number_with_delimiter(format("%.2f", payment.amount.to_f), delimiter: ',') %></p>
              </div>
              <div>
                <span class="text-gray-500 text-xs">Contrato</span>
                <p class="text-gray-700"><%= payment.loan.contract_number %></p>
              </div>
              <div>
                <span class="text-gray-500 text-xs">Método</span>
                <p class="text-gray-700"><%= payment_method_es(payment.payment_method) %></p>
              </div>
            </div>

            <div class="pt-3 border-t border-gray-100">
              <span class="text-xs text-gray-500">
                <% if payment.reference_number.present? %>
                  Ref: <%= payment.reference_number %>
                <% else %>
                  Sucursal: <%= payment.loan.branch_number %>
                <% end %>
              </span>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <p class="text-lg font-medium text-gray-900 mb-2">No hay pagos verificados</p>
          <p class="text-gray-600 text-sm mb-4">Los pagos aparecerán aquí una vez sean verificados por administración.</p>
          <%= link_to "Ir al Dashboard", (current_user.supervisor? ? supervisor_dashboard_path : vendor_dashboard_path), class: "inline-block px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        </div>
      <% end %>
    </div>

    <!-- Desktop Table View -->
    <div class="hidden lg:block bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
      <p class="px-6 py-3 text-xs text-gray-400 italic bg-gray-50 border-b border-gray-200">Haz clic en cualquier fila para ver el crédito asociado</p>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <%= sortable_header :payment_date, "Fecha", px: 6, turbo_frame: "payments_table" %>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contrato</th>
              <%= sortable_header :amount, "Monto", px: 6, turbo_frame: "payments_table" %>
              <%= sortable_header :payment_method, "Método", px: 6, turbo_frame: "payments_table" %>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Referencia</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @payments.any? %>
              <% @payments.each do |payment| %>
                <tr class="hover:bg-blue-50 cursor-pointer transition-colors" onclick="Turbo.visit('<%= vendor_loan_path(payment.loan) %>')">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= payment.payment_date.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= payment.loan.customer.full_name %></div>
                    <div class="text-xs text-gray-500"><%= payment.loan.customer.identification_number %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= payment.loan.contract_number %></div>
                    <div class="text-xs text-gray-500"><%= payment.loan.branch_number %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    L. <%= number_with_delimiter(format("%.2f", payment.amount.to_f), delimiter: ',') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= payment_method_es(payment.payment_method) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= payment.reference_number.presence || "-" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                  <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  <p class="text-lg font-medium text-gray-900 mb-2">No hay pagos verificados</p>
                  <p class="text-gray-600 mb-4">Los pagos aparecerán aquí una vez sean verificados por administración.</p>
                  <%= link_to "Ir al Dashboard", (current_user.supervisor? ? supervisor_dashboard_path : vendor_dashboard_path), class: "inline-block px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @payments.respond_to?(:total_pages) && @payments.total_pages > 1 %>
      <div class="mt-6 flex flex-col items-center gap-4">
        <!-- Mobile Pagination -->
        <div class="flex lg:hidden items-center gap-3">
          <% if @payments.first_page? %>
            <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">&larr; Anterior</span>
          <% else %>
            <%= link_to "&larr; Anterior".html_safe, vendor_payments_path(page: @payments.current_page - 1, search: params[:search], method: params[:method], date_from: params[:date_from], date_to: params[:date_to], sort: params[:sort], direction: params[:direction]),
                class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm",
                data: { turbo_frame: "payments_table" } %>
          <% end %>

          <span class="text-sm text-gray-600"><%= @payments.current_page %> / <%= @payments.total_pages %></span>

          <% if @payments.last_page? %>
            <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">Siguiente &rarr;</span>
          <% else %>
            <%= link_to "Siguiente &rarr;".html_safe, vendor_payments_path(page: @payments.current_page + 1, search: params[:search], method: params[:method], date_from: params[:date_from], date_to: params[:date_to], sort: params[:sort], direction: params[:direction]),
                class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm",
                data: { turbo_frame: "payments_table" } %>
          <% end %>
        </div>

        <!-- Desktop Pagination -->
        <div class="hidden lg:flex items-center gap-2">
          <% unless @payments.first_page? %>
            <%= link_to "&larr; Anterior".html_safe, vendor_payments_path(page: @payments.current_page - 1, search: params[:search], method: params[:method], date_from: params[:date_from], date_to: params[:date_to], sort: params[:sort], direction: params[:direction]),
                class: "px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 text-sm",
                data: { turbo_frame: "payments_table" } %>
          <% end %>

          <span class="px-3 py-2 text-sm text-gray-600">Página <%= @payments.current_page %> de <%= @payments.total_pages %></span>

          <% unless @payments.last_page? %>
            <%= link_to "Siguiente &rarr;".html_safe, vendor_payments_path(page: @payments.current_page + 1, search: params[:search], method: params[:method], date_from: params[:date_from], date_to: params[:date_to], sort: params[:sort], direction: params[:direction]),
                class: "px-3 py-2 bg-[#125282] text-white rounded-lg hover:bg-[#125282]/90 text-sm",
                data: { turbo_frame: "payments_table" } %>
          <% end %>
        </div>

        <p class="text-sm text-gray-500">
          Mostrando <%= @payments.offset_value + 1 %> a <%= [@payments.offset_value + @payments.size, @payments.total_count].min %> de <%= @payments.total_count %> pagos
        </p>
      </div>
    <% end %>
  <% end %>
</div>

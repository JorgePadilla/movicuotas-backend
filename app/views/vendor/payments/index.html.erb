<% content_for :title, "Historial de Pagos - MOVICUOTAS" %>

<div class="w-full">
  <!-- Page header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-[#125282]">Historial de Pagos</h1>
    <p class="text-gray-600 mt-2">Registro completo de todos los pagos realizados en tus préstamos.</p>
  </div>

  <!-- Stats summary -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-[#125282]">Total Pagos</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @payments.count %></div>
      </div>
      <p class="text-gray-600 text-sm mt-2">Todos los pagos registrados</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-[#125282]">Verificados</h3>
        <div class="text-2xl font-bold text-green-600"><%= @payments.verified.count %></div>
      </div>
      <p class="text-gray-600 text-sm mt-2">Pagos verificados por administración</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-[#125282]">Pendientes</h3>
        <div class="text-2xl font-bold text-yellow-600"><%= @payments.pending_verification.count %></div>
      </div>
      <p class="text-gray-600 text-sm mt-2">Esperando verificación</p>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-[#125282]">Monto Total</h3>
        <div class="text-2xl font-bold text-gray-800">L. <%= number_with_delimiter(@payments.sum(:amount), delimiter: ',') %></div>
      </div>
      <p class="text-gray-600 text-sm mt-2">Suma de todos los pagos</p>
    </div>
  </div>

  <!-- Payments table -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-900">Lista de Pagos</h2>
        <div class="flex space-x-3">
          <div class="relative">
            <select class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-[#125282] focus:border-[#125282] rounded-lg">
              <option selected>Todos los estados</option>
              <option>Verificados</option>
              <option>Pendientes</option>
              <option>Rechazados</option>
            </select>
          </div>
          <%= link_to "Nueva Búsqueda", vendor_customer_search_path, class: "bg-[#125282] hover:bg-[#0f4670] text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Préstamo</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Método</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Verificación</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Comprobante</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @payments.any? %>
            <% @payments.each do |payment| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= payment.payment_date.strftime("%d/%m/%Y") %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= payment.loan.customer.full_name %></div>
                  <div class="text-xs text-gray-500"><%= payment.loan.customer.identification_number %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= payment.loan.contract_number %></div>
                  <div class="text-xs text-gray-500"><%= payment.loan.branch_number %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">L. <%= number_with_delimiter(payment.amount, delimiter: ',') %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= payment.payment_method.titleize %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% verification_class = case payment.verification_status
                    when 'verified' then 'bg-green-100 text-green-800'
                    when 'rejected' then 'bg-red-100 text-red-800'
                    else 'bg-yellow-100 text-yellow-800'
                  end %>
                  <span class="px-3 py-1 text-xs rounded-full font-medium <%= verification_class %>">
                    <%= payment.verification_status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% if payment.receipt_image.attached? %>
                    <%= link_to "Ver", rails_blob_path(payment.receipt_image, disposition: "attachment"), class: "text-[#125282] hover:underline" %>
                  <% else %>
                    <span class="text-gray-400">No subido</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                <div class="mb-4">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <p class="text-lg font-medium text-gray-900 mb-2">No hay pagos registrados</p>
                <p class="text-gray-600 mb-6">Los pagos aparecerán aquí cuando se registren.</p>
                <%= link_to "Nueva Búsqueda", vendor_customer_search_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-[#0f4670] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#125282]" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination placeholder -->
    <% if @payments.total_pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200">
        <nav class="flex items-center justify-between">
          <div class="text-sm text-gray-700">
            Mostrando <%= @payments.offset_value + 1 %> a <%= @payments.offset_value + @payments.length %> de <%= @payments.total_count %> resultados
          </div>
          <div class="flex space-x-2">
            <%= link_to "Anterior", "#", class: "px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
            <%= link_to "Siguiente", "#", class: "px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
          </div>
        </nav>
      </div>
    <% end %>
  </div>
</div>
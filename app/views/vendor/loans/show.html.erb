<% content_for :title, "Tracking de Pr√©stamo - MOVICUOTAS" %>

<div class="w-full">
  <!-- Page header with navigation -->
  <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-[#125282]">Tracking de Pr√©stamo</h1>
      <p class="text-gray-600 mt-2">Detalles completos del pr√©stamo y historial de pagos.</p>
    </div>
    <div class="mt-4 sm:mt-0 flex space-x-3">
      <%= link_to "‚Üê Volver a Tracking", vendor_loans_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200" %>
      <%= link_to "Descargar Contrato", download_contract_vendor_loan_path(@loan), class: "px-4 py-2 bg-[#125282] text-white rounded-lg hover:bg-[#0f4670] transition-colors duration-200" %>
    </div>
  </div>

  <!-- Loan summary cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">Contrato</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @loan.contract_number %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Sucursal</span>
          <span class="font-medium"><%= @loan.branch_number %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Fecha inicio</span>
          <span class="font-medium"><%= @loan.start_date.strftime("%d/%m/%Y") %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Fecha fin</span>
          <span class="font-medium"><%= @loan.end_date.strftime("%d/%m/%Y") %></span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">Cliente</h3>
        <div class="text-2xl font-bold text-gray-800"><%= @loan.customer.full_name.split.first %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Identidad</span>
          <span class="font-medium"><%= @loan.customer.identification_number %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Tel√©fono</span>
          <span class="font-medium"><%= @loan.customer.phone %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Correo</span>
          <span class="font-medium"><%= @loan.customer.email.presence || "No proporcionado" %></span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">Financiamiento</h3>
        <div class="text-2xl font-bold text-gray-800">L. <%= number_with_delimiter(@loan.total_amount, delimiter: ',') %></div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Inicial</span>
          <span class="font-medium"><%= @loan.down_payment_percentage %>% (L. <%= number_with_delimiter(@loan.down_payment_amount, delimiter: ',') %>)</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Financiado</span>
          <span class="font-medium">L. <%= number_with_delimiter(@loan.financed_amount, delimiter: ',') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Tasa inter√©s</span>
          <span class="font-medium"><%= @loan.interest_rate %>% quincenal</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-[#125282]">Estado</h3>
        <div class="text-2xl font-bold">
          <% status_class = case @loan.status
            when 'active' then 'text-green-600'
            when 'paid' then 'text-blue-600'
            when 'overdue' then 'text-red-600'
            when 'draft' then 'text-gray-600'
            else 'text-gray-600'
          end %>
          <span class="<%= status_class %>"><%= @loan.status.titleize %></span>
        </div>
      </div>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Cuotas pagadas</span>
          <span class="font-medium"><%= @loan.paid_installments.count %>/<%= @loan.number_of_installments %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Saldo restante</span>
          <span class="font-medium">L. <%= number_with_delimiter(@loan.remaining_balance, delimiter: ',') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Pr√≥ximo vencimiento</span>
          <span class="font-medium">
            <% if @loan.next_installment %>
              <%= @loan.next_installment.due_date.strftime("%d/%m/%Y") %>
            <% else %>
              Completado
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Device information -->
  <% if @loan.device %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">üì± Dispositivo Asignado</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Modelo</p>
          <p class="font-medium"><%= @loan.device.phone_model.brand %> <%= @loan.device.phone_model.model %></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">IMEI</p>
          <p class="font-medium"><%= @loan.device.imei %></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Color</p>
          <p class="font-medium"><%= @loan.device.color %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Two-column layout for schedule and payments -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Installment schedule -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-gray-900">Calendario de Cuotas</h3>
        <span class="text-sm text-gray-600"><%= @installments.count %> cuotas totales</span>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Vencimiento</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pagado</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @installments.each do |installment| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900"><%= installment.installment_number %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900"><%= installment.due_date.strftime("%d/%m/%Y") %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">L. <%= number_with_delimiter(installment.amount, delimiter: ',') %></td>
                <td class="px-4 py-3 whitespace-nowrap">
                  <% status_class = case installment.status
                    when 'paid' then 'bg-green-100 text-green-800'
                    when 'overdue' then 'bg-red-100 text-red-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-gray-100 text-gray-800'
                  end %>
                  <span class="px-3 py-1 text-xs rounded-full font-medium <%= status_class %>">
                    <%= installment.status.titleize %>
                  </span>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                  <% if installment.paid_amount && installment.paid_amount > 0 %>
                    L. <%= number_with_delimiter(installment.paid_amount, delimiter: ',') %>
                    <% if installment.fully_paid? %>
                      <span class="text-green-600">‚úì</span>
                    <% else %>
                      <span class="text-orange-600">(parcial)</span>
                    <% end %>
                  <% else %>
                    -
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Payment history -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-gray-900">Historial de Pagos</h3>
        <span class="text-sm text-gray-600"><%= @payments.count %> pagos registrados</span>
      </div>
      <% if @payments.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">M√©todo</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Verificaci√≥n</th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Comprobante</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @payments.each do |payment| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900"><%= payment.payment_date.strftime("%d/%m/%Y") %></td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">L. <%= number_with_delimiter(payment.amount, delimiter: ',') %></td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900"><%= payment.payment_method.titleize %></td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% verification_class = case payment.verification_status
                      when 'verified' then 'bg-green-100 text-green-800'
                      when 'rejected' then 'bg-red-100 text-red-800'
                      else 'bg-yellow-100 text-yellow-800'
                    end %>
                    <span class="px-3 py-1 text-xs rounded-full font-medium <%= verification_class %>">
                      <%= payment.verification_status.titleize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                    <% if payment.receipt_image.attached? %>
                      <%= link_to "Ver", rails_blob_path(payment.receipt_image, disposition: "attachment"), class: "text-[#125282] hover:underline" %>
                    <% else %>
                      <span class="text-gray-400">No subido</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
          </svg>
          <p class="mt-4 text-gray-500">No hay pagos registrados para este pr√©stamo.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% content_for :title, "Tracking de Pr√©stamo - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-2 sm:px-3 lg:px-4 py-4">
  <!-- Page header with navigation -->
  <div class="mb-6 md:mb-8 flex flex-col gap-4">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-[#125282]">Tracking de Pr√©stamo</h1>
      <p class="text-gray-600 mt-1 md:mt-2 text-sm md:text-base">Detalles completos del pr√©stamo y historial de pagos.</p>
    </div>
    <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
      <%= link_to "‚Üê Volver a Tracking", vendor_loans_path, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200 text-center text-sm" %>
      <%= link_to "Descargar Contrato", download_contract_vendor_loan_path(@loan), class: "px-4 py-2 bg-[#125282] text-white rounded-lg hover:bg-[#0f4670] transition-colors duration-200 text-center text-sm" %>
      <%= link_to "Registrar Pago", new_admin_payment_path(loan_id: @loan.id), class: "px-4 py-2 bg-[#10b981] text-white rounded-lg hover:bg-[#059669] transition-colors duration-200 text-center text-sm" %>
    </div>
  </div>

  <!-- Loan summary cards - Redesigned -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-5 mb-6 md:mb-8">
    <!-- Contract Card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5">
      <div class="flex items-center gap-2 mb-3">
        <div class="w-8 h-8 bg-[#125282]/10 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-[#125282]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Contrato</h3>
      </div>
      <p class="text-lg font-bold text-[#125282] mb-4 break-all"><%= @loan.contract_number %></p>
      <div class="space-y-2 text-sm border-t border-gray-100 pt-3">
        <div class="flex justify-between">
          <span class="text-gray-500">Sucursal</span>
          <span class="font-medium text-gray-900"><%= @loan.branch_number %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Inicio</span>
          <span class="font-medium text-gray-900"><%= @loan.start_date.strftime("%d/%m/%Y") %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Fin</span>
          <span class="font-medium text-gray-900"><%= @loan.end_date.strftime("%d/%m/%Y") %></span>
        </div>
      </div>
    </div>

    <!-- Customer Card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5">
      <div class="flex items-center gap-2 mb-3">
        <div class="w-8 h-8 bg-emerald-100 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Cliente</h3>
      </div>
      <p class="text-lg font-bold text-gray-900 mb-4 truncate"><%= @loan.customer.full_name %></p>
      <div class="space-y-2 text-sm border-t border-gray-100 pt-3">
        <div class="flex justify-between gap-2">
          <span class="text-gray-500 shrink-0">Identidad</span>
          <span class="font-medium text-gray-900 truncate"><%= @loan.customer.identification_number %></span>
        </div>
        <div class="flex justify-between gap-2">
          <span class="text-gray-500 shrink-0">Tel√©fono</span>
          <span class="font-medium text-gray-900"><%= @loan.customer.phone %></span>
        </div>
        <div class="flex justify-between gap-2">
          <span class="text-gray-500 shrink-0">Correo</span>
          <span class="font-medium text-gray-900 truncate"><%= @loan.customer.email.presence || "‚Äî" %></span>
        </div>
      </div>
    </div>

    <!-- Financing Card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5">
      <div class="flex items-center gap-2 mb-3">
        <div class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Financiamiento</h3>
      </div>
      <p class="text-lg font-bold text-gray-900 mb-4">L. <%= number_with_delimiter(@loan.total_amount, delimiter: ',') %></p>
      <div class="space-y-2 text-sm border-t border-gray-100 pt-3">
        <div class="flex justify-between">
          <span class="text-gray-500">Prima</span>
          <span class="font-medium text-gray-900"><%= @loan.down_payment_percentage %>%</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Financiado</span>
          <span class="font-medium text-gray-900">L. <%= number_with_delimiter(@loan.financed_amount, delimiter: ',') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Tasa</span>
          <span class="font-medium text-gray-900"><%= @loan.interest_rate %>%</span>
        </div>
      </div>
    </div>

    <!-- Status Card -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5">
      <div class="flex items-center gap-2 mb-3">
        <% status_bg = case @loan.status
          when 'active' then 'bg-green-100'
          when 'paid' then 'bg-blue-100'
          when 'overdue' then 'bg-red-100'
          else 'bg-gray-100'
        end %>
        <% status_icon_color = case @loan.status
          when 'active' then 'text-green-600'
          when 'paid' then 'text-blue-600'
          when 'overdue' then 'text-red-600'
          else 'text-gray-600'
        end %>
        <div class="w-8 h-8 <%= status_bg %> rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 <%= status_icon_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Estado</h3>
      </div>
      <% status_text_class = case @loan.status
        when 'active' then 'text-green-600'
        when 'paid' then 'text-blue-600'
        when 'overdue' then 'text-red-600'
        else 'text-gray-600'
      end %>
      <p class="text-lg font-bold <%= status_text_class %> mb-4"><%= loan_status_es(@loan.status) %></p>
      <div class="space-y-2 text-sm border-t border-gray-100 pt-3">
        <div class="flex justify-between">
          <span class="text-gray-500">Cuotas</span>
          <span class="font-medium text-gray-900"><%= @loan.paid_installments.count %>/<%= @loan.number_of_installments %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Saldo</span>
          <span class="font-medium text-gray-900">L. <%= number_with_delimiter(@loan.remaining_balance, delimiter: ',') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Pr√≥ximo Pago</span>
          <span class="font-medium text-gray-900">
            <% if @loan.next_installment %>
              <%= @loan.next_installment.due_date.strftime("%d/%m") %>
            <% else %>
              ‚Äî
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Device information -->
  <% if @loan.device %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 mb-8">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">üì± Dispositivo Asignado</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Modelo</p>
          <p class="font-medium"><%= @loan.device.phone_model.brand %> <%= @loan.device.phone_model.model %></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">IMEI</p>
          <p class="font-medium"><%= @loan.device.imei %></p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500">Color</p>
          <p class="font-medium"><%= @loan.device.color %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Two-column layout for schedule and payments -->
  <div class="grid grid-cols-1 lg:grid-cols-5 gap-4 md:gap-6">
    <!-- Installment schedule - takes 3/5 of space on lg screens -->
    <div class="lg:col-span-3 bg-white rounded-xl shadow-md border border-gray-200 p-4 md:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-base md:text-lg font-semibold text-gray-900">Calendario de Cuotas</h3>
        <span class="text-xs text-gray-500"><%= @installments.count %> cuotas</span>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">#</th>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Vencimiento</th>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Monto</th>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
              <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Pagado</th>
              <% if policy(Installment).mark_paid? %>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Acci√≥n</th>
              <% end %>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @installments.each do |installment| %>
              <tr class="hover:bg-gray-50">
                <td class="px-3 py-2 whitespace-nowrap font-medium text-gray-900"><%= installment.installment_number %></td>
                <td class="px-3 py-2 whitespace-nowrap text-gray-900"><%= installment.due_date.strftime("%d/%m/%Y") %></td>
                <td class="px-3 py-2 whitespace-nowrap text-gray-900">L. <%= number_with_delimiter(installment.amount, delimiter: ',') %></td>
                <td class="px-3 py-2 whitespace-nowrap">
                  <% status_class = case installment.status
                    when 'paid' then 'bg-green-100 text-green-800'
                    when 'overdue' then 'bg-red-100 text-red-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-gray-100 text-gray-800'
                  end %>
                  <span class="px-2 py-0.5 text-xs rounded-full font-medium <%= status_class %>">
                    <%= installment_status_es(installment.status) %>
                  </span>
                </td>
                <td class="px-3 py-2 whitespace-nowrap text-gray-900">
                  <% if installment.paid_amount && installment.paid_amount > 0 %>
                    L. <%= number_with_delimiter(installment.paid_amount, delimiter: ',') %>
                    <% if installment.fully_paid? %>
                      <span class="text-green-600">‚úì</span>
                    <% else %>
                      <span class="text-orange-600 text-xs">(parcial)</span>
                    <% end %>
                  <% else %>
                    -
                  <% end %>
                </td>
                <% if policy(installment).mark_paid? && !installment.fully_paid? %>
                  <td class="px-3 py-2 whitespace-nowrap">
                    <button type="button"
                            onclick="openMarkPaidModal(<%= installment.id %>, <%= installment.installment_number %>, <%= installment.remaining_amount %>)"
                            class="text-[#125282] hover:text-[#0f4670] font-medium text-xs">
                      Pagar
                    </button>
                  </td>
                <% elsif policy(Installment).mark_paid? %>
                  <td class="px-3 py-2 whitespace-nowrap text-gray-400">‚Äî</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Payment history - takes 2/5 of space on lg screens -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-md border border-gray-200 p-4 md:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-base md:text-lg font-semibold text-gray-900">Historial de Pagos</h3>
        <span class="text-xs text-gray-500"><%= @payments.count %> pagos</span>
      </div>
      <% if @payments.any? %>
        <div class="space-y-3">
          <% @payments.each do |payment| %>
            <div class="border border-gray-100 rounded-lg p-3 hover:bg-gray-50">
              <div class="flex justify-between items-start mb-2">
                <span class="text-sm font-medium text-gray-900">L. <%= number_with_delimiter(format("%.2f", payment.amount.to_f), delimiter: ',') %></span>
                <span class="px-2 py-0.5 text-xs rounded-full font-medium bg-green-100 text-green-800">Verificado</span>
              </div>
              <div class="flex justify-between text-xs text-gray-500">
                <span><%= payment.payment_date.strftime("%d/%m/%Y") %></span>
                <span><%= payment_method_es(payment.payment_method) %></span>
              </div>
              <% if payment.verification_image.attached? || payment.receipt_image.attached? %>
                <div class="mt-2 pt-2 border-t border-gray-100">
                  <% if payment.verification_image.attached? %>
                    <%= link_to "Ver comprobante", rails_blob_path(payment.verification_image, disposition: "inline"), class: "text-xs text-[#125282] hover:underline", target: "_blank" %>
                  <% elsif payment.receipt_image.attached? %>
                    <%= link_to "Ver comprobante", rails_blob_path(payment.receipt_image, disposition: "inline"), class: "text-xs text-[#125282] hover:underline", target: "_blank" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-6">
          <svg class="mx-auto h-10 w-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
          </svg>
          <p class="mt-2 text-sm text-gray-500">Sin pagos registrados</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Mark as Paid Modal (Admin/Supervisor only) -->
<% if policy(Installment).mark_paid? %>
  <div id="mark-paid-modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 overflow-y-auto">
    <div class="bg-white rounded-xl shadow-xl p-6 max-w-lg w-full mx-4 my-8">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900">Marcar Cuota como Pagada</h3>
        <button type="button" onclick="closeMarkPaidModal()" class="text-gray-400 hover:text-gray-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mb-4">
        <p class="text-blue-800 text-sm">
          <strong>Cuota #<span id="modal-installment-number"></span></strong><br>
          Monto pendiente: <strong>L. <span id="modal-remaining-amount"></span></strong>
        </p>
      </div>

      <form id="mark-paid-form" method="post" enctype="multipart/form-data">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="space-y-4">
          <!-- Amount -->
          <div>
            <label for="amount" class="block text-sm font-medium text-gray-700 mb-2">
              Monto Pagado (L.)
            </label>
            <input type="number" name="amount" id="modal-amount" step="0.01" min="0" required
                   class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent"
                   placeholder="0.00">
          </div>

          <!-- Payment Date -->
          <div>
            <label for="payment_date" class="block text-sm font-medium text-gray-700 mb-2">
              Fecha del Pago
            </label>
            <input type="date" name="payment_date" id="modal-payment-date" required
                   value="<%= Date.current %>"
                   class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent">
          </div>

          <!-- Payment Method -->
          <div>
            <label for="payment_method" class="block text-sm font-medium text-gray-700 mb-2">
              M√©todo de Pago
            </label>
            <select name="payment_method" id="modal-payment-method" required
                    class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent">
              <option value="transfer">Transferencia</option>
              <option value="cash">Efectivo</option>
              <option value="card">Tarjeta</option>
              <option value="other">Otro</option>
            </select>
          </div>

          <!-- Bank Source -->
          <div>
            <label for="bank_source" class="block text-sm font-medium text-gray-700 mb-2">
              Banco / Fuente <span class="text-gray-400">(opcional)</span>
            </label>
            <select name="bank_source" id="modal-bank-source"
                    class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent">
              <option value="">-- Seleccionar --</option>
              <option value="BAC Honduras">BAC Honduras</option>
              <option value="Banpais">Banpais</option>
              <option value="Banco Atl√°ntida">Banco Atl√°ntida</option>
              <option value="Banco Ficohsa">Banco Ficohsa</option>
              <option value="Banco de Occidente">Banco de Occidente</option>
              <option value="Banco Promerica">Banco Promerica</option>
              <option value="Tigo Money">Tigo Money</option>
              <option value="Efectivo en Tienda">Efectivo en Tienda</option>
              <option value="Otro">Otro</option>
            </select>
          </div>

          <!-- Reference Number -->
          <div>
            <label for="reference_number" class="block text-sm font-medium text-gray-700 mb-2">
              N√∫mero de Referencia <span class="text-gray-400">(opcional)</span>
            </label>
            <input type="text" name="reference_number" id="modal-reference-number"
                   class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent"
                   placeholder="Ej: 123456789, TRX-001234">
          </div>

          <!-- Verification Image -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Comprobante de Pago <span class="text-gray-400">(opcional)</span>
            </label>
            <label for="modal-verification-image" class="flex flex-col items-center justify-center w-full h-24 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors">
              <div class="flex flex-col items-center justify-center py-3">
                <svg class="w-6 h-6 mb-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <p class="text-xs text-gray-500"><span class="font-semibold text-[#125282]">Clic para subir</span></p>
              </div>
            </label>
            <input type="file" name="verification_image" id="modal-verification-image" accept="image/*" class="sr-only">
          </div>

          <!-- Notes -->
          <div>
            <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
              Notas <span class="text-gray-400">(opcional)</span>
            </label>
            <textarea name="notes" id="modal-notes" rows="2"
                      class="w-full border border-gray-300 rounded-lg p-3 text-gray-900 focus:ring-2 focus:ring-[#125282] focus:border-transparent resize-none"
                      placeholder="Notas adicionales..."></textarea>
          </div>
        </div>

        <div class="flex gap-3 mt-6">
          <button type="button" onclick="closeMarkPaidModal()"
                  class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium transition-colors">
            Cancelar
          </button>
          <button type="submit"
                  class="flex-1 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
            Confirmar Pago
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function openMarkPaidModal(installmentId, installmentNumber, remainingAmount) {
      document.getElementById('mark-paid-modal').classList.remove('hidden');
      document.getElementById('modal-installment-number').textContent = installmentNumber;
      document.getElementById('modal-remaining-amount').textContent = remainingAmount.toLocaleString('es-HN', {minimumFractionDigits: 2});
      document.getElementById('modal-amount').value = remainingAmount;
      document.getElementById('mark-paid-form').action = '/admin/installments/' + installmentId + '/mark_paid';
      document.getElementById('modal-amount').focus();
    }

    function closeMarkPaidModal() {
      document.getElementById('mark-paid-modal').classList.add('hidden');
      document.getElementById('mark-paid-form').reset();
    }

    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeMarkPaidModal();
      }
    });

    // Close modal when clicking outside
    document.getElementById('mark-paid-modal')?.addEventListener('click', function(e) {
      if (e.target === this) closeMarkPaidModal();
    });
  </script>
<% end %>
<% content_for :title, "Tracking de Préstamos - MOVICUOTAS" %>

<%= turbo_stream_from "vendor_loans" %>

<div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-6 py-4">
  <%= render Vendor::BreadcrumbComponent.new(items: [{ name: "Préstamos" }]) %>

  <!-- Page header -->
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#125282]">Tracking de Préstamos</h1>
    <p class="text-gray-600 mt-1 sm:mt-2 text-sm sm:text-base">Visualiza y gestiona todos los préstamos activos y completados.</p>
  </div>

  <!-- Stats summary -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 lg:gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm lg:text-lg font-semibold text-[#125282]">Total</h3>
          <p class="text-gray-600 text-xs mt-1 hidden lg:block">Préstamos asignados</p>
        </div>
        <div class="text-xl lg:text-3xl font-bold text-gray-800"><%= @loans.total_count rescue @loans.count %></div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm lg:text-lg font-semibold text-green-600">Activos</h3>
          <p class="text-gray-600 text-xs mt-1 hidden lg:block">En curso</p>
        </div>
        <div class="text-xl lg:text-3xl font-bold text-green-700"><%= @active_count %></div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm lg:text-lg font-semibold text-blue-600">Completados</h3>
          <p class="text-gray-600 text-xs mt-1 hidden lg:block">Pagados</p>
        </div>
        <div class="text-xl lg:text-3xl font-bold text-blue-700"><%= @completed_count %></div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm lg:text-lg font-semibold text-red-600">En Mora</h3>
          <p class="text-gray-600 text-xs mt-1 hidden lg:block">Atrasados</p>
        </div>
        <div class="text-xl lg:text-3xl font-bold text-red-700"><%= @overdue_count %></div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-4 lg:p-6 mb-6">
    <% if @default_filters %>
      <div class="mb-3 p-2 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-sm text-blue-800">
          <span class="font-medium">Filtros por defecto:</span> Préstamos activos con cuotas vencidas.
          <%= link_to "Ver todos", vendor_loans_path(clear_filters: true), class: "text-blue-600 hover:underline font-medium ml-1" %>
        </p>
      </div>
    <% end %>

    <%= form_with url: vendor_loans_path, method: :get, class: "space-y-4" do %>
      <input type="hidden" name="filtered" value="true">
      <!-- Search -->
      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Buscar</label>
        <input type="text" name="search" value="<%= params[:search] %>"
               placeholder="Cliente, identidad, contrato o IMEI..."
               class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent">
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
        <!-- Estado del Préstamo -->
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Estado del Préstamo</label>
          <select name="status" class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent" onchange="this.form.submit()">
            <option value="">Todos</option>
            <option value="draft" <%= "selected" if @status_filter == "draft" %>>Borrador</option>
            <option value="active" <%= "selected" if @status_filter == "active" %>>Activo</option>
            <option value="paid" <%= "selected" if @status_filter == "paid" %>>Pagado</option>
            <option value="overdue" <%= "selected" if @status_filter == "overdue" %>>En Mora</option>
            <option value="cancelled" <%= "selected" if @status_filter == "cancelled" %>>Cancelado</option>
          </select>
        </div>

        <!-- Estado de Cuotas -->
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Estado de Cuotas</label>
          <select name="cuotas" class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent" onchange="this.form.submit()">
            <option value="">Todas</option>
            <option value="con_vencidas" <%= "selected" if @cuotas_filter == "con_vencidas" %>>Con cuotas vencidas</option>
            <option value="sin_vencidas" <%= "selected" if @cuotas_filter == "sin_vencidas" %>>Sin cuotas vencidas</option>
            <option value="proximas" <%= "selected" if @cuotas_filter == "proximas" %>>Próximas a vencer (7 días)</option>
            <option value="pendientes" <%= "selected" if @cuotas_filter == "pendientes" %>>Con cuotas pendientes</option>
          </select>
        </div>

        <!-- Estado del Dispositivo (MDM) -->
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Dispositivo (MDM)</label>
          <select name="device_status" class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#125282] focus:border-transparent" onchange="this.form.submit()">
            <option value="">Todos</option>
            <option value="unlocked" <%= "selected" if @device_status_filter == "unlocked" %>>Desbloqueado</option>
            <option value="locked" <%= "selected" if @device_status_filter == "locked" %>>Bloqueado</option>
            <option value="pending" <%= "selected" if @device_status_filter == "pending" %>>Bloqueo Pendiente</option>
          </select>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-2">
        <button type="submit" class="flex-1 sm:flex-none px-6 py-2 bg-[#125282] text-white font-medium rounded-lg hover:bg-[#0f4670] text-sm transition-colors">
          Buscar
        </button>
        <% if params[:search].present? || @status_filter.present? || @cuotas_filter.present? || @device_status_filter.present? %>
          <%= link_to "Limpiar", vendor_loans_path(clear_filters: true), class: "flex-1 sm:flex-none px-6 py-2 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 text-sm text-center transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Mobile Card View -->
  <div class="block lg:hidden space-y-3">
    <% if @loans.any? %>
      <% @loans.each do |loan| %>
        <%= render "loan_mobile_card", loan: loan %>
      <% end %>
    <% else %>
      <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <p class="text-lg font-medium text-gray-900 mb-2">No hay préstamos registrados</p>
        <p class="text-gray-600 text-sm mb-4">Comienza una nueva búsqueda de cliente para iniciar un préstamo.</p>
        <%= link_to "Nueva Búsqueda", vendor_customer_search_path, class: "inline-block px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
      </div>
    <% end %>
  </div>

  <!-- Desktop Table View -->
  <div class="hidden lg:block bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <p class="px-4 py-2 text-xs text-gray-500 bg-gray-50 border-b border-gray-200">
      <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      Haz clic en cualquier fila para ver los detalles del préstamo
    </p>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <%= sortable_header :created_at, "Creado" %>
          <%= sortable_header :contract_number, "Contrato" %>
          <%= sortable_header :customer_name, "Cliente" %>
          <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dispositivo</th>
          <%= sortable_header :total_amount, "Monto" %>
          <%= sortable_header :status, "Estado" %>
          <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cuotas</th>
          <%= sortable_header :next_due_date, "Próx. Venc." %>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @loans.any? %>
          <% @loans.each do |loan| %>
            <%= render "loan_desktop_row", loan: loan %>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-lg font-medium text-gray-900 mb-2">No hay préstamos registrados</p>
                <p class="text-gray-600 mb-4">Comienza una nueva búsqueda de cliente para iniciar un préstamo.</p>
                <%= link_to "Nueva Búsqueda", vendor_customer_search_path, class: "inline-block px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if @loans.respond_to?(:total_pages) && @loans.total_pages > 1 %>
    <% pagination_params = { search: params[:search], status: @status_filter, cuotas: @cuotas_filter, device_status: @device_status_filter, sort: params[:sort], direction: params[:direction] }.compact_blank %>
    <div class="mt-6 flex flex-col items-center gap-4">
      <!-- Mobile Pagination -->
      <div class="flex lg:hidden items-center gap-3">
        <% if @loans.first_page? %>
          <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">← Anterior</span>
        <% else %>
          <%= link_to "← Anterior", vendor_loans_path(pagination_params.merge(page: @loans.current_page - 1)),
              class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        <% end %>

        <span class="text-sm text-gray-600"><%= @loans.current_page %> / <%= @loans.total_pages %></span>

        <% if @loans.last_page? %>
          <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded-lg text-sm">Siguiente →</span>
        <% else %>
          <%= link_to "Siguiente →", vendor_loans_path(pagination_params.merge(page: @loans.current_page + 1)),
              class: "px-4 py-2 bg-[#125282] text-white rounded-lg font-medium text-sm" %>
        <% end %>
      </div>

      <!-- Desktop Pagination -->
      <div class="hidden lg:flex items-center gap-2">
        <% unless @loans.first_page? %>
          <%= link_to "← Anterior", vendor_loans_path(pagination_params.merge(page: @loans.current_page - 1)),
              class: "px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 text-sm" %>
        <% end %>

        <span class="px-3 py-2 text-sm text-gray-600">Página <%= @loans.current_page %> de <%= @loans.total_pages %></span>

        <% unless @loans.last_page? %>
          <%= link_to "Siguiente →", vendor_loans_path(pagination_params.merge(page: @loans.current_page + 1)),
              class: "px-3 py-2 bg-[#125282] text-white rounded-lg hover:bg-[#125282]/90 text-sm" %>
        <% end %>
      </div>

      <p class="text-sm text-gray-500">
        Mostrando <%= @loans.offset_value + 1 %> a <%= [@loans.offset_value + @loans.size, @loans.total_count].min %> de <%= @loans.total_count %> préstamos
      </p>
    </div>
  <% end %>
</div>

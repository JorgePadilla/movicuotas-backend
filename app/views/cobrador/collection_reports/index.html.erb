<% content_for :title, "Reportes de Mora - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-[#125282]">Reportes de Mora</h1>
    <%= link_to "Volver al Dashboard", cobrador_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-blue-700" %>
  </div>

  <!-- Date Range Filter -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtros</h2>

    <%= form_with url: cobrador_collection_reports_path, method: :get, local: true, class: "grid grid-cols-1 gap-4 sm:grid-cols-3" do |f| %>
      <div>
        <%= f.label :start_date, "Fecha Inicio", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :start_date,
                        value: @date_range.begin,
                        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :end_date, "Fecha Fin", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :end_date,
                        value: @date_range.end,
                        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
      </div>

      <div class="flex items-end gap-2">
        <%= f.submit "Aplicar Filtro", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-red-100 p-3 rounded-full">
          <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">Cuotas en Mora</h3>
          <p class="text-2xl font-bold text-gray-900"><%= @report_data[:summary][:total_overdue_count] %></p>
          <p class="text-xs text-gray-500">
            RD$ <%= number_with_precision(@report_data[:summary][:total_overdue_amount], precision: 2) %>
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-orange-100 p-3 rounded-full">
          <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">Dispositivos Bloqueados</h3>
          <p class="text-2xl font-bold text-gray-900"><%= @report_data[:summary][:devices_blocked] %></p>
          <p class="text-xs text-gray-500">Vía MDM</p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-yellow-100 p-3 rounded-full">
          <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">En Riesgo (Desbloqueados)</h3>
          <p class="text-2xl font-bold text-gray-900"><%= @report_data[:summary][:devices_at_risk] %></p>
          <p class="text-xs text-gray-500">Cuotas vencidas</p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-100 p-3 rounded-full">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-sm font-medium text-gray-500">Tasa de Recuperación</h3>
          <p class="text-2xl font-bold text-gray-900"><%= @report_data[:recovery_rate] %>%</p>
          <p class="text-xs text-gray-500">Durante período</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Overdue by Days -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Mora por Rango de Días</h2>
      <div class="space-y-3">
        <% @report_data[:by_days].each do |range, data| %>
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-700"><%= range %></span>
            <div class="flex items-center gap-2">
              <span class="text-sm text-gray-600"><%= data[:count] %> cuotas</span>
              <span class="text-sm font-semibold text-gray-900">
                RD$ <%= number_with_precision(data[:total], precision: 2) %>
              </span>
            </div>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <% percentage = (@report_data[:by_days].values.max[:total] > 0) ? (data[:total] / @report_data[:by_days].values.max[:total] * 100) : 0 %>
            <div class="bg-red-600 h-2 rounded-full" style="width: <%= percentage %>%"></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Overdue by Branch -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Mora por Sucursal</h2>
      <div class="space-y-3">
        <% if @report_data[:by_branch].any? %>
          <% @report_data[:by_branch].each do |branch_data| %>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700"><%= branch_data[:branch] %></span>
              <div class="flex items-center gap-2">
                <span class="text-sm text-gray-600"><%= branch_data[:loan_count] %> préstamos</span>
                <span class="text-sm font-semibold text-gray-900">
                  RD$ <%= number_with_precision(branch_data[:total_amount], precision: 2) %>
                </span>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-sm text-gray-500">No hay datos por sucursal</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Blocks -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Bloqueos Recientes</h2>
    </div>
    <% if @recent_blocks.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IMEI</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contrato</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dispositivo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Bloqueo</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_blocks.each do |device| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-600"><%= device.imei %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= device.loan&.customer&.full_name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= device.loan&.contract_number %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= "#{device.brand} #{device.model}" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= l device.locked_at, format: :short %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @recent_blocks.total_pages > 1 %>
        <div class="mt-6 mb-6 flex justify-center items-center gap-2 px-6 py-4 border-t border-gray-200">
          <div class="flex items-center gap-2">
            <% if @recent_blocks.first_page? %>
              <span class="px-3 py-2 text-gray-400 cursor-not-allowed">← Anterior</span>
            <% else %>
              <%= link_to "← Anterior", cobrador_collection_reports_path(start_date: params[:start_date], end_date: params[:end_date], page: @recent_blocks.current_page - 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
            <% end %>

            <div class="flex items-center gap-1">
              <% (1..@recent_blocks.total_pages).each do |page| %>
                <% if page == @recent_blocks.current_page %>
                  <span class="px-3 py-2 bg-[#125282] text-white rounded-lg font-medium">
                    <%= page %>
                  </span>
                <% elsif (page - @recent_blocks.current_page).abs <= 1 || page == 1 || page == @recent_blocks.total_pages %>
                  <%= link_to page, cobrador_collection_reports_path(start_date: params[:start_date], end_date: params[:end_date], page: page), class: "px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium transition-colors" %>
                <% elsif page == 2 && @recent_blocks.current_page > 3 %>
                  <span class="px-2 py-2 text-gray-500">...</span>
                <% elsif page == @recent_blocks.total_pages - 1 && @recent_blocks.current_page < @recent_blocks.total_pages - 2 %>
                  <span class="px-2 py-2 text-gray-500">...</span>
                <% end %>
              <% end %>
            </div>

            <% if @recent_blocks.last_page? %>
              <span class="px-3 py-2 text-gray-400 cursor-not-allowed">Siguiente →</span>
            <% else %>
              <%= link_to "Siguiente →", cobrador_collection_reports_path(start_date: params[:start_date], end_date: params[:end_date], page: @recent_blocks.current_page + 1), class: "px-3 py-2 bg-[#125282] text-white rounded-lg font-medium hover:bg-[#0f4670] transition-colors" %>
            <% end %>
          </div>
        </div>

        <div class="text-center text-sm text-gray-500 px-6 pb-4">
          Página <%= @recent_blocks.current_page %> de <%= @recent_blocks.total_pages %> • Mostrando <%= @recent_blocks.size %> de <%= @recent_blocks.total_count %> bloqueos
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-12 text-center">
        <p class="text-gray-500">No hay bloqueos recientes en este período.</p>
      </div>
    <% end %>
  </div>
</div>

<% content_for :title, "Dispositivos en Mora - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-[#125282]">Dispositivos en Mora</h1>
    <%= link_to "Volver al Dashboard", cobrador_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-blue-700" %>
  </div>

  <!-- Filters Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtros</h2>

    <%= form_with url: cobrador_overdue_devices_path, method: :get, local: true, class: "grid grid-cols-1 gap-4 sm:grid-cols-3" do |f| %>
      <div>
        <%= f.label :min_days, "DÃ­as de Atraso MÃ­nimos", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :min_days,
                           value: @min_days,
                           placeholder: "e.g., 7",
                           class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :min_amount, "Monto MÃ­nimo (RD$)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :min_amount,
                           value: @min_amount,
                           step: 0.01,
                           placeholder: "e.g., 1000",
                           class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :branch, "Sucursal", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :branch,
                        value: @branch_filter,
                        placeholder: "e.g., BRG001",
                        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
      </div>

      <div class="sm:col-span-3 flex gap-2">
        <%= f.submit "Aplicar Filtros", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-blue-700" %>
        <%= link_to "Limpiar Filtros", cobrador_overdue_devices_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- Devices Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @devices.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IMEI</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">TelÃ©fono</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contrato</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cuotas Vencidas</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto (RD$)</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">DÃ­as de Atraso</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @devices.each do |device| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= device.customer_name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 font-mono"><%= device.imei %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= "#{device.brand} #{device.model}" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= device.contract_number %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-red-600"><%= device.overdue_count %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-red-600">
                RD$ <%= number_with_precision(device.total_overdue || 0, precision: 2) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600 font-semibold">
                <%= device.days_overdue %> dÃ­as
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if device.lock_status == "locked" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">ðŸ”´ Bloqueado</span>
                <% elsif device.lock_status == "pending" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">ðŸŸ¡ Pendiente</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">ðŸŸ¢ Desbloqueado</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                <%= link_to "Ver Detalles", cobrador_overdue_device_path(device), class: "text-[#125282] hover:text-blue-700 font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay dispositivos en mora</h3>
        <p class="mt-1 text-sm text-gray-500">No se encontraron dispositivos que coincidan con los filtros seleccionados.</p>
      </div>
    <% end %>
  </div>
</div>

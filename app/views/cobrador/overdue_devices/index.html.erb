<% content_for :title, "Dispositivos en Mora - MOVICUOTAS" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-[#125282]">Dispositivos en Mora</h1>
      <p class="text-gray-600 mt-1">Total: <strong><%= @total_overdue_count %></strong> dispositivos | Monto: <strong>RD$ <%= number_with_precision(@total_overdue_amount, precision: 2) %></strong></p>
    </div>
    <%= link_to "Volver al Dashboard", cobrador_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-blue-700" %>
  </div>

  <!-- Advanced Filters Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtros Avanzados</h2>

    <%= form_with url: cobrador_overdue_devices_path, method: :get, local: true do |f| %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4 mb-4">
        <!-- Min Days Filter -->
        <div>
          <%= f.label :min_days, "DÃ­as de Atraso MÃ­nimos", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :min_days,
                             value: @min_days,
                             placeholder: "e.g., 7",
                             class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>

        <!-- Max Amount Filter -->
        <div>
          <%= f.label :min_amount, "Monto MÃ­nimo (RD$)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :min_amount,
                             value: @min_amount,
                             step: 0.01,
                             placeholder: "e.g., 1000",
                             class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>

        <!-- Days Range Filter -->
        <div>
          <%= f.label :days_range, "Rango de DÃ­as", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :days_range,
                      options_for_select(
                        [
                          ["Todos", ""],
                          ["1-7 dÃ­as", "1-7"],
                          ["8-15 dÃ­as", "8-15"],
                          ["16-30 dÃ­as", "16-30"],
                          ["30+ dÃ­as", "30+"]
                        ],
                        params[:days_range]
                      ),
                      { include_blank: false },
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>

        <!-- Branch Filter -->
        <div>
          <%= f.label :branch, "Sucursal", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :branch,
                          value: @branch_filter,
                          placeholder: "e.g., BRG001",
                          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4 mb-4">
        <!-- IMEI Search -->
        <div>
          <%= f.label :imei, "Buscar IMEI", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :imei,
                          value: @imei_search,
                          placeholder: "Ãºltimos 5 dÃ­gitos",
                          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>

        <!-- Customer Search -->
        <div>
          <%= f.label :customer, "Buscar Cliente", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :customer,
                          value: @customer_search,
                          placeholder: "nombre del cliente",
                          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>

        <!-- Sort Column -->
        <div>
          <%= f.label :sort, "Ordenar por", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :sort,
                      options_for_select(
                        [
                          ["DÃ­as de Atraso", "days_overdue"],
                          ["Monto Adeudado", "total_overdue"],
                          ["Cliente", "customer_name"],
                          ["Fecha de Vencimiento", "first_overdue_date"]
                        ],
                        @sort_column
                      ),
                      { include_blank: false },
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>

        <!-- Sort Order -->
        <div>
          <%= f.label :order, "Orden", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :order,
                      options_for_select(
                        [
                          ["Descendente (Mayor a Menor)", "DESC"],
                          ["Ascendente (Menor a Mayor)", "ASC"]
                        ],
                        @sort_order
                      ),
                      { include_blank: false },
                      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#125282] focus:border-transparent" %>
        </div>
      </div>

      <div class="flex gap-2 mb-4 flex-wrap">
        <%= f.submit "ðŸ” Aplicar Filtros", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[#125282] hover:bg-blue-700" %>
        <%= link_to "âŒ Limpiar Filtros", cobrador_overdue_devices_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "ðŸ“¥ Exportar CSV", cobrador_overdue_devices_path(format: :csv, min_days: params[:min_days], min_amount: params[:min_amount], days_range: params[:days_range], branch: params[:branch], imei: params[:imei], customer: params[:customer], sort: @sort_column, order: @sort_order), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      </div>

      <!-- Per Page Selection -->
      <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
        <label class="text-sm font-medium text-gray-700">Mostrar por pÃ¡gina:</label>
        <%= f.select :per_page,
                    options_for_select(@per_page_options, @current_per_page),
                    { include_blank: false },
                    { onchange: "this.form.submit();", class: "px-3 py-1 border border-gray-300 rounded-md text-sm" } %>
      </div>
    <% end %>
  </div>

  <!-- Bulk Actions Section -->
  <div id="bulk-actions" class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6 hidden">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-blue-900">
          <span id="selected-count">0</span> dispositivos seleccionados
        </p>
      </div>
      <div class="flex gap-2">
        <%= link_to "ðŸ”´ Bloquear Seleccionados",
                    "#",
                    id: "bulk-block-btn",
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700",
                    onclick: "return handleBulkBlock(event);" %>
        <button type="button" onclick="clearAllSelections()" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Limpiar SelecciÃ³n
        </button>
      </div>
    </div>
  </div>

  <!-- Devices Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @devices.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200" id="devices-table">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <input type="checkbox" id="select-all" onchange="toggleAllSelections()" class="rounded border-gray-300">
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IMEI</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">TelÃ©fono</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contrato</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Cuotas</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Monto (RD$)</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">DÃ­as</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @devices.each do |device| %>
              <tr class="hover:bg-gray-50 transition device-row" data-device-id="<%= device.id %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <input type="checkbox" class="device-checkbox rounded border-gray-300" value="<%= device.id %>" onchange="updateBulkActionsUI()">
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= device.customer_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 font-mono text-xs">
                  <%= device.imei[-5..] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= "#{device.brand} #{device.model}".truncate(20) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 font-mono text-xs">
                  <%= device.contract_number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-right">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= device.overdue_count %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-right text-red-600">
                  RD$ <%= number_with_precision(device.total_overdue || 0, precision: 2) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= device.days_overdue > 30 ? 'bg-red-100 text-red-800' : device.days_overdue > 15 ? 'bg-orange-100 text-orange-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= device.days_overdue %> dÃ­as
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if device.lock_status == "locked" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      ðŸ”´ Bloqueado
                    </span>
                  <% elsif device.lock_status == "pending" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      ðŸŸ¡ Pendiente
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      ðŸŸ¢ Desbloqueado
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right space-x-2">
                  <%= link_to "Ver", cobrador_overdue_device_path(device), class: "text-[#125282] hover:text-blue-700 font-medium" %>
                  <% if device.lock_status == "unlocked" %>
                    <%= link_to "Bloquear", cobrador_overdue_device_block_path(device), class: "text-red-600 hover:text-red-700 font-medium" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination Controls -->
      <div class="bg-white px-6 py-4 border-t border-gray-200 flex items-center justify-between">
        <div class="text-sm text-gray-600">
          Mostrando <strong><%= @devices.offset_value + 1 %></strong> a <strong><%= [@devices.offset_value + @devices.size, @devices.total_count].min %></strong> de <strong><%= @devices.total_count %></strong>
        </div>
        <div class="flex gap-2">
          <%= paginate @devices, theme: 'bootstrap-5' %>
        </div>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay dispositivos en mora</h3>
        <p class="mt-1 text-sm text-gray-500">No se encontraron dispositivos que coincidan con los filtros seleccionados.</p>
      </div>
    <% end %>
  </div>
</div>

<script>
function toggleAllSelections() {
  const selectAllCheckbox = document.getElementById('select-all');
  const checkboxes = document.querySelectorAll('.device-checkbox');
  checkboxes.forEach(checkbox => {
    checkbox.checked = selectAllCheckbox.checked;
  });
  updateBulkActionsUI();
}

function updateBulkActionsUI() {
  const checkboxes = document.querySelectorAll('.device-checkbox:checked');
  const bulkActionsDiv = document.getElementById('bulk-actions');
  const selectedCount = document.getElementById('selected-count');
  
  selectedCount.textContent = checkboxes.length;
  
  if (checkboxes.length > 0) {
    bulkActionsDiv.classList.remove('hidden');
  } else {
    bulkActionsDiv.classList.add('hidden');
  }
}

function clearAllSelections() {
  document.querySelectorAll('.device-checkbox').forEach(checkbox => {
    checkbox.checked = false;
  });
  document.getElementById('select-all').checked = false;
  updateBulkActionsUI();
}

function handleBulkBlock(event) {
  event.preventDefault();
  const checkboxes = document.querySelectorAll('.device-checkbox:checked');
  const deviceIds = Array.from(checkboxes).map(cb => cb.value).join(',');
  
  if (!deviceIds) {
    alert('Por favor selecciona al menos un dispositivo');
    return false;
  }
  
  window.location.href = `/cobrador/bulk-operations?device_ids=${deviceIds}`;
  return false;
}
</script>

<nav class="mb-4 sm:mb-6">
  <div class="flex items-center gap-2 text-sm">
    <%= link_to vendor_dashboard_path, class: "flex items-center text-[#125282] hover:text-[#0f4670] transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
      <span class="hidden sm:inline">Dashboard</span>
    <% end %>

    <% items.each do |item| %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>

      <% if item.path.present? %>
        <%= link_to item.name, item.path, class: "text-[#125282] hover:text-[#0f4670] hover:underline transition-colors" %>
      <% else %>
        <span class="text-gray-600 font-medium truncate max-w-[200px] sm:max-w-none"><%= item.name %></span>
      <% end %>
    <% end %>
  </div>
</nav>
